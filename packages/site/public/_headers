# Security headers for static site hosting (Netlify, Cloudflare Pages)
# NOTE: For production (AWS CloudFront), headers are set via ResponseHeadersPolicy
# Source of truth: packages/infra/lib/shared/csp-config.ts
#
# Keep this file in sync with the CloudFront CSP configuration.
/*
  # Content Security Policy
  # Must match packages/infra/lib/shared/csp-config.ts
  # This is a static memorial site with no external API connections.
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' 'wasm-unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self'; frame-ancestors 'none'; base-uri 'self'; form-action 'self'; upgrade-insecure-requests

  # Other security headers
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: geolocation=(), microphone=(), camera=()

# Cache control headers
/*.html
  Cache-Control: public, max-age=0, must-revalidate

/assets/*
  Cache-Control: public, max-age=31536000, immutable

/_astro/*
  Cache-Control: public, max-age=31536000, immutable

/icons/*
  Cache-Control: public, max-age=31536000, immutable

/pagefind/*
  Cache-Control: public, max-age=3600

/sw.js
  Cache-Control: public, max-age=0, must-revalidate

/site.webmanifest
  Cache-Control: public, max-age=86400

