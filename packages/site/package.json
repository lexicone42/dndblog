{
  "name": "@dndblog/site",
  "version": "1.0.0",
  "private": true,
  "license": "Apache-2.0",
  "description": "Astro static blog site",
  "type": "module",
  "scripts": {
    "dev": "astro dev",
    "build": "vitest run && astro check && astro build && pagefind --site dist",
    "preview": "astro preview",
    "astro": "astro",
    "typecheck": "astro check",
    "clean": "rm -rf dist .astro",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:update": "vitest run --update"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.0",
    "@astrojs/rss": "^4.0.14",
    "astro": "^5.0.0",
    "easymde": "^2.20.0",
    "marked": "^17.0.1"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.17",
    "happy-dom": "^20.1.0",
    "pagefind": "^1.4.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "vitest": "^4.0.17"
  }
}
