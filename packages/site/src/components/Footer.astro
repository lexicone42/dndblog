---
const currentYear = new Date().getFullYear();
---

<footer class="footer">
  <div class="container footer__container">
    <div class="footer__content">
      <p class="footer__copyright">
        &copy; {currentYear} Rudiger's Evocation of Events. All rights reserved.
      </p>
      <nav class="footer__nav" aria-label="Footer navigation">
        <a href="/rss.xml" class="footer__link">RSS</a>
        <span class="footer__separator" aria-hidden="true">Â·</span>
        <a href="https://github.com/bryanegan/dndblog" class="footer__link" rel="noopener noreferrer">
          GitHub
        </a>
      </nav>
    </div>
    <p class="footer__tagline">
      Built with <a href="https://astro.build" class="footer__link" rel="noopener noreferrer">Astro</a>
    </p>
  </div>
</footer>

<style>
  .footer {
    border-top: 2px solid var(--color-border);
    padding: var(--space-xl) 0;
    margin-top: auto;
    background-color: var(--color-bg-secondary);
  }

  .footer__container {
    text-align: center;
  }

  .footer__content {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    gap: var(--space-md);
    margin-bottom: var(--space-sm);
  }

  .footer__copyright {
    color: var(--color-text-secondary);
    font-size: var(--text-sm);
    margin: 0;
    font-family: var(--font-serif);
  }

  .footer__nav {
    display: flex;
    gap: var(--space-sm);
    align-items: center;
  }

  .footer__separator {
    color: var(--color-gold);
  }

  .footer__link {
    color: var(--color-text-secondary);
    text-decoration: none;
    font-size: var(--text-sm);
    transition: color var(--transition-fast);
  }

  .footer__link:hover {
    color: var(--color-gold);
    text-decoration: underline;
  }

  .footer__tagline {
    color: var(--color-text-muted);
    font-size: var(--text-xs);
    margin: 0;
    font-style: italic;
  }
</style>
