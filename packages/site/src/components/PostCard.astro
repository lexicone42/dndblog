---
export interface Props {
  title: string;
  description: string;
  pubDate: Date;
  slug: string;
  heroImage?: string;
  tags?: string[];
  readingTime?: number;
}

const { title, description, pubDate, slug, heroImage, tags = [], readingTime } = Astro.props;

const formattedDate = pubDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<article class="post-card">
  <a href={`/blog/${slug}`} class="post-card__link">
    {heroImage && (
      <div class="post-card__image-wrapper">
        <img
          src={heroImage}
          alt=""
          class="post-card__image"
          loading="lazy"
          decoding="async"
        />
      </div>
    )}
    <div class="post-card__content">
      <header class="post-card__header">
        <time datetime={pubDate.toISOString()} class="post-card__date">
          {formattedDate}
        </time>
        {readingTime && (
          <span class="post-card__reading-time">
            {readingTime} min read
          </span>
        )}
      </header>
      <h2 class="post-card__title">{title}</h2>
      <p class="post-card__description">{description}</p>
      {tags.length > 0 && (
        <ul class="post-card__tags">
          {tags.slice(0, 3).map((tag) => (
            <li class="post-card__tag">{tag}</li>
          ))}
        </ul>
      )}
    </div>
  </a>
</article>

<style>
  .post-card {
    border-radius: var(--radius-md);
    background-color: var(--color-bg-secondary);
    border: 2px solid var(--color-border);
    overflow: hidden;
    transition: box-shadow var(--transition-base), transform var(--transition-base), border-color var(--transition-base);
  }

  .post-card:hover {
    box-shadow: var(--shadow-lg);
    transform: translateY(-3px);
    border-color: var(--color-gold);
  }

  .post-card__link {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .post-card__image-wrapper {
    aspect-ratio: 16 / 9;
    overflow: hidden;
    background-color: var(--color-bg-tertiary);
    border-bottom: 2px solid var(--color-border);
  }

  .post-card__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-base);
  }

  .post-card:hover .post-card__image {
    transform: scale(1.05);
  }

  .post-card__content {
    padding: var(--space-lg);
  }

  .post-card__header {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    margin-bottom: var(--space-sm);
  }

  .post-card__date {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    font-family: var(--font-serif);
  }

  .post-card__reading-time {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
  }

  .post-card__reading-time::before {
    content: '~';
    margin-right: var(--space-sm);
  }

  .post-card__title {
    font-size: var(--text-xl);
    font-weight: 700;
    margin: 0 0 var(--space-sm);
    line-height: 1.3;
    color: var(--color-text);
    font-family: var(--font-display);
  }

  .post-card:hover .post-card__title {
    color: var(--color-gold);
  }

  .post-card__description {
    font-size: var(--text-base);
    color: var(--color-text-secondary);
    margin: 0;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .post-card__tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-sm);
    list-style: none;
    padding: 0;
    margin: var(--space-md) 0 0;
  }

  .post-card__tag {
    font-size: var(--text-xs);
    padding: var(--space-xs) var(--space-sm);
    background-color: var(--color-bg-tertiary);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-sm);
    color: var(--color-text-muted);
    font-family: var(--font-serif);
    font-style: italic;
  }
</style>
