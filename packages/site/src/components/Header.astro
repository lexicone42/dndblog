---
const currentPath = Astro.url.pathname;

const navLinks = [
  { href: '/', label: 'Home' },
  { href: '/campaign', label: 'Campaign' },
  { href: '/sessions', label: 'Sessions' },
  { href: '/reference', label: 'Reference' },
];

// Role-based nav links (shown conditionally via client-side JS)
const roleNavLinks = {
  dm: { href: '/dm', label: 'DM' },
  player: { href: '/party', label: 'Party' },
};

function isActive(href: string): boolean {
  if (href === '/') {
    return currentPath === '/';
  }
  return currentPath.startsWith(href);
}
---

<header class="header">
  <div class="container header__container">
    <a href="/" class="header__logo" aria-label="Home">
      <span class="header__logo-text">Rudiger's Evocation of Events</span>
    </a>

    <nav class="header__nav" aria-label="Main navigation">
      <ul class="header__nav-list">
        {navLinks.map(({ href, label }) => (
          <li>
            <a
              href={href}
              class:list={['header__nav-link', { 'header__nav-link--active': isActive(href) }]}
              aria-current={isActive(href) ? 'page' : undefined}
            >
              {label}
            </a>
          </li>
        ))}
        <!-- Role-based nav links (hidden by default, shown via JS) -->
        <li id="nav-dm" class="header__nav-role" style="display: none;">
          <a
            href={roleNavLinks.dm.href}
            class:list={['header__nav-link', 'header__nav-link--dm', { 'header__nav-link--active': isActive(roleNavLinks.dm.href) }]}
            aria-current={isActive(roleNavLinks.dm.href) ? 'page' : undefined}
          >
            {roleNavLinks.dm.label}
          </a>
        </li>
        <li id="nav-player" class="header__nav-role" style="display: none;">
          <a
            href={roleNavLinks.player.href}
            class:list={['header__nav-link', 'header__nav-link--player', { 'header__nav-link--active': isActive(roleNavLinks.player.href) }]}
            aria-current={isActive(roleNavLinks.player.href) ? 'page' : undefined}
          >
            {roleNavLinks.player.label}
          </a>
        </li>
      </ul>
    </nav>

    <form class="header__search" action="/search" method="get" role="search">
      <input
        type="search"
        name="q"
        class="header__search-input"
        placeholder="Search..."
        aria-label="Search the campaign"
      />
    </form>

    <button
      class="header__theme-toggle"
      type="button"
      aria-label="Toggle dark mode"
      id="theme-toggle"
    >
      <svg
        class="header__theme-icon header__theme-icon--light"
        xmlns="http://www.w3.org/2000/svg"
        width="20"
        height="20"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        aria-hidden="true"
      >
        <circle cx="12" cy="12" r="5"></circle>
        <line x1="12" y1="1" x2="12" y2="3"></line>
        <line x1="12" y1="21" x2="12" y2="23"></line>
        <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line>
        <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line>
        <line x1="1" y1="12" x2="3" y2="12"></line>
        <line x1="21" y1="12" x2="23" y2="12"></line>
        <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line>
        <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line>
      </svg>
      <svg
        class="header__theme-icon header__theme-icon--dark"
        xmlns="http://www.w3.org/2000/svg"
        width="20"
        height="20"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        aria-hidden="true"
      >
        <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
      </svg>
    </button>
  </div>
</header>

<style>
  .header {
    position: sticky;
    top: 0;
    z-index: 50;
    background-color: var(--color-bg);
    border-bottom: 2px solid var(--color-border);
    height: var(--header-height);
    box-shadow: var(--shadow-sm);
  }

  .header__container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 100%;
    gap: var(--space-md);
  }

  .header__logo {
    text-decoration: none;
    font-family: var(--font-display);
    font-weight: 700;
    font-size: var(--text-xl);
    color: var(--color-text);
    letter-spacing: 0.02em;
  }

  .header__logo:hover {
    color: var(--color-accent);
  }

  .header__nav-list {
    display: flex;
    list-style: none;
    gap: var(--space-lg);
    padding: 0;
    margin: 0;
  }

  .header__nav-link {
    text-decoration: none;
    color: var(--color-text-secondary);
    font-weight: 500;
    padding: var(--space-xs) var(--space-sm);
    border-radius: var(--radius-sm);
    transition: color var(--transition-fast), background-color var(--transition-fast);
  }

  .header__nav-link:hover {
    color: var(--color-text);
    background-color: var(--color-bg-secondary);
  }

  .header__nav-link--active {
    color: var(--color-accent);
  }

  /* Role-based nav links */
  .header__nav-link--dm {
    color: var(--color-gold);
  }

  .header__nav-link--dm:hover {
    color: var(--color-gold);
    background-color: rgba(var(--color-gold-rgb, 201, 162, 39), 0.1);
  }

  .header__nav-link--player {
    color: var(--color-accent);
  }

  .header__search {
    display: flex;
    align-items: center;
  }

  .header__search-input {
    width: 140px;
    padding: var(--space-xs) var(--space-sm);
    font-size: var(--text-sm);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-sm);
    background: var(--color-bg-secondary);
    color: var(--color-text);
    transition: all var(--transition-fast);
  }

  .header__search-input::placeholder {
    color: var(--color-text-muted);
  }

  .header__search-input:focus {
    outline: none;
    border-color: var(--color-accent);
    width: 180px;
  }

  .header__theme-toggle {
    background: none;
    border: none;
    padding: var(--space-sm);
    cursor: pointer;
    color: var(--color-text-secondary);
    border-radius: var(--radius-sm);
    display: flex;
    align-items: center;
    justify-content: center;
    transition: color var(--transition-fast), background-color var(--transition-fast);
  }

  .header__theme-toggle:hover {
    color: var(--color-text);
    background-color: var(--color-bg-secondary);
  }

  /* Show/hide icons based on theme
     Icons show what will happen on click:
     - Moon visible in light mode (click to go dark)
     - Sun visible in dark mode (click to go light) */
  .header__theme-icon--light {
    display: none;
  }

  @media (prefers-color-scheme: dark) {
    .header__theme-icon--light {
      display: block;
    }
    .header__theme-icon--dark {
      display: none;
    }
  }

  /* When manually set to dark - show sun (click to go light) */
  :global([data-theme='dark']) .header__theme-icon--light {
    display: block;
  }
  :global([data-theme='dark']) .header__theme-icon--dark {
    display: none;
  }

  /* When manually set to light - show moon (click to go dark) */
  :global([data-theme='light']) .header__theme-icon--light {
    display: none;
  }
  :global([data-theme='light']) .header__theme-icon--dark {
    display: block;
  }

  @media (max-width: 640px) {
    .header__container {
      gap: var(--space-sm);
    }

    .header__logo {
      font-size: var(--text-base);
      line-height: 1.2;
    }

    .header__nav-list {
      gap: var(--space-sm);
    }

    .header__nav-link {
      padding: var(--space-xs);
      font-size: var(--text-sm);
    }

    .header__search-input {
      width: 100px;
      font-size: var(--text-xs);
    }

    .header__search-input:focus {
      width: 120px;
    }

    .header__theme-toggle {
      padding: var(--space-xs);
    }
  }

  @media (max-width: 400px) {
    .header__logo {
      font-size: var(--text-sm);
      max-width: 140px;
    }
  }
</style>

<script>
  // Role-based navigation visibility
  (function() {
    const COGNITO_AUTH_KEY = 'dndblog-cognito-auth';
    const dmNav = document.getElementById('nav-dm');
    const playerNav = document.getElementById('nav-player');

    function getAuthRoles() {
      // Check Cognito auth
      const cognitoAuth = localStorage.getItem(COGNITO_AUTH_KEY);
      if (cognitoAuth) {
        try {
          const auth = JSON.parse(cognitoAuth);
          // Check token expiration if available
          if (auth.expiresAt && auth.expiresAt < Date.now()) {
            localStorage.removeItem(COGNITO_AUTH_KEY);
            return { isDm: false, isPlayer: false };
          }
          return auth.roles || { isDm: false, isPlayer: false };
        } catch {
          return { isDm: false, isPlayer: false };
        }
      }
      return { isDm: false, isPlayer: false };
    }

    function updateRoleNav() {
      const roles = getAuthRoles();

      if (dmNav) {
        dmNav.style.display = roles.isDm ? '' : 'none';
      }
      if (playerNav) {
        playerNav.style.display = roles.isPlayer ? '' : 'none';
      }
    }

    // Check on load
    updateRoleNav();

    // Listen for storage changes (e.g., login/logout in another tab)
    window.addEventListener('storage', updateRoleNav);

    // Listen for auth-change event (same tab login/logout)
    window.addEventListener('auth-change', updateRoleNav);

    // Also check periodically in case of same-tab login/logout
    // This handles the case where user logs in on a different page
    setInterval(updateRoleNav, 1000);
  })();

  // Theme toggle functionality
  const toggle = document.getElementById('theme-toggle');

  function getThemePreference(): 'light' | 'dark' {
    const stored = localStorage.getItem('theme');
    if (stored === 'light' || stored === 'dark') {
      return stored;
    }
    return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
  }

  function setTheme(theme: 'light' | 'dark') {
    document.documentElement.setAttribute('data-theme', theme);
    localStorage.setItem('theme', theme);
  }

  // Set initial theme
  setTheme(getThemePreference());

  toggle?.addEventListener('click', () => {
    const current = getThemePreference();
    setTheme(current === 'dark' ? 'light' : 'dark');
  });

  // Listen for system preference changes
  window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', (e) => {
    if (!localStorage.getItem('theme')) {
      setTheme(e.matches ? 'dark' : 'light');
    }
  });
</script>
