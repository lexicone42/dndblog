---
const currentPath = Astro.url.pathname;

const navLinks = [
  { href: '/', label: 'Home' },
  { href: '/party', label: 'Party' },
  { href: '/campaign', label: 'Campaign' },
  { href: '/sessions', label: 'Sessions' },
  { href: '/reference', label: 'Reference' },
];

// Role-based nav links (shown conditionally via client-side JS)
const roleNavLinks = {
  dm: { href: '/dm', label: 'DM' },
};

function isActive(href: string): boolean {
  if (href === '/') {
    return currentPath === '/';
  }
  return currentPath.startsWith(href);
}
---

<header class="header">
  <div class="container header__container">
    <!-- Logo -->
    <a href="/" class="header__logo" aria-label="Home">
      <span class="header__logo-text">Rudiger's Evocation of Events</span>
    </a>

    <!-- Centered navigation with auth -->
    <nav class="header__nav" aria-label="Main navigation">
      <ul class="header__nav-list">
        {navLinks.map(({ href, label }) => (
          <li>
            <a
              href={href}
              class:list={['header__nav-link', { 'header__nav-link--active': isActive(href) }]}
              aria-current={isActive(href) ? 'page' : undefined}
            >
              {label}
            </a>
          </li>
        ))}

        <!-- Auth nav item - inline with other nav links -->
        <li id="nav-auth" class="header__nav-auth">
          <!-- Not logged in: Sign In link -->
          <a href="/auth/login" class="header__nav-link header__nav-link--auth" id="login-btn">
            Sign In
          </a>
          <!-- Logged in: User dropdown (hidden by default) -->
          <div class="header__user-menu" id="user-menu" style="display: none;">
            <button class="header__nav-link header__user-btn" id="user-btn" type="button" aria-expanded="false" aria-haspopup="true">
              <span class="header__user-avatar" id="user-avatar">?</span>
              <span class="header__user-name" id="user-name">Me</span>
              <svg class="header__user-chevron" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
                <polyline points="6 9 12 15 18 9"></polyline>
              </svg>
            </button>
            <div class="header__dropdown" id="user-dropdown">
              <a href="/me" class="header__dropdown-item">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
                  <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                  <circle cx="12" cy="7" r="4"></circle>
                </svg>
                My Dashboard
              </a>
              <button class="header__dropdown-item header__dropdown-item--danger" id="logout-btn" type="button">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
                  <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path>
                  <polyline points="16 17 21 12 16 7"></polyline>
                  <line x1="21" y1="12" x2="9" y2="12"></line>
                </svg>
                Sign Out
              </button>
            </div>
          </div>
        </li>

        <!-- Role-based nav links (hidden by default, shown via JS) -->
        <li id="nav-dm" class="header__nav-role" style="display: none;">
          <a
            href={roleNavLinks.dm.href}
            class:list={['header__nav-link', 'header__nav-link--dm', { 'header__nav-link--active': isActive(roleNavLinks.dm.href) }]}
            aria-current={isActive(roleNavLinks.dm.href) ? 'page' : undefined}
          >
            {roleNavLinks.dm.label}
          </a>
        </li>
      </ul>
    </nav>

    <!-- Right-aligned actions -->
    <div class="header__actions">
      <form class="header__search" action="/search" method="get" role="search">
        <input
          type="search"
          name="q"
          class="header__search-input"
          placeholder="Search..."
          aria-label="Search the campaign"
        />
      </form>

      <button
        class="header__theme-toggle"
        type="button"
        aria-label="Toggle dark mode"
        id="theme-toggle"
      >
        <svg
          class="header__theme-icon header__theme-icon--light"
          xmlns="http://www.w3.org/2000/svg"
          width="18"
          height="18"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          aria-hidden="true"
        >
          <circle cx="12" cy="12" r="5"></circle>
          <line x1="12" y1="1" x2="12" y2="3"></line>
          <line x1="12" y1="21" x2="12" y2="23"></line>
          <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line>
          <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line>
          <line x1="1" y1="12" x2="3" y2="12"></line>
          <line x1="21" y1="12" x2="23" y2="12"></line>
          <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line>
          <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line>
        </svg>
        <svg
          class="header__theme-icon header__theme-icon--dark"
          xmlns="http://www.w3.org/2000/svg"
          width="18"
          height="18"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          aria-hidden="true"
        >
          <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
        </svg>
      </button>
    </div>
  </div>
</header>

<style>
  .header {
    position: sticky;
    top: 0;
    z-index: 50;
    background-color: var(--color-bg);
    border-bottom: 2px solid var(--color-border);
    height: var(--header-height);
    box-shadow: var(--shadow-sm);
  }

  .header__container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 100%;
    gap: var(--space-md);
  }

  /* Logo */
  .header__logo {
    text-decoration: none;
    flex-shrink: 0;
  }

  .header__logo-text {
    font-family: var(--font-display);
    font-weight: 600;
    font-size: var(--text-sm);
    color: var(--color-text);
    letter-spacing: 0.02em;
    transition: color var(--transition-fast);
  }

  .header__logo:hover .header__logo-text {
    color: var(--color-gold);
  }

  /* Centered nav */
  .header__nav {
    flex: 1;
    display: flex;
    justify-content: center;
  }

  .header__nav-list {
    display: flex;
    list-style: none;
    gap: var(--space-xs);
    padding: 0;
    margin: 0;
    align-items: center;
  }

  .header__nav-link {
    text-decoration: none;
    color: var(--color-text-secondary);
    font-weight: 500;
    font-size: var(--text-sm);
    padding: var(--space-xs) var(--space-sm);
    border-radius: var(--radius-sm);
    transition: color var(--transition-fast), background-color var(--transition-fast);
  }

  .header__nav-link:hover {
    color: var(--color-text);
    background-color: var(--color-bg-secondary);
  }

  .header__nav-link--active {
    color: var(--color-accent);
  }

  /* Auth nav link - subtle styling */
  .header__nav-link--auth {
    color: var(--color-text-muted);
    font-size: var(--text-xs);
  }

  .header__nav-link--auth:hover {
    color: var(--color-text-secondary);
  }

  /* Auth container in nav */
  .header__nav-auth {
    position: relative;
  }

  /* Role-based nav links */
  .header__nav-link--dm {
    color: var(--color-gold);
  }

  .header__nav-link--dm:hover {
    color: var(--color-gold);
    background-color: rgba(var(--color-gold-rgb, 201, 162, 39), 0.1);
  }

  /* Right-aligned actions */
  .header__actions {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    flex-shrink: 0;
  }

  .header__search {
    display: flex;
    align-items: center;
  }

  .header__search-input {
    width: 120px;
    padding: var(--space-xs) var(--space-sm);
    font-size: var(--text-sm);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-sm);
    background: var(--color-bg-secondary);
    color: var(--color-text);
    transition: all var(--transition-fast);
  }

  .header__search-input::placeholder {
    color: var(--color-text-muted);
  }

  .header__search-input:focus {
    outline: none;
    border-color: var(--color-accent);
    width: 160px;
  }

  /* User menu (logged in state) */
  .header__user-menu {
    position: relative;
  }

  .header__user-btn {
    display: flex;
    align-items: center;
    gap: 4px;
    background: transparent;
    border: none;
    cursor: pointer;
    font-size: var(--text-xs);
  }

  .header__user-btn:hover {
    background: var(--color-bg-secondary);
  }

  .header__user-avatar {
    width: 20px;
    height: 20px;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--color-gold), var(--color-accent));
    color: var(--color-bg);
    font-size: 10px;
    font-weight: 700;
    display: flex;
    align-items: center;
    justify-content: center;
    text-transform: uppercase;
  }

  .header__user-name {
    font-weight: 500;
    color: var(--color-text-muted);
    max-width: 80px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  .header__user-chevron {
    width: 12px;
    height: 12px;
    color: var(--color-text-muted);
    transition: transform var(--transition-fast);
  }

  .header__user-btn[aria-expanded="true"] .header__user-chevron {
    transform: rotate(180deg);
  }

  /* Dropdown menu */
  .header__dropdown {
    position: absolute;
    top: calc(100% + var(--space-xs));
    right: 0;
    min-width: 160px;
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    box-shadow: var(--shadow-lg);
    opacity: 0;
    visibility: hidden;
    transform: translateY(-8px);
    transition: all var(--transition-fast);
    z-index: 100;
  }

  .header__dropdown.is-open {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }

  .header__dropdown-item {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    width: 100%;
    padding: var(--space-sm) var(--space-md);
    font-size: var(--text-sm);
    color: var(--color-text);
    text-decoration: none;
    background: transparent;
    border: none;
    cursor: pointer;
    transition: background var(--transition-fast);
    text-align: left;
  }

  .header__dropdown-item:first-child {
    border-radius: var(--radius-md) var(--radius-md) 0 0;
  }

  .header__dropdown-item:last-child {
    border-radius: 0 0 var(--radius-md) var(--radius-md);
  }

  .header__dropdown-item:hover {
    background: var(--color-bg-secondary);
  }

  .header__dropdown-item svg {
    width: 16px;
    height: 16px;
    flex-shrink: 0;
  }

  .header__dropdown-item--danger {
    color: var(--color-accent);
  }

  .header__dropdown-item--danger:hover {
    background: rgba(var(--color-accent-rgb, 192, 86, 86), 0.1);
  }

  /* Theme toggle */
  .header__theme-toggle {
    background: none;
    border: none;
    padding: var(--space-xs);
    cursor: pointer;
    color: var(--color-text-secondary);
    border-radius: var(--radius-sm);
    display: flex;
    align-items: center;
    justify-content: center;
    transition: color var(--transition-fast), background-color var(--transition-fast);
  }

  .header__theme-toggle:hover {
    color: var(--color-text);
    background-color: var(--color-bg-secondary);
  }

  /* Show/hide icons based on theme */
  .header__theme-icon--light {
    display: none;
  }

  @media (prefers-color-scheme: dark) {
    .header__theme-icon--light {
      display: block;
    }
    .header__theme-icon--dark {
      display: none;
    }
  }

  :global([data-theme='dark']) .header__theme-icon--light {
    display: block;
  }
  :global([data-theme='dark']) .header__theme-icon--dark {
    display: none;
  }

  :global([data-theme='light']) .header__theme-icon--light {
    display: none;
  }
  :global([data-theme='light']) .header__theme-icon--dark {
    display: block;
  }

  /* Responsive styles */
  @media (max-width: 900px) {
    .header__user-name {
      display: none;
    }
  }

  @media (max-width: 768px) {
    .header__container {
      gap: var(--space-xs);
    }

    .header__logo-text {
      font-size: var(--text-xs);
    }

    .header__nav-list {
      gap: 2px;
    }

    .header__nav-link {
      padding: var(--space-xs);
      font-size: var(--text-xs);
    }

    .header__search-input {
      width: 80px;
      font-size: var(--text-xs);
    }

    .header__search-input:focus {
      width: 100px;
    }
  }

  @media (max-width: 640px) {
    .header__search {
      display: none;
    }

    .header__nav-link--auth {
      display: none;
    }

    .header__user-menu {
      display: none !important;
    }
  }

  @media (max-width: 500px) {
    .header__logo-text {
      max-width: 100px;
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
    }
  }
</style>

<script>
  import { getAuthState, clearAuth, getLoginUrl, isSsoAvailable } from '@lib/auth';

  // Auth UI management
  (function() {
    const COGNITO_AUTH_KEY = 'dndblog-cognito-auth';
    const dmNav = document.getElementById('nav-dm');
    const loginBtn = document.getElementById('login-btn');
    const userMenu = document.getElementById('user-menu');
    const userBtn = document.getElementById('user-btn');
    const userDropdown = document.getElementById('user-dropdown');
    const userName = document.getElementById('user-name');
    const userAvatar = document.getElementById('user-avatar');
    const logoutBtn = document.getElementById('logout-btn');

    // Character name lookup
    const characterNames: Record<string, string> = {
      'rudiger': 'Rudiger',
      'finnian': 'Finnian',
      'lyra': 'Lyra',
      'thane': 'Thane',
      'zara': 'Zara',
    };

    function getAuthRoles() {
      const cognitoAuth = localStorage.getItem(COGNITO_AUTH_KEY);
      if (cognitoAuth) {
        try {
          const auth = JSON.parse(cognitoAuth);
          if (auth.expiresAt && auth.expiresAt < Date.now()) {
            localStorage.removeItem(COGNITO_AUTH_KEY);
            return null;
          }
          // Prefer character name over display name
          const characterSlug = auth.characterSlug;
          const characterName = characterSlug ? characterNames[characterSlug] : null;
          return {
            isDm: auth.roles?.isDm || false,
            isPlayer: auth.roles?.isPlayer || false,
            displayName: characterName || auth.displayName || auth.email?.split('@')[0] || 'Adventurer',
            email: auth.email || '',
          };
        } catch {
          return null;
        }
      }
      return null;
    }

    function updateAuthUI() {
      const auth = getAuthRoles();
      const isLoggedIn = auth !== null;

      // Update DM nav visibility
      if (dmNav) {
        dmNav.style.display = auth?.isDm ? '' : 'none';
      }

      // Update login/user menu visibility
      if (loginBtn && userMenu) {
        if (isLoggedIn) {
          loginBtn.style.display = 'none';
          userMenu.style.display = 'block';

          // Update user info
          if (userName && auth) {
            userName.textContent = auth.displayName;
          }
          if (userAvatar && auth) {
            userAvatar.textContent = auth.displayName.charAt(0).toUpperCase();
          }
        } else {
          loginBtn.style.display = 'inline-block';
          userMenu.style.display = 'none';
        }
      }

      // Update login URL with current page as return URL
      if (loginBtn && isSsoAvailable()) {
        const returnUrl = window.location.pathname;
        loginBtn.setAttribute('href', getLoginUrl(returnUrl));
      }
    }

    // Dropdown toggle
    function toggleDropdown(show?: boolean) {
      if (!userBtn || !userDropdown) return;

      const isOpen = show ?? !userDropdown.classList.contains('is-open');
      userDropdown.classList.toggle('is-open', isOpen);
      userBtn.setAttribute('aria-expanded', String(isOpen));
    }

    // Event listeners
    userBtn?.addEventListener('click', (e) => {
      e.stopPropagation();
      toggleDropdown();
    });

    // Close dropdown when clicking outside
    document.addEventListener('click', (e) => {
      if (userDropdown?.classList.contains('is-open')) {
        const target = e.target as HTMLElement;
        if (!target.closest('.header__user-menu')) {
          toggleDropdown(false);
        }
      }
    });

    // Close dropdown on escape
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && userDropdown?.classList.contains('is-open')) {
        toggleDropdown(false);
        userBtn?.focus();
      }
    });

    // Logout handler
    logoutBtn?.addEventListener('click', () => {
      clearAuth();
      window.dispatchEvent(new Event('auth-change'));
      // Redirect to home
      window.location.href = '/';
    });

    // Initial update
    updateAuthUI();

    // Listen for auth changes
    window.addEventListener('storage', updateAuthUI);
    window.addEventListener('auth-change', updateAuthUI);

    // Periodic check for auth changes
    setInterval(updateAuthUI, 1000);
  })();

  // Theme toggle functionality
  const toggle = document.getElementById('theme-toggle');

  function getThemePreference(): 'light' | 'dark' {
    const stored = localStorage.getItem('theme');
    if (stored === 'light' || stored === 'dark') {
      return stored;
    }
    return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
  }

  function setTheme(theme: 'light' | 'dark') {
    document.documentElement.setAttribute('data-theme', theme);
    localStorage.setItem('theme', theme);
  }

  setTheme(getThemePreference());

  toggle?.addEventListener('click', () => {
    const current = getThemePreference();
    setTheme(current === 'dark' ? 'light' : 'dark');
  });

  window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', (e) => {
    if (!localStorage.getItem('theme')) {
      setTheme(e.matches ? 'dark' : 'light');
    }
  });
</script>
