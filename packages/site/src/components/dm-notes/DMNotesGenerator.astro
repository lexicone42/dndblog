---
/**
 * DM Notes Entity Generator Component
 * AI-powered entity creation from natural language descriptions.
 */
---

<div id="generator-container" class="generator-container" role="tabpanel" aria-labelledby="tab-generator" style="display: none;">
  <header class="generator-header">
    <h1>Entity Generator</h1>
    <p class="generator-subtitle">Describe an entity in plain text and let AI structure it</p>
  </header>

  <!-- Input Section -->
  <div class="generator-input">
    <label for="entity-input" class="visually-hidden">Entity description</label>
    <textarea
      id="entity-input"
      class="entity-input"
      placeholder="orc 2gold one scimitar named gorok, real piece of shit&#10;&#10;OR try:&#10;• tavern called the Rusty Anchor in Sharn&#10;• +1 longsword of flame, legendary&#10;• cult of shadow worshippers led by Malzak"
      rows="4"
    ></textarea>

    <div class="generator-controls">
      <div class="hint-selector">
        <label for="entity-type-hint">Type hint:</label>
        <select id="entity-type-hint" class="type-hint-select">
          <option value="">Auto-detect</option>
          <option value="character">Character (NPC)</option>
          <option value="enemy">Enemy</option>
          <option value="item">Item</option>
          <option value="location">Location</option>
          <option value="faction">Faction</option>
        </select>
      </div>
      <button id="generate-btn" class="btn btn--primary">Generate Entity</button>
    </div>
  </div>

  <!-- Loading State -->
  <div id="generator-loading" class="generator-loading" role="status" aria-live="polite" style="display: none;">
    <span class="loading-spinner" aria-hidden="true"></span>
    <span>Generating entity...</span>
  </div>

  <!-- Error State -->
  <div id="generator-error" class="generator-error" role="alert" aria-live="assertive" style="display: none;"></div>

  <!-- Preview Section -->
  <div id="generator-preview" class="generator-preview" style="display: none;">
    <div class="preview-header">
      <h2>Generated Entity</h2>
      <span id="confidence-badge" class="confidence-badge"></span>
    </div>

    <!-- Entity Card Preview -->
    <div id="entity-card-preview" class="entity-card-preview"></div>

    <!-- Suggestions -->
    <div id="suggestions-panel" class="suggestions-panel" style="display: none;">
      <h3>Suggestions</h3>
      <ul id="suggestions-list" class="suggestions-list"></ul>
    </div>

    <!-- YAML Editor (collapsible) -->
    <details class="yaml-editor-section">
      <summary>View/Edit YAML Frontmatter</summary>
      <textarea id="yaml-editor" class="yaml-editor" rows="15"></textarea>
    </details>

    <!-- Actions -->
    <div class="preview-actions">
      <button id="regenerate-btn" class="btn btn--secondary">Regenerate</button>
      <button id="copy-btn" class="btn btn--secondary">Copy to Clipboard</button>
      <button id="download-btn" class="btn btn--primary">Download .md</button>
    </div>
  </div>
</div>

<style>
  .generator-container {
    padding: var(--space-lg);
    max-width: 900px;
  }

  .generator-header {
    margin-bottom: var(--space-lg);
  }

  .generator-header h1 {
    font-size: var(--text-2xl);
    color: var(--color-gold);
    margin: 0 0 var(--space-xs);
  }

  .generator-subtitle {
    color: var(--color-text-muted);
    margin: 0;
  }

  /* Input Section */
  .generator-input {
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    padding: var(--space-lg);
    margin-bottom: var(--space-lg);
  }

  .entity-input {
    width: 100%;
    padding: var(--space-md);
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    color: var(--color-text);
    font-size: var(--text-base);
    font-family: inherit;
    resize: vertical;
    min-height: 100px;
  }

  .entity-input:focus {
    outline: none;
    border-color: var(--color-gold);
  }

  .entity-input::placeholder {
    color: var(--color-text-muted);
    opacity: 0.7;
  }

  .generator-controls {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: var(--space-md);
    gap: var(--space-md);
    flex-wrap: wrap;
  }

  .hint-selector {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
  }

  .hint-selector label {
    color: var(--color-text-secondary);
    font-size: var(--text-sm);
  }

  .type-hint-select {
    padding: var(--space-sm) var(--space-md);
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-sm);
    color: var(--color-text);
    font-size: var(--text-sm);
    cursor: pointer;
  }

  .type-hint-select:focus {
    outline: none;
    border-color: var(--color-gold);
  }

  /* Loading State */
  .generator-loading {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-md);
    padding: var(--space-2xl);
    color: var(--color-text-muted);
  }

  .loading-spinner {
    width: 24px;
    height: 24px;
    border: 3px solid var(--color-border);
    border-top-color: var(--color-gold);
    border-radius: 50%;
    animation: spin 1s linear infinite;
  }

  @keyframes spin {
    to { transform: rotate(360deg); }
  }

  /* Error State */
  .generator-error {
    padding: var(--space-lg);
    background: rgba(239, 68, 68, 0.1);
    border: 1px solid var(--color-error);
    border-radius: var(--radius-md);
    color: var(--color-error);
    margin-bottom: var(--space-lg);
  }

  /* Preview Section */
  .generator-preview {
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    padding: var(--space-lg);
  }

  .preview-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--space-lg);
  }

  .preview-header h2 {
    font-size: var(--text-xl);
    color: var(--color-gold);
    margin: 0;
  }

  .confidence-badge {
    padding: var(--space-xs) var(--space-sm);
    border-radius: var(--radius-sm);
    font-size: var(--text-sm);
    font-weight: 600;
  }

  .confidence-badge--high {
    background: rgba(34, 197, 94, 0.2);
    color: var(--color-success);
  }

  .confidence-badge--medium {
    background: rgba(234, 179, 8, 0.2);
    color: var(--color-warning);
  }

  .confidence-badge--low {
    background: rgba(239, 68, 68, 0.2);
    color: var(--color-error);
  }

  /* Entity Card Preview */
  .entity-card-preview {
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    padding: var(--space-lg);
    margin-bottom: var(--space-lg);
  }

  .entity-card-preview :global(.entity-name) {
    font-size: var(--text-xl);
    font-weight: 600;
    color: var(--color-gold);
    margin: 0 0 var(--space-sm);
  }

  .entity-card-preview :global(.entity-meta) {
    display: flex;
    gap: var(--space-sm);
    flex-wrap: wrap;
    margin-bottom: var(--space-md);
  }

  .entity-card-preview :global(.entity-tag) {
    padding: 2px 8px;
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-sm);
    font-size: var(--text-xs);
    color: var(--color-text-secondary);
    text-transform: uppercase;
  }

  .entity-card-preview :global(.entity-tag--type) {
    background: var(--color-accent);
    border-color: var(--color-accent);
    color: white;
  }

  .entity-card-preview :global(.entity-description) {
    color: var(--color-text-secondary);
    margin: 0;
    line-height: 1.6;
  }

  .entity-card-preview :global(.entity-details) {
    margin-top: var(--space-md);
    padding-top: var(--space-md);
    border-top: 1px solid var(--color-border);
    font-size: var(--text-sm);
    color: var(--color-text-muted);
  }

  .entity-card-preview :global(.entity-details dt) {
    font-weight: 600;
    color: var(--color-text-secondary);
    display: inline;
  }

  .entity-card-preview :global(.entity-details dd) {
    display: inline;
    margin: 0 var(--space-md) 0 var(--space-xs);
  }

  /* Entity sections (abilities, relationships, details, markdown) */
  .entity-card-preview :global(.entity-section) {
    margin-top: var(--space-md);
    padding-top: var(--space-md);
    border-top: 1px solid var(--color-border);
  }

  .entity-card-preview :global(.entity-section h4) {
    font-size: var(--text-sm);
    font-weight: 600;
    color: var(--color-text-secondary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin: 0 0 var(--space-sm);
  }

  .entity-card-preview :global(.entity-abilities),
  .entity-card-preview :global(.entity-relationships) {
    margin: 0;
    padding-left: var(--space-lg);
    font-size: var(--text-sm);
    color: var(--color-text);
  }

  .entity-card-preview :global(.entity-abilities li),
  .entity-card-preview :global(.entity-relationships li) {
    margin-bottom: var(--space-xs);
  }

  .entity-card-preview :global(.rel-note) {
    color: var(--color-text-muted);
    font-style: italic;
  }

  .entity-card-preview :global(.entity-markdown p) {
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    line-height: 1.6;
    margin: 0;
  }

  /* Full markdown content rendering */
  .entity-card-preview :global(.entity-markdown-full) {
    margin-top: var(--space-lg);
    padding-top: var(--space-lg);
    border-top: 2px solid var(--color-border);
  }

  .entity-card-preview :global(.md-section) {
    font-size: var(--text-base);
    font-weight: 600;
    color: var(--color-gold);
    margin: var(--space-lg) 0 var(--space-sm);
  }

  .entity-card-preview :global(.md-section:first-child) {
    margin-top: 0;
  }

  .entity-card-preview :global(.md-subsection) {
    font-size: var(--text-sm);
    font-weight: 600;
    color: var(--color-text-secondary);
    margin: var(--space-md) 0 var(--space-xs);
  }

  .entity-card-preview :global(.entity-markdown-full p) {
    font-size: var(--text-sm);
    color: var(--color-text);
    line-height: 1.7;
    margin: 0 0 var(--space-sm);
  }

  .entity-card-preview :global(.md-list) {
    margin: var(--space-xs) 0 var(--space-md);
    padding-left: var(--space-lg);
    font-size: var(--text-sm);
    color: var(--color-text);
  }

  .entity-card-preview :global(.md-list li) {
    margin-bottom: var(--space-xs);
    line-height: 1.5;
  }

  .entity-card-preview :global(.entity-markdown-full strong) {
    color: var(--color-gold);
    font-weight: 600;
  }

  /* User-defined tags section at bottom */
  .entity-card-preview :global(.entity-tags) {
    margin-top: var(--space-md);
    padding-top: var(--space-md);
    border-top: 1px solid var(--color-border);
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-xs);
  }

  .entity-card-preview :global(.entity-tag--user) {
    background: var(--color-bg-tertiary, rgba(255,255,255,0.05));
    border-color: var(--color-border);
  }

  .entity-card-preview :global(.entity-tag--subtype) {
    background: var(--color-accent-secondary, #4a5568);
    border-color: transparent;
  }

  .entity-card-preview :global(.entity-tag--status) {
    font-weight: 600;
  }

  .entity-card-preview :global(.entity-tag--dead) {
    background: rgba(239, 68, 68, 0.2);
    border-color: var(--color-error);
    color: var(--color-error);
  }

  .entity-card-preview :global(.entity-tag--missing) {
    background: rgba(234, 179, 8, 0.2);
    border-color: var(--color-warning);
    color: var(--color-warning);
  }

  /* Rarity colors for items */
  .entity-card-preview :global(.entity-tag--common) { color: #9ca3af; }
  .entity-card-preview :global(.entity-tag--uncommon) { color: #22c55e; }
  .entity-card-preview :global(.entity-tag--rare) { color: #3b82f6; }
  .entity-card-preview :global(.entity-tag--very-rare) { color: #a855f7; }
  .entity-card-preview :global(.entity-tag--legendary) { color: #f59e0b; }
  .entity-card-preview :global(.entity-tag--artifact) { color: #ef4444; }

  /* Suggestions Panel */
  .suggestions-panel {
    background: rgba(234, 179, 8, 0.1);
    border: 1px solid var(--color-warning);
    border-radius: var(--radius-md);
    padding: var(--space-md);
    margin-bottom: var(--space-lg);
  }

  .suggestions-panel h3 {
    font-size: var(--text-sm);
    color: var(--color-warning);
    margin: 0 0 var(--space-sm);
  }

  .suggestions-list {
    margin: 0;
    padding-left: var(--space-lg);
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
  }

  .suggestions-list li {
    margin-bottom: var(--space-xs);
  }

  /* YAML Editor Section */
  .yaml-editor-section {
    margin-bottom: var(--space-lg);
  }

  .yaml-editor-section summary {
    cursor: pointer;
    color: var(--color-text-secondary);
    font-size: var(--text-sm);
    padding: var(--space-sm);
    background: var(--color-bg);
    border-radius: var(--radius-sm);
  }

  .yaml-editor-section summary:hover {
    color: var(--color-text);
  }

  .yaml-editor-section[open] summary {
    margin-bottom: var(--space-sm);
  }

  .yaml-editor {
    width: 100%;
    padding: var(--space-md);
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    color: var(--color-text);
    font-family: var(--font-mono);
    font-size: var(--text-sm);
    line-height: 1.5;
    resize: vertical;
  }

  .yaml-editor:focus {
    outline: none;
    border-color: var(--color-gold);
  }

  /* Preview Actions */
  .preview-actions {
    display: flex;
    gap: var(--space-sm);
    flex-wrap: wrap;
    justify-content: flex-end;
  }

  /* Button Styles */
  .btn {
    padding: var(--space-sm) var(--space-lg);
    border-radius: var(--radius-md);
    font-size: var(--text-base);
    font-weight: 500;
    cursor: pointer;
    transition: all var(--transition-fast);
    border: 1px solid transparent;
  }

  .btn:disabled {
    opacity: 0.6;
    cursor: not-allowed;
  }

  .btn--primary {
    background: var(--color-gold);
    color: var(--color-bg);
    border-color: var(--color-gold);
  }

  .btn--primary:hover:not(:disabled) {
    background: var(--color-gold-dark, #c9a227);
  }

  .btn--secondary {
    background: var(--color-bg);
    color: var(--color-text);
    border-color: var(--color-border);
  }

  .btn--secondary:hover:not(:disabled) {
    border-color: var(--color-gold);
    color: var(--color-gold);
  }

  .visually-hidden {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }
</style>
