---
/**
 * View Note Modal Component
 * Displays a note's rendered markdown content with download and delete options.
 */
---

<div id="view-modal" class="modal" style="display: none;" role="dialog" aria-modal="true" aria-labelledby="view-modal-title">
  <div class="modal__backdrop" aria-hidden="true"></div>
  <div class="modal__content modal__content--large">
    <header class="modal__header">
      <h2 id="view-modal-title">Note Title</h2>
      <button class="modal__close" data-close-modal aria-label="Close modal">&times;</button>
    </header>
    <div class="modal__meta">
      <span id="view-modal-date"></span>
      <span id="view-modal-status"></span>
    </div>
    <div id="view-modal-body" class="modal__body markdown-content" tabindex="0"></div>
    <footer class="modal__footer">
      <button id="download-note-btn" class="btn btn--secondary" aria-label="Download note as markdown file">Download</button>
      <button id="delete-note-btn" class="btn btn--danger" aria-label="Delete this note">Delete</button>
    </footer>
  </div>
</div>

<style>
  .modal {
    position: fixed;
    inset: 0;
    z-index: 1000;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--space-lg);
  }

  .modal__backdrop {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.7);
    backdrop-filter: blur(4px);
  }

  .modal__content {
    position: relative;
    background: var(--color-bg);
    border-radius: var(--radius-lg);
    max-width: 500px;
    width: 100%;
    max-height: 90vh;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
  }

  .modal__content--large {
    max-width: 800px;
  }

  .modal__header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: var(--space-lg);
    border-bottom: 1px solid var(--color-border);
  }

  .modal__header h2 {
    margin: 0;
    font-size: var(--text-xl);
    color: var(--color-gold);
  }

  .modal__close {
    background: none;
    border: none;
    font-size: var(--text-2xl);
    color: var(--color-text-muted);
    cursor: pointer;
    padding: 0;
    line-height: 1;
    transition: color var(--transition-fast);
  }

  .modal__close:hover {
    color: var(--color-text);
  }

  .modal__meta {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    padding: var(--space-sm) var(--space-lg);
    background: var(--color-bg-secondary);
    font-size: var(--text-sm);
    color: var(--color-text-muted);
  }

  .modal__meta :global(.status-badge) {
    padding: 2px 8px;
    border-radius: var(--radius-sm);
    font-size: var(--text-xs);
    font-weight: 600;
    text-transform: uppercase;
  }

  .modal__meta :global(.status-badge--draft) {
    background: var(--color-warning);
    color: var(--color-bg);
  }

  .modal__meta :global(.status-badge--published) {
    background: var(--color-success);
    color: white;
  }

  .modal__body {
    padding: var(--space-lg);
    overflow-y: auto;
    flex: 1;
  }

  .modal__footer {
    display: flex;
    justify-content: flex-end;
    gap: var(--space-sm);
    padding: var(--space-lg);
    border-top: 1px solid var(--color-border);
    background: var(--color-bg-secondary);
  }

  /* Markdown content rendering */
  .markdown-content :global(h1),
  .markdown-content :global(h2),
  .markdown-content :global(h3) {
    color: var(--color-gold);
    margin-top: var(--space-lg);
    margin-bottom: var(--space-sm);
  }

  .markdown-content :global(h1) { font-size: var(--text-2xl); }
  .markdown-content :global(h2) { font-size: var(--text-xl); }
  .markdown-content :global(h3) { font-size: var(--text-lg); }

  .markdown-content :global(p) {
    margin-bottom: var(--space-md);
    line-height: 1.7;
  }

  .markdown-content :global(ul),
  .markdown-content :global(ol) {
    margin-bottom: var(--space-md);
    padding-left: var(--space-lg);
  }

  .markdown-content :global(li) {
    margin-bottom: var(--space-xs);
  }

  .markdown-content :global(blockquote) {
    border-left: 4px solid var(--color-gold);
    padding-left: var(--space-md);
    margin: var(--space-md) 0;
    color: var(--color-text-secondary);
    font-style: italic;
  }

  .markdown-content :global(code) {
    background: var(--color-bg-tertiary);
    padding: 2px 6px;
    border-radius: var(--radius-sm);
    font-size: 0.9em;
  }

  .markdown-content :global(pre) {
    background: var(--color-bg-tertiary);
    padding: var(--space-md);
    border-radius: var(--radius-md);
    overflow-x: auto;
    margin-bottom: var(--space-md);
  }

  .markdown-content :global(pre code) {
    background: none;
    padding: 0;
  }

  .markdown-content :global(hr) {
    border: none;
    border-top: 1px solid var(--color-border);
    margin: var(--space-lg) 0;
  }

  .markdown-content :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: var(--space-md);
  }

  .markdown-content :global(th),
  .markdown-content :global(td) {
    border: 1px solid var(--color-border);
    padding: var(--space-sm);
    text-align: left;
  }

  .markdown-content :global(th) {
    background: var(--color-bg-secondary);
    font-weight: 600;
  }
</style>
