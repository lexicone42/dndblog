---
/**
 * Staging Branch Selection Modal
 * Select or create a staging branch for saving generated entities.
 */
---

<div id="staging-modal" class="modal" style="display: none;" role="dialog" aria-modal="true" aria-labelledby="staging-modal-heading">
  <div class="modal__backdrop" data-close-staging-modal aria-hidden="true"></div>
  <div class="modal__content">
    <header class="modal__header">
      <h2 id="staging-modal-heading">Save to Staging</h2>
      <button class="modal__close" data-close-staging-modal aria-label="Close">&times;</button>
    </header>
    <div class="modal__body">
      <!-- Branch Selection -->
      <div class="staging-form">
        <div class="form-group">
          <label for="staging-branch-select">Select branch:</label>
          <select id="staging-branch-select" class="staging-select">
            <option value="">Loading branches...</option>
          </select>
        </div>

        <div class="form-divider">
          <span>or</span>
        </div>

        <div class="form-group">
          <label for="new-branch-name">Create new branch:</label>
          <input
            type="text"
            id="new-branch-name"
            class="staging-input"
            placeholder="e.g., session-15-prep"
            pattern="[a-z0-9-]+"
          />
          <p class="form-hint">Lowercase letters, numbers, and hyphens only</p>
        </div>
      </div>

      <!-- Entity Preview -->
      <div class="entity-summary">
        <h3>Entity to save:</h3>
        <div id="staging-entity-preview" class="entity-preview-mini">
          <span class="entity-type-badge"></span>
          <span class="entity-name"></span>
        </div>
      </div>

      <!-- Error display -->
      <div id="staging-error" class="staging-error" role="alert" style="display: none;"></div>
    </div>
    <footer class="modal__footer">
      <button class="btn btn--secondary" data-close-staging-modal>Cancel</button>
      <button id="confirm-staging-btn" class="btn btn--primary">Save Entity</button>
    </footer>
  </div>
</div>

<style>
  .modal {
    position: fixed;
    inset: 0;
    z-index: 1000;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--space-lg);
  }

  .modal__backdrop {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.7);
    backdrop-filter: blur(4px);
    cursor: pointer;
  }

  .modal__content {
    position: relative;
    background: var(--color-bg);
    border-radius: var(--radius-lg);
    max-width: 500px;
    width: 100%;
    max-height: 90vh;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
  }

  .modal__header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: var(--space-lg);
    border-bottom: 1px solid var(--color-border);
  }

  .modal__header h2 {
    margin: 0;
    font-size: var(--text-xl);
    color: var(--color-gold);
  }

  .modal__close {
    background: none;
    border: none;
    font-size: var(--text-2xl);
    color: var(--color-text-muted);
    cursor: pointer;
    padding: 0;
    line-height: 1;
    transition: color var(--transition-fast);
  }

  .modal__close:hover {
    color: var(--color-text);
  }

  .modal__body {
    padding: var(--space-lg);
    overflow-y: auto;
  }

  .modal__footer {
    display: flex;
    justify-content: flex-end;
    gap: var(--space-sm);
    padding: var(--space-lg);
    border-top: 1px solid var(--color-border);
    background: var(--color-bg-secondary);
  }

  /* Form Styles */
  .staging-form {
    margin-bottom: var(--space-lg);
  }

  .form-group {
    margin-bottom: var(--space-md);
  }

  .form-group label {
    display: block;
    font-size: var(--text-sm);
    font-weight: 500;
    color: var(--color-text-secondary);
    margin-bottom: var(--space-xs);
  }

  .staging-select,
  .staging-input {
    width: 100%;
    padding: var(--space-sm) var(--space-md);
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    color: var(--color-text);
    font-size: var(--text-base);
  }

  .staging-select:focus,
  .staging-input:focus {
    outline: none;
    border-color: var(--color-gold);
  }

  .form-hint {
    font-size: var(--text-xs);
    color: var(--color-text-muted);
    margin: var(--space-xs) 0 0;
  }

  .form-divider {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    margin: var(--space-lg) 0;
    color: var(--color-text-muted);
    font-size: var(--text-sm);
  }

  .form-divider::before,
  .form-divider::after {
    content: '';
    flex: 1;
    height: 1px;
    background: var(--color-border);
  }

  /* Entity Preview */
  .entity-summary {
    background: var(--color-bg-secondary);
    border-radius: var(--radius-md);
    padding: var(--space-md);
  }

  .entity-summary h3 {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    margin: 0 0 var(--space-sm);
  }

  .entity-preview-mini {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
  }

  .entity-type-badge {
    padding: 2px 8px;
    background: var(--color-accent);
    border-radius: var(--radius-sm);
    font-size: var(--text-xs);
    color: white;
    text-transform: uppercase;
    font-weight: 600;
  }

  .entity-name {
    font-weight: 500;
    color: var(--color-gold);
  }

  /* Error display */
  .staging-error {
    margin-top: var(--space-md);
    padding: var(--space-sm) var(--space-md);
    background: rgba(239, 68, 68, 0.1);
    border: 1px solid var(--color-error);
    border-radius: var(--radius-sm);
    color: var(--color-error);
    font-size: var(--text-sm);
  }
</style>
