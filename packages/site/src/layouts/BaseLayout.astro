---
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';
import '@styles/global.css';

export interface Props {
  title: string;
  description?: string;
  image?: string;
  article?: boolean;
  pubDate?: Date;
  updatedDate?: Date;
}

const {
  title,
  description = 'A blog about adventures, campaigns, and creative endeavors.',
  image = '/assets/og-default.png',
  article = false,
  pubDate,
  updatedDate,
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const ogImageURL = new URL(image, Astro.site);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <!-- Inline script to prevent theme flash - runs before page renders -->
    <script is:inline>
      (function() {
        var theme = localStorage.getItem('theme');
        if (!theme) {
          theme = window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
        }
        document.documentElement.setAttribute('data-theme', theme);
      })();
    </script>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href={canonicalURL} />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={article ? 'article' : 'website'} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImageURL} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={ogImageURL} />

    <!-- Article specific meta -->
    {article && pubDate && (
      <meta property="article:published_time" content={pubDate.toISOString()} />
    )}
    {article && updatedDate && (
      <meta property="article:modified_time" content={updatedDate.toISOString()} />
    )}

    <!-- RSS Feed -->
    <link
      rel="alternate"
      type="application/rss+xml"
      title="RSS Feed"
      href="/rss.xml"
    />

    <!-- Preload critical assets -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />

    <!-- Named slot for page-specific head content -->
    <slot name="head" />
  </head>

  <body>
    <a href="#main-content" class="skip-link">Skip to main content</a>

    <Header />

    <main id="main-content">
      <slot />
    </main>

    <Footer />

    <style>
      body {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
      }

      main {
        flex: 1;
        padding: var(--space-xl) 0;
      }
    </style>
  </body>
</html>
