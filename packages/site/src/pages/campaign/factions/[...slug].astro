---
import BaseLayout from '@layouts/BaseLayout.astro';
import { getCollection, render } from 'astro:content';

export async function getStaticPaths() {
  // Fetch all collections in parallel for entity linking
  const [entries, characters, enemies, locations, factions, items] = await Promise.all([
    getCollection('factions'),
    getCollection('characters'),
    getCollection('enemies'),
    getCollection('locations'),
    getCollection('factions'),
    getCollection('items'),
  ]);

  // Build entity lookup map for linking relationships
  const entityLookup: Record<string, { name: string; path: string }> = {};
  characters.forEach(e => entityLookup[e.id] = { name: e.data.name, path: `/campaign/characters/${e.id}` });
  enemies.forEach(e => entityLookup[e.id] = { name: e.data.name, path: `/campaign/enemies/${e.id}` });
  locations.forEach(e => entityLookup[e.id] = { name: e.data.name, path: `/campaign/locations/${e.id}` });
  factions.forEach(e => entityLookup[e.id] = { name: e.data.name, path: `/campaign/factions/${e.id}` });
  items.forEach(e => entityLookup[e.id] = { name: e.data.name, path: `/campaign/items/${e.id}` });

  return entries.map(entry => ({
    params: { slug: entry.id },
    props: { entry, entityLookup },
  }));
}

const { entry, entityLookup } = Astro.props;
const { Content } = await render(entry);

const statusColors: Record<string, string> = {
  active: 'status--active',
  inactive: 'status--inactive',
  dead: 'status--dead',
  destroyed: 'status--dead',
  unknown: 'status--unknown',
  dormant: 'status--inactive',
};
---

<BaseLayout
  title={`${entry.data.name} - Campaign Reference`}
  description={entry.data.description || `Details about ${entry.data.name}`}
>
  <article class="entity-page">
    <header class="entity-header">
      <nav class="breadcrumb">
        <a href="/reference">Reference</a>
        <span class="breadcrumb__sep">/</span>
        <a href="/reference#factions">Factions</a>
        <span class="breadcrumb__sep">/</span>
        <span>{entry.data.name}</span>
      </nav>

      <div class="entity-title-row">
        <h1 class="entity-title">{entry.data.name}</h1>
        <span class={`entity-status ${statusColors[entry.data.status] || 'status--unknown'}`}>
          {entry.data.status}
        </span>
      </div>

      {entry.data.description && (
        <p class="entity-description">{entry.data.description}</p>
      )}

      <div class="entity-meta">
        {entry.data.subtype && (
          <span class="meta-tag meta-tag--faction">{entry.data.subtype}</span>
        )}
        {entry.data.leader && (
          <span class="meta-tag">Led by {entry.data.leader}</span>
        )}
        {entry.data.headquarters && (
          <span class="meta-tag">HQ: {entry.data.headquarters}</span>
        )}
      </div>

      {entry.data.tags && entry.data.tags.length > 0 && (
        <ul class="entity-tags">
          {entry.data.tags.map((tag: string) => (
            <li class="entity-tag">{tag}</li>
          ))}
        </ul>
      )}
    </header>

    <div class="entity-content prose">
      <Content />
    </div>

    {entry.data.goals && entry.data.goals.length > 0 && (
      <aside class="entity-goals">
        <h2>Goals & Objectives</h2>
        <ul class="goals-list">
          {entry.data.goals.map((goal: string) => (
            <li class="goal-item">{goal}</li>
          ))}
        </ul>
      </aside>
    )}

    {(entry.data.allies && entry.data.allies.length > 0) || (entry.data.enemies && entry.data.enemies.length > 0) ? (
      <aside class="entity-allegiances">
        <h2>Allegiances</h2>
        <div class="allegiances-grid">
          {entry.data.allies && entry.data.allies.length > 0 && (
            <div class="allegiance-group allegiance-group--allies">
              <h3>Allies</h3>
              <ul>
                {entry.data.allies.map((ally: string) => {
                  const linked = entityLookup[ally];
                  return linked ? (
                    <li><a href={linked.path} class="allegiance-link">{linked.name}</a></li>
                  ) : (
                    <li>{ally}</li>
                  );
                })}
              </ul>
            </div>
          )}
          {entry.data.enemies && entry.data.enemies.length > 0 && (
            <div class="allegiance-group allegiance-group--enemies">
              <h3>Enemies</h3>
              <ul>
                {entry.data.enemies.map((enemy: string) => {
                  const linked = entityLookup[enemy];
                  return linked ? (
                    <li><a href={linked.path} class="allegiance-link">{linked.name}</a></li>
                  ) : (
                    <li>{enemy}</li>
                  );
                })}
              </ul>
            </div>
          )}
        </div>
      </aside>
    ) : null}

    {entry.data.relationships && entry.data.relationships.length > 0 && (
      <aside class="entity-relationships">
        <h2>Relationships</h2>
        <ul class="relationship-list">
          {entry.data.relationships.map((rel: { entity: string; type: string; note?: string }) => {
            const linked = entityLookup[rel.entity];
            return (
              <li class="relationship-item">
                <span class="relationship-type">{rel.type}</span>
                {linked ? (
                  <a href={linked.path} class="relationship-entity relationship-entity--link">
                    {linked.name}
                  </a>
                ) : (
                  <span class="relationship-entity">{rel.entity}</span>
                )}
                {rel.note && <span class="relationship-note">{rel.note}</span>}
              </li>
            );
          })}
        </ul>
      </aside>
    )}

    <footer class="entity-footer">
      <a href="/reference" class="back-link">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <polyline points="15 18 9 12 15 6"></polyline>
        </svg>
        Back to Reference
      </a>
    </footer>
  </article>
</BaseLayout>

<style>
  .entity-page {
    max-width: 800px;
    margin: 0 auto;
    padding: var(--space-xl) var(--space-lg);
  }

  .breadcrumb {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    margin-bottom: var(--space-lg);
  }

  .breadcrumb a {
    color: var(--color-text-secondary);
    text-decoration: none;
  }

  .breadcrumb a:hover {
    color: var(--color-gold);
  }

  .breadcrumb__sep {
    color: var(--color-border);
  }

  .entity-header {
    margin-bottom: var(--space-2xl);
    padding-bottom: var(--space-xl);
    border-bottom: 2px solid var(--color-border);
  }

  .entity-title-row {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    margin-bottom: var(--space-md);
  }

  .entity-title {
    font-family: var(--font-display);
    font-size: var(--text-4xl);
    color: var(--color-warning);
    margin: 0;
  }

  .entity-status {
    font-size: var(--text-sm);
    padding: 4px 12px;
    border-radius: var(--radius-md);
    text-transform: uppercase;
    font-weight: 600;
  }

  .status--active { background: var(--color-success); color: white; }
  .status--inactive { background: var(--color-text-muted); color: white; }
  .status--dead { background: var(--color-error); color: white; }
  .status--unknown { background: var(--color-warning); color: var(--color-bg); }

  .entity-description {
    font-size: var(--text-lg);
    color: var(--color-text-secondary);
    font-style: italic;
    margin: 0 0 var(--space-md);
  }

  .entity-meta {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-sm);
    margin-bottom: var(--space-md);
  }

  .meta-tag {
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    padding: 4px 12px;
    border-radius: var(--radius-md);
    font-size: var(--text-sm);
    text-transform: capitalize;
    color: var(--color-accent);
  }

  .meta-tag--faction {
    background: var(--color-warning);
    border-color: var(--color-warning);
    color: var(--color-bg);
  }

  .entity-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-xs);
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .entity-tag {
    background: var(--color-bg-tertiary);
    padding: 2px 8px;
    border-radius: var(--radius-sm);
    font-size: var(--text-xs);
    color: var(--color-text-muted);
  }

  .entity-content {
    margin-bottom: var(--space-2xl);
  }

  .entity-content :global(h1) {
    display: none;
  }

  .entity-content :global(h2) {
    font-family: var(--font-display);
    font-size: var(--text-xl);
    color: var(--color-accent);
    margin-top: var(--space-xl);
    margin-bottom: var(--space-md);
  }

  .entity-content :global(h3) {
    font-size: var(--text-lg);
    margin-top: var(--space-lg);
    margin-bottom: var(--space-sm);
  }

  .entity-content :global(p) {
    margin-bottom: var(--space-md);
    line-height: 1.7;
  }

  .entity-content :global(ul) {
    margin-bottom: var(--space-md);
    padding-left: var(--space-lg);
  }

  .entity-goals {
    background: var(--color-bg-secondary);
    padding: var(--space-lg);
    border-radius: var(--radius-lg);
    border: 2px solid var(--color-warning);
    margin-bottom: var(--space-xl);
  }

  .entity-goals h2 {
    font-family: var(--font-display);
    font-size: var(--text-lg);
    color: var(--color-warning);
    margin: 0 0 var(--space-md);
  }

  .goals-list {
    list-style: disc;
    padding-left: var(--space-lg);
    margin: 0;
  }

  .goal-item {
    margin-bottom: var(--space-xs);
    color: var(--color-text);
  }

  .entity-allegiances {
    background: var(--color-bg-secondary);
    padding: var(--space-lg);
    border-radius: var(--radius-lg);
    border: 2px solid var(--color-border);
    margin-bottom: var(--space-xl);
  }

  .entity-allegiances h2 {
    font-family: var(--font-display);
    font-size: var(--text-lg);
    color: var(--color-gold);
    margin: 0 0 var(--space-md);
  }

  .allegiances-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: var(--space-lg);
  }

  .allegiance-group h3 {
    font-size: var(--text-sm);
    text-transform: uppercase;
    margin: 0 0 var(--space-sm);
  }

  .allegiance-group--allies h3 {
    color: var(--color-success);
  }

  .allegiance-group--enemies h3 {
    color: var(--color-error);
  }

  .allegiance-group ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .allegiance-group li {
    padding: var(--space-xs) 0;
    color: var(--color-text);
  }

  .allegiance-link {
    color: var(--color-text);
    text-decoration: none;
    font-weight: 500;
    transition: color var(--transition-fast);
  }

  .allegiance-link:hover {
    color: var(--color-gold);
    text-decoration: underline;
  }

  .entity-relationships {
    background: var(--color-bg-secondary);
    padding: var(--space-lg);
    border-radius: var(--radius-lg);
    border: 2px solid var(--color-border);
    margin-bottom: var(--space-2xl);
  }

  .entity-relationships h2 {
    font-family: var(--font-display);
    font-size: var(--text-lg);
    color: var(--color-gold);
    margin: 0 0 var(--space-md);
  }

  .relationship-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
  }

  .relationship-item {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: var(--space-sm);
    padding: var(--space-sm);
    background: var(--color-bg);
    border-radius: var(--radius-sm);
  }

  .relationship-type {
    background: var(--color-accent);
    color: white;
    padding: 2px 8px;
    border-radius: var(--radius-sm);
    font-size: var(--text-xs);
    font-weight: 600;
    text-transform: uppercase;
  }

  .relationship-entity {
    font-weight: 600;
    color: var(--color-text);
  }

  .relationship-entity--link {
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .relationship-entity--link:hover {
    color: var(--color-accent);
    text-decoration: underline;
  }

  .relationship-note {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    font-style: italic;
  }

  .entity-footer {
    padding-top: var(--space-xl);
    border-top: 1px solid var(--color-border);
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    padding: var(--space-sm) var(--space-md);
    background: var(--color-bg-secondary);
    border-radius: var(--radius-md);
    color: var(--color-text-secondary);
    text-decoration: none;
    font-weight: 500;
    transition: all var(--transition-fast);
  }

  .back-link:hover {
    background: var(--color-bg-tertiary);
    color: var(--color-text);
  }
</style>
