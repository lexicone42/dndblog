---
import BaseLayout from '@layouts/BaseLayout.astro';
import { getCollection, render } from 'astro:content';

// Get collection for type inference
const allItemEntries = await getCollection('items');
type ItemEntryType = typeof allItemEntries[0];

interface UsedByInfo {
  id: string;
  name: string;
  path: string;
  slot?: string;
}

interface Props {
  entry: ItemEntryType;
  entityLookup: Record<string, { name: string; path: string }>;
  usedBy: UsedByInfo[];
}

export async function getStaticPaths() {
  // Fetch all collections in parallel for entity linking
  const [entries, characters, enemies, locations, factions, items] = await Promise.all([
    getCollection('items'),
    getCollection('characters'),
    getCollection('enemies'),
    getCollection('locations'),
    getCollection('factions'),
    getCollection('items'),
  ]);

  type CharacterEntry = typeof characters[0];
  type EnemyEntry = typeof enemies[0];
  type LocationEntry = typeof locations[0];
  type FactionEntry = typeof factions[0];
  type ItemEntry = typeof items[0];

  // Build entity lookup map for linking relationships
  const entityLookup: Record<string, { name: string; path: string }> = {};
  characters.forEach((e: CharacterEntry) => entityLookup[e.id] = { name: e.data.name, path: `/campaign/characters/${e.id}` });
  enemies.forEach((e: EnemyEntry) => entityLookup[e.id] = { name: e.data.name, path: `/campaign/enemies/${e.id}` });
  locations.forEach((e: LocationEntry) => entityLookup[e.id] = { name: e.data.name, path: `/campaign/locations/${e.id}` });
  factions.forEach((e: FactionEntry) => entityLookup[e.id] = { name: e.data.name, path: `/campaign/factions/${e.id}` });
  items.forEach((e: ItemEntry) => entityLookup[e.id] = { name: e.data.name, path: `/campaign/items/${e.id}` });

  // Build "used by" map: which characters have each item equipped
  const usedByMap: Record<string, Array<{ id: string; name: string; path: string; slot?: string }>> = {};

  characters.forEach((char: CharacterEntry) => {
    const equipped = char.data.equipment?.equipped || [];
    equipped.forEach((eq: { item: string; slot?: string }) => {
      if (eq.item) {
        if (!usedByMap[eq.item]) {
          usedByMap[eq.item] = [];
        }
        usedByMap[eq.item].push({
          id: char.id,
          name: char.data.name,
          path: `/campaign/characters/${char.id}`,
          slot: eq.slot,
        });
      }
    });
  });

  return entries.map((entry: ItemEntry) => ({
    params: { slug: entry.id },
    props: { entry, entityLookup, usedBy: usedByMap[entry.id] || [] },
  }));
}

const { entry, entityLookup, usedBy } = Astro.props as Props;
const { Content } = await render(entry);

const statusColors: Record<string, string> = {
  active: 'status--active',
  inactive: 'status--inactive',
  dead: 'status--dead',
  destroyed: 'status--dead',
  unknown: 'status--unknown',
};

const rarityColors: Record<string, string> = {
  common: 'rarity--common',
  uncommon: 'rarity--uncommon',
  rare: 'rarity--rare',
  'very-rare': 'rarity--very-rare',
  legendary: 'rarity--legendary',
  artifact: 'rarity--artifact',
};
---

<BaseLayout
  title={`${entry.data.name} - Campaign Reference`}
  description={entry.data.description || `Details about ${entry.data.name}`}
>
  <article class="entity-page">
    <header class="entity-header">
      <nav class="breadcrumb">
        <a href="/campaign/items">Items</a>
        <span class="breadcrumb__sep">/</span>
        <span>{entry.data.name}</span>
      </nav>

      <div class="entity-title-row">
        <h1 class="entity-title">{entry.data.name}</h1>
        {entry.data.rarity && (
          <span class={`entity-rarity ${rarityColors[entry.data.rarity] || ''}`}>
            {entry.data.rarity}
          </span>
        )}
        <span class={`entity-status ${statusColors[entry.data.status] || 'status--unknown'}`}>
          {entry.data.status}
        </span>
      </div>

      {entry.data.description && (
        <p class="entity-description">{entry.data.description}</p>
      )}

      <div class="entity-meta">
        {entry.data.subtype && (
          <span class="meta-tag meta-tag--item">{entry.data.subtype}</span>
        )}
        {entry.data.currentOwner && (
          <span class="meta-tag">Owner: {entry.data.currentOwner}</span>
        )}
        {entry.data.baseItem && (
          <span class="meta-tag">Base: {entry.data.baseItem}</span>
        )}
      </div>

      {entry.data.properties && entry.data.properties.length > 0 && (
        <div class="entity-properties">
          {entry.data.properties.map((prop: string) => (
            <span class="property-tag">{prop}</span>
          ))}
        </div>
      )}

      {entry.data.tags && entry.data.tags.length > 0 && (
        <ul class="entity-tags">
          {entry.data.tags.map((tag: string) => (
            <li class="entity-tag">{tag}</li>
          ))}
        </ul>
      )}
    </header>

    <div class="entity-content prose">
      <Content />
    </div>

    {entry.data.ownershipHistory && entry.data.ownershipHistory.length > 0 && (
      <aside class="entity-history">
        <h2>Ownership History</h2>
        <ul class="history-list">
          {entry.data.ownershipHistory.map((record: { owner: string; acquiredIn?: string; lostIn?: string; method?: string }) => (
            <li class="history-item">
              <span class="history-owner">{record.owner}</span>
              {record.method && <span class="history-method">({record.method})</span>}
            </li>
          ))}
        </ul>
      </aside>
    )}

    {usedBy.length > 0 && (
      <aside class="entity-used-by">
        <h2>Used By</h2>
        <ul class="used-by-list">
          {usedBy.map((user: { name: string; path: string; slot?: string }) => (
            <li class="used-by-item">
              <a href={user.path} class="used-by-link">
                {user.name}
              </a>
              {user.slot && (
                <span class="used-by-slot">{user.slot}</span>
              )}
            </li>
          ))}
        </ul>
      </aside>
    )}

    {entry.data.relationships && entry.data.relationships.length > 0 && (
      <aside class="entity-relationships">
        <h2>Relationships</h2>
        <ul class="relationship-list">
          {entry.data.relationships.map((rel: { entity: string; type: string; note?: string }) => {
            const linked = entityLookup[rel.entity];
            return (
              <li class="relationship-item">
                <span class="relationship-type">{rel.type}</span>
                {linked ? (
                  <a href={linked.path} class="relationship-entity relationship-entity--link">
                    {linked.name}
                  </a>
                ) : (
                  <span class="relationship-entity">{rel.entity}</span>
                )}
                {rel.note && <span class="relationship-note">{rel.note}</span>}
              </li>
            );
          })}
        </ul>
      </aside>
    )}

    <footer class="entity-footer">
      <a href="/campaign/items" class="back-link">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <polyline points="15 18 9 12 15 6"></polyline>
        </svg>
        Back to Items
      </a>
    </footer>
  </article>
</BaseLayout>

<style>
  .entity-page {
    max-width: 800px;
    margin: 0 auto;
    padding: var(--space-xl) var(--space-lg);
  }

  .breadcrumb {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    margin-bottom: var(--space-lg);
  }

  .breadcrumb a {
    color: var(--color-text-secondary);
    text-decoration: none;
  }

  .breadcrumb a:hover {
    color: var(--color-gold);
  }

  .breadcrumb__sep {
    color: var(--color-border);
  }

  .entity-header {
    margin-bottom: var(--space-2xl);
    padding-bottom: var(--space-xl);
    border-bottom: 2px solid var(--color-border);
  }

  .entity-title-row {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    gap: var(--space-md);
    margin-bottom: var(--space-md);
  }

  .entity-title {
    font-family: var(--font-display);
    font-size: var(--text-4xl);
    color: var(--color-success);
    margin: 0;
  }

  .entity-rarity {
    font-size: var(--text-sm);
    padding: 4px 12px;
    border-radius: var(--radius-md);
    text-transform: capitalize;
    font-weight: 600;
  }

  .rarity--common {
    background: var(--color-text-muted);
    color: white;
  }

  .rarity--uncommon {
    background: #1eff00;
    color: black;
  }

  .rarity--rare {
    background: #0070dd;
    color: white;
  }

  .rarity--very-rare {
    background: #a335ee;
    color: white;
  }

  .rarity--legendary {
    background: #ff8000;
    color: white;
  }

  .rarity--artifact {
    background: linear-gradient(135deg, #e6cc80, #cfa13e);
    color: black;
  }

  /* Status badge base styles in global.css; size override for detail pages */
  .entity-status {
    font-size: var(--text-sm);
    padding: 4px 12px;
    border-radius: var(--radius-md);
  }

  .entity-description {
    font-size: var(--text-lg);
    color: var(--color-text-secondary);
    font-style: italic;
    margin: 0 0 var(--space-md);
  }

  .entity-meta {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-sm);
    margin-bottom: var(--space-md);
  }

  .meta-tag {
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    padding: 4px 12px;
    border-radius: var(--radius-md);
    font-size: var(--text-sm);
    text-transform: capitalize;
    color: var(--color-accent);
  }

  .meta-tag--item {
    background: var(--color-success);
    border-color: var(--color-success);
    color: white;
  }

  .entity-properties {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-xs);
    margin-bottom: var(--space-md);
  }

  .property-tag {
    background: var(--color-gold);
    color: var(--color-bg);
    padding: 2px 8px;
    border-radius: var(--radius-sm);
    font-size: var(--text-xs);
    font-weight: 600;
  }

  .entity-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-xs);
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .entity-tag {
    background: var(--color-bg-tertiary);
    padding: 2px 8px;
    border-radius: var(--radius-sm);
    font-size: var(--text-xs);
    color: var(--color-text-muted);
  }

  .entity-content {
    margin-bottom: var(--space-2xl);
  }

  .entity-content :global(h1) {
    display: none;
  }

  .entity-content :global(h2) {
    font-family: var(--font-display);
    font-size: var(--text-xl);
    color: var(--color-accent);
    margin-top: var(--space-xl);
    margin-bottom: var(--space-md);
  }

  .entity-content :global(h3) {
    font-size: var(--text-lg);
    margin-top: var(--space-lg);
    margin-bottom: var(--space-sm);
  }

  .entity-content :global(p) {
    margin-bottom: var(--space-md);
    line-height: 1.7;
  }

  .entity-content :global(ul) {
    margin-bottom: var(--space-md);
    padding-left: var(--space-lg);
  }

  .entity-history {
    background: var(--color-bg-secondary);
    padding: var(--space-lg);
    border-radius: var(--radius-lg);
    border: 2px solid var(--color-success);
    margin-bottom: var(--space-xl);
  }

