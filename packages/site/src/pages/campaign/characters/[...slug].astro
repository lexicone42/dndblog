---
import BaseLayout from '@layouts/BaseLayout.astro';
import CharacterSheet from '@components/character-sheet/CharacterSheet.astro';
import { getCollection, render } from 'astro:content';

export async function getStaticPaths() {
  // Fetch all collections in parallel
  const [entries, characters, enemies, locations, factions, items, spells, glossary] = await Promise.all([
    getCollection('characters'),
    getCollection('characters'),
    getCollection('enemies'),
    getCollection('locations'),
    getCollection('factions'),
    getCollection('items'),
    getCollection('spells'),
    getCollection('glossary'),
  ]);

  // Type aliases for collection entries
  type CharacterEntry = typeof characters[0];
  type EnemyEntry = typeof enemies[0];
  type LocationEntry = typeof locations[0];
  type FactionEntry = typeof factions[0];
  type ItemEntry = typeof items[0];
  type SpellEntry = typeof spells[0];
  type GlossaryEntry = typeof glossary[0];

  // Build entity lookup map for linking relationships
  const entityLookup: Record<string, { name: string; path: string }> = {};
  characters.forEach((e: CharacterEntry) => entityLookup[e.id] = { name: e.data.name, path: `/campaign/characters/${e.id}` });
  enemies.forEach((e: EnemyEntry) => entityLookup[e.id] = { name: e.data.name, path: `/campaign/enemies/${e.id}` });
  locations.forEach((e: LocationEntry) => entityLookup[e.id] = { name: e.data.name, path: `/campaign/locations/${e.id}` });
  factions.forEach((e: FactionEntry) => entityLookup[e.id] = { name: e.data.name, path: `/campaign/factions/${e.id}` });
  items.forEach((e: ItemEntry) => entityLookup[e.id] = { name: e.data.name, path: `/campaign/items/${e.id}` });

  // Build enhanced item lookup with rarity for character sheet equipment display
  const itemLookup: Record<string, { name: string; path: string; rarity?: string }> = {};
  items.forEach((e: ItemEntry) => itemLookup[e.id] = {
    name: e.data.name,
    path: `/campaign/items/${e.id}`,
    rarity: e.data.rarity,
  });

  // Build spell lookup for character sheet spellcasting section
  // Map by spell name (display name) for easy lookup from character data
  const spellLookup: Record<string, { name: string; path: string; level: number; school: string }> = {};
  spells.forEach((s: SpellEntry) => spellLookup[s.data.name] = {
    name: s.data.name,
    path: `/campaign/spells/${s.id}`,
    level: s.data.level,
    school: s.data.school,
  });

  // Build glossary lookup for rules term tooltips
  const glossaryLookup: Record<string, { name: string; slug: string; description: string; category?: string }> = {};
  glossary.forEach((g: GlossaryEntry) => glossaryLookup[g.data.name] = {
    name: g.data.name,
    slug: g.data.slug,
    description: g.data.description,
    category: g.data.category,
  });

  return entries.map((entry: CharacterEntry) => ({
    params: { slug: entry.id },
    props: { entry, entityLookup, itemLookup, spellLookup, glossaryLookup },
  }));
}

// Type for entries
const entriesForType = await getCollection('characters');
type CharacterEntry = typeof entriesForType[0];

// Props interface
interface Props {
  entry: CharacterEntry;
  entityLookup: Record<string, { name: string; path: string }>;
  itemLookup: Record<string, { name: string; path: string; rarity?: string }>;
  spellLookup: Record<string, { name: string; path: string; level: number; school: string }>;
  glossaryLookup: Record<string, { name: string; slug: string; description: string; category?: string }>;
}

const { entry, entityLookup, itemLookup, spellLookup, glossaryLookup } = Astro.props as Props;
const { Content } = await render(entry);

const statusColors: Record<string, string> = {
  active: 'status--active',
  inactive: 'status--inactive',
  dead: 'status--dead',
  destroyed: 'status--dead',
  unknown: 'status--unknown',
};
---

<BaseLayout
  title={`${entry.data.name} - Campaign Reference`}
  description={entry.data.description || `Details about ${entry.data.name}`}
>
  <article class="entity-page">
    <header class="entity-header">
      <nav class="breadcrumb">
        <a href="/campaign/characters">Characters</a>
        <span class="breadcrumb__sep">/</span>
        <span>{entry.data.name}</span>
      </nav>

      <div class="entity-title-row">
        <h1 class="entity-title">{entry.data.name}</h1>
        <span class={`entity-status ${statusColors[entry.data.status] || 'status--unknown'}`}>
          {entry.data.status}
        </span>
        <a
          href={`/dm/entities?type=character&slug=${entry.id}`}
          class="dm-edit-btn"
          id="dm-edit-btn"
          style="display: none;"
          title="Edit in DM Dashboard"
        >
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
            <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
          </svg>
          Edit
        </a>
      </div>

      {entry.data.description && (
        <p class="entity-description">{entry.data.description}</p>
      )}

      <div class="entity-meta">
        {entry.data.subtype && (
          <span class="meta-tag">{entry.data.subtype}</span>
        )}
        {entry.data.class && (
          <span class="meta-tag">{entry.data.class}</span>
        )}
        {entry.data.race && (
          <span class="meta-tag">{entry.data.race}</span>
        )}
      </div>

      {entry.id === 'rudiger' && (
        <a href="/rudiger" class="rudiger-promo">
          <span class="promo-sparkle">&#10022;</span>
          <span class="promo-text">
            <strong>EXCLUSIVE ORIGIN STORY!</strong>
            <em>The Tale of Two Rudigers â€” A cosmic coincidence you WON'T believe!</em>
          </span>
          <span class="promo-sparkle">&#10022;</span>
        </a>
      )}

      {entry.data.tags && entry.data.tags.length > 0 && (
        <ul class="entity-tags">
          {entry.data.tags.map((tag: string) => (
            <li class="entity-tag">{tag}</li>
          ))}
        </ul>
      )}
    </header>

    {/* Character Sheet for PCs with mechanical data */}
    {entry.data.subtype === 'pc' && (
      <CharacterSheet
        character={entry.data}
        itemLookup={itemLookup}
        spellLookup={spellLookup}
        glossaryLookup={glossaryLookup}
      />
    )}

    <div class="entity-content prose">
      <Content />
    </div>

    {entry.data.relationships && entry.data.relationships.length > 0 && (
      <aside class="entity-relationships">
        <h2>Relationships</h2>
        <ul class="relationship-list">
          {entry.data.relationships.map((rel: { entity: string; type: string; note?: string }) => {
            const linked = entityLookup[rel.entity];
            return (
              <li class="relationship-item">
                <span class="relationship-type">{rel.type}</span>
                {linked ? (
                  <a href={linked.path} class="relationship-entity relationship-entity--link">
                    {linked.name}
                  </a>
                ) : (
                  <span class="relationship-entity">{rel.entity}</span>
                )}
                {rel.note && <span class="relationship-note">{rel.note}</span>}
              </li>
            );
          })}
        </ul>
      </aside>
    )}

    <footer class="entity-footer">
      <a href="/reference" class="back-link">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <polyline points="15 18 9 12 15 6"></polyline>
        </svg>
        Back to Reference
      </a>
    </footer>
  </article>
</BaseLayout>

<style>
  .entity-page {
    max-width: 800px;
    margin: 0 auto;
    padding: var(--space-xl) var(--space-lg);
  }

  .breadcrumb {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    margin-bottom: var(--space-lg);
  }

  .breadcrumb a {
    color: var(--color-text-secondary);
    text-decoration: none;
  }

  .breadcrumb a:hover {
    color: var(--color-gold);
  }

  .breadcrumb__sep {
    color: var(--color-border);
  }

  .entity-header {
    margin-bottom: var(--space-2xl);
    padding-bottom: var(--space-xl);
    border-bottom: 2px solid var(--color-border);
  }

  .entity-title-row {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    margin-bottom: var(--space-md);
  }

  .entity-title {
    font-family: var(--font-display);
    font-size: var(--text-4xl);
    color: var(--color-gold);
    margin: 0;
  }

  /* Status badge base styles in global.css; size override for detail pages */
  .entity-status {
    font-size: var(--text-sm);
    padding: 4px 12px;
    border-radius: var(--radius-md);
  }

  .entity-description {
    font-size: var(--text-lg);
    color: var(--color-text-secondary);
    font-style: italic;
    margin: 0 0 var(--space-md);
  }

  .entity-meta {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-sm);
    margin-bottom: var(--space-md);
  }

  .meta-tag {
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    padding: 4px 12px;
    border-radius: var(--radius-md);
    font-size: var(--text-sm);
    text-transform: capitalize;
    color: var(--color-accent);
  }

  .entity-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-xs);
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .entity-tag {
    background: var(--color-bg-tertiary);
    padding: 2px 8px;
    border-radius: var(--radius-sm);
    font-size: var(--text-xs);
    color: var(--color-text-muted);
  }

  /* Obnoxiously hyped Rudiger promo */
  .rudiger-promo {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-sm);
    margin: var(--space-lg) 0;
    padding: var(--space-md) var(--space-lg);
    background: linear-gradient(135deg, #1a0a2e 0%, #16213e 50%, #1a0a2e 100%);
    border: 2px solid var(--color-gold);
    border-radius: var(--radius-lg);
    text-decoration: none;
    position: relative;
    overflow: hidden;
    animation: promo-glow 2s ease-in-out infinite;
  }

  .rudiger-promo::before {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: linear-gradient(
      45deg,
      transparent 30%,
      rgba(212, 175, 55, 0.1) 50%,
      transparent 70%
    );
    animation: promo-shine 3s ease-in-out infinite;
  }

  @keyframes promo-glow {
    0%, 100% { box-shadow: 0 0 10px rgba(212, 175, 55, 0.3), 0 0 20px rgba(212, 175, 55, 0.1); }
    50% { box-shadow: 0 0 20px rgba(212, 175, 55, 0.5), 0 0 40px rgba(212, 175, 55, 0.2); }
  }

  @keyframes promo-shine {
    0% { transform: translateX(-100%) rotate(45deg); }
    100% { transform: translateX(100%) rotate(45deg); }
  }

  .promo-sparkle {
    font-size: var(--text-xl);
    color: var(--color-gold);
    animation: sparkle-spin 4s linear infinite;
  }

  @keyframes sparkle-spin {
    0% { transform: rotate(0deg) scale(1); }
    25% { transform: rotate(90deg) scale(1.2); }
    50% { transform: rotate(180deg) scale(1); }
    75% { transform: rotate(270deg) scale(1.2); }
    100% { transform: rotate(360deg) scale(1); }
  }

  .promo-text {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    z-index: 1;
  }

  .promo-text strong {
    font-size: var(--text-sm);
    color: var(--color-gold);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    text-shadow: 0 0 10px rgba(212, 175, 55, 0.5);
  }

  .promo-text em {
    font-size: var(--text-xs);
    color: var(--color-accent);
    margin-top: 2px;
  }

  .rudiger-promo:hover {
    transform: scale(1.02);
    border-color: #fff;
  }

  .rudiger-promo:hover .promo-text strong {
    text-shadow: 0 0 20px rgba(212, 175, 55, 0.8);
  }

  .entity-content {
    margin-bottom: var(--space-2xl);
  }

  .entity-content :global(h1) {
    display: none;
  }

  .entity-content :global(h2) {
    font-family: var(--font-display);
    font-size: var(--text-xl);
    color: var(--color-accent);
    margin-top: var(--space-xl);
    margin-bottom: var(--space-md);
  }

  .entity-content :global(h3) {
    font-size: var(--text-lg);
    margin-top: var(--space-lg);
    margin-bottom: var(--space-sm);
  }

  .entity-content :global(p) {
    margin-bottom: var(--space-md);
    line-height: 1.7;
  }

  .entity-content :global(ul) {
    margin-bottom: var(--space-md);
    padding-left: var(--space-lg);
  }

  .entity-relationships {
    background: var(--color-bg-secondary);
    padding: var(--space-lg);
    border-radius: var(--radius-lg);
    border: 2px solid var(--color-border);
    margin-bottom: var(--space-2xl);
  }

  .entity-relationships h2 {
    font-family: var(--font-display);
    font-size: var(--text-lg);
    color: var(--color-gold);
    margin: 0 0 var(--space-md);
  }

  .relationship-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
  }

  .relationship-item {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: var(--space-sm);
    padding: var(--space-sm);
    background: var(--color-bg);
    border-radius: var(--radius-sm);
  }

  .relationship-type {
    background: var(--color-accent);
    color: white;
    padding: 2px 8px;
    border-radius: var(--radius-sm);
    font-size: var(--text-xs);
    font-weight: 600;
    text-transform: uppercase;
  }

  .relationship-entity {
    font-weight: 600;
    color: var(--color-text);
  }

  .relationship-entity--link {
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .relationship-entity--link:hover {
    color: var(--color-accent);
    text-decoration: underline;
  }

  .relationship-note {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    font-style: italic;
  }

  .entity-footer {
    padding-top: var(--space-xl);
    border-top: 1px solid var(--color-border);
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    padding: var(--space-sm) var(--space-md);
    background: var(--color-bg-secondary);
    border-radius: var(--radius-md);
    color: var(--color-text-secondary);
    text-decoration: none;
    font-weight: 500;
    transition: all var(--transition-fast);
  }

  .back-link:hover {
    background: var(--color-bg-tertiary);
    color: var(--color-text);
  }

  /* DM Edit Button */
  .dm-edit-btn {
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
    padding: 4px 10px;
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-gold);
    border-radius: var(--radius-md);
    color: var(--color-gold);
    text-decoration: none;
    font-size: var(--text-sm);
    font-weight: 500;
    transition: all var(--transition-fast);
    margin-left: auto;
  }

  .dm-edit-btn:hover {
    background: var(--color-gold);
    color: var(--color-bg);
  }

  .dm-edit-btn svg {
    flex-shrink: 0;
  }
</style>

<script>
  // Show DM edit button if authenticated
  (function() {
    var token = localStorage.getItem('dmToken');
    if (token) {
      var btn = document.getElementById('dm-edit-btn');
      if (btn) {
        btn.style.display = 'inline-flex';
      }
    }
  })();
</script>
