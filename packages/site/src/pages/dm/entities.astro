          '<h3 class="entity-name">' + escapeHtml(fm.name || 'Unnamed Entity') + '</h3>' +
          '<div class="entity-meta">' + typeTag + subtypeTag + statusTag + attrTags + '</div>' +
          '<p class="entity-description">' + escapeHtml(fm.description || 'No description') + '</p>' +
          abilitiesHtml +
          relationshipsHtml +
          detailsHtml +
          markdownHtml +
          tagsHtml;
      }

