      async function saveEntity() {
        if (!editingEntity || !editingEntity.branchName) return;

        var token = getToken();
        var apiUrl = getApiUrl();
        var content = document.getElementById('edit-entity-content').value;
        var branchName = editingEntity.branchName;

        var saveBtn = document.getElementById('save-entity-btn');
        var validateBtn = document.getElementById('validate-entity-btn');
        saveBtn.disabled = true;
        validateBtn.disabled = true;
        saveBtn.textContent = 'Validating...';

        // Validate first
        var isValid = await validateEntity(false);
        if (!isValid) {
          saveBtn.disabled = false;
          validateBtn.disabled = false;
          saveBtn.textContent = 'Save Changes';
          return;
        }

        saveBtn.textContent = 'Saving...';

        try {
          // Parse content to extract updated frontmatter
          var match = content.match(/^---\n([\s\S]*?)\n---\n([\s\S]*)$/);
          if (!match) throw new Error('Invalid format - missing frontmatter');

          var yamlStr = match[1];
          var markdown = match[2];

          // Extract key fields from YAML
          var name = (yamlStr.match(/name:\s*"?([^"\n]+)"?/) || [])[1] || editingEntity.frontmatter?.name;
          var type = (yamlStr.match(/type:\s*"?([^"\n]+)"?/) || [])[1] || editingEntity.entityType;
          var subtype = (yamlStr.match(/subtype:\s*"?([^"\n]+)"?/) || [])[1] || editingEntity.frontmatter?.subtype;
          var description = (yamlStr.match(/description:\s*"?([^"\n]+)"?/) || [])[1] || '';

          var updatedEntity = Object.assign({}, editingEntity, {
            fullContent: content,
            markdown: markdown,
            frontmatter: Object.assign({}, editingEntity.frontmatter, {
              name: name,
              type: type,
              subtype: subtype,
              description: description
            })
          });

          var response = await fetch(
            apiUrl + '/staging/branches/' + encodeURIComponent(branchName) +
            '/entities/' + encodeURIComponent(editingEntity.entityType) +
            '/' + encodeURIComponent(editingEntity.slug),
            {
              method: 'PUT',
              headers: {
                'Content-Type': 'application/json',
                'X-DM-Token': token
              },
              body: JSON.stringify(updatedEntity)
            }
          );

          if (!response.ok) throw new Error('Failed to save entity');

          closeAllModals();
          // Update entity in allEntities array
          var idx = allEntities.findIndex(function(e) { return e.slug === editingEntity.slug && e.branchName === branchName; });
          if (idx !== -1) {
            allEntities[idx] = updatedEntity;
          }
          renderAllEntities();
          renderBranchCards();

        } catch (error) {
          alert('Error: ' + error.message);
        } finally {
          saveBtn.disabled = false;
          validateBtn.disabled = false;
          saveBtn.textContent = 'Save Changes';
        }
      }

