---
/**
 * Entity Staging Page
 *
 * Complete entity management hub: generate, organize, edit, and publish.
 * Features:
 * - Branch sidebar: Create, select, delete staging branches
 * - Entities tab: View, edit, delete entities within a branch
 * - Generator tab: AI-powered entity creation, add directly to branch
 * - Publish to GitHub: Create feature branches and PRs
 *
 * Token-gated access (same pattern as dm-notes)
 *
 * Security note: All user content is rendered via textContent for XSS safety.
 * Never use innerHTML with user-provided data.
 */
import BaseLayout from '@layouts/BaseLayout.astro';
import '@components/dm-notes/dm-notes-shared.css';

// Get API URL from environment variable
const apiUrl = import.meta.env.PUBLIC_DM_NOTES_API_URL || '';
---

<BaseLayout
  title="Entity Staging - Rudiger's Evocation of Events"
  description="Manage staged entities for your campaign"
>
  <div class="staging-page">
    <!-- Access Denied (shown when no token) -->
    <div id="access-denied" class="access-denied">
      <div class="access-denied__content">
        <h1>Access Denied</h1>
        <p>This page requires DM authentication.</p>
        <p class="access-denied__hint">Add <code>?token=YOUR_TOKEN</code> to the URL</p>
      </div>
    </div>

    <!-- Main Content (hidden until authenticated) -->
    <div id="staging-content" class="staging-content" style="display: none;">
      <header class="staging-header">
        <h1>Entity Staging</h1>
        <p class="staging-subtitle">Manage your staged entities before publishing to the campaign wiki</p>
      </header>

      <div class="staging-layout">
        <!-- Branch Sidebar -->
        <aside class="branch-sidebar">
          <div class="sidebar-header">
            <h2>Branches</h2>
            <button id="new-branch-btn" class="btn btn--primary btn--sm">+ New</button>
          </div>
          <div id="branch-list" class="branch-list">
            <div class="branch-loading">Loading branches...</div>
          </div>
        </aside>

        <!-- Main Content Area -->
        <main class="entity-main">
          <div id="no-branch-selected" class="empty-state">
            <div class="empty-state__icon">ðŸ“‚</div>
            <h3>Select a Branch</h3>
            <p>Choose a branch from the sidebar to view its entities, or create a new one.</p>
          </div>

          <div id="branch-detail" class="branch-detail" style="display: none;">
            <!-- Tab Navigation -->
            <nav class="staging-tabs" role="tablist" aria-label="Staging sections">
              <button class="staging-tab staging-tab--active" data-tab="entities" role="tab" aria-selected="true" aria-controls="entities-panel">
                Entities
              </button>
              <button class="staging-tab" data-tab="generator" role="tab" aria-selected="false" aria-controls="generator-panel">
                + Generate New
              </button>
            </nav>

            <!-- Entities Panel -->
            <div id="entities-panel" class="staging-panel" role="tabpanel" aria-labelledby="tab-entities">
              <div class="branch-detail__header">
                <div class="branch-detail__info">
                  <h2 id="branch-title">Branch Name</h2>
                  <p id="branch-description" class="branch-description">Description</p>
                  <div class="branch-meta">
                    <span id="branch-entity-count" class="meta-item">0 entities</span>
                    <span id="branch-status" class="meta-item status-badge">draft</span>
                  </div>
                </div>
                <div class="branch-detail__actions">
                  <a id="branch-pr-link" href="#" target="_blank" class="btn btn--secondary" style="display: none;">
                    View PR
                  </a>
                  <button id="publish-branch-btn" class="btn btn--primary">
                    Publish to GitHub
                  </button>
                  <button id="delete-branch-btn" class="btn btn--danger btn--sm">Delete Branch</button>
                </div>
              </div>

              <div id="entity-grid" class="entity-grid">
                <!-- Entities will be rendered here -->
              </div>

              <div id="no-entities" class="empty-state" style="display: none;">
                <div class="empty-state__icon">âœ¨</div>
                <h3>No Entities Yet</h3>
                <p>Use the <strong>+ Generate New</strong> tab to create entities and add them to this branch.</p>
              </div>
            </div>

            <!-- Generator Panel -->
            <div id="generator-panel" class="staging-panel" role="tabpanel" aria-labelledby="tab-generator" style="display: none;">
              <div class="generator-section">
                <header class="generator-header">
                  <h2>Entity Generator</h2>
                  <p class="generator-subtitle">Describe an entity in plain text and let AI structure it</p>
                </header>

                <!-- Input Section -->
                <div class="generator-input">
                  <label for="entity-input" class="visually-hidden">Entity description</label>
                  <textarea
                    id="entity-input"
                    class="entity-input"
                    placeholder="orc 2gold one scimitar named gorok, real piece of shit&#10;&#10;OR try:&#10;â€¢ tavern called the Rusty Anchor in Sharn&#10;â€¢ +1 longsword of flame, legendary&#10;â€¢ cult of shadow worshippers led by Malzak"
                    rows="4"
                  ></textarea>

                  <div class="generator-controls">
                    <div class="hint-selector">
                      <label for="entity-type-hint">Type hint:</label>
                      <select id="entity-type-hint" class="type-hint-select">
                        <option value="">Auto-detect</option>
                        <option value="character">Character (NPC)</option>
                        <option value="enemy">Enemy</option>
                        <option value="item">Item</option>
                        <option value="location">Location</option>
                        <option value="faction">Faction</option>
                      </select>
                    </div>
                    <button id="generate-btn" class="btn btn--primary">Generate Entity</button>
                  </div>
                </div>

                <!-- Loading State -->
                <div id="generator-loading" class="generator-loading" role="status" aria-live="polite" style="display: none;">
                  <span class="loading-spinner" aria-hidden="true"></span>
                  <span>Generating entity...</span>
                </div>

                <!-- Error State -->
                <div id="generator-error" class="generator-error" role="alert" aria-live="assertive" style="display: none;"></div>

                <!-- Preview Section -->
                <div id="generator-preview" class="generator-preview" style="display: none;">
                  <div class="preview-header">
                    <h3>Generated Entity</h3>
                    <span id="confidence-badge" class="confidence-badge"></span>
                  </div>

                  <!-- Entity Card Preview -->
                  <div id="entity-card-preview" class="entity-card-preview"></div>

                  <!-- Suggestions -->
                  <div id="suggestions-panel" class="suggestions-panel" style="display: none;">
                    <h4>Suggestions</h4>
                    <ul id="suggestions-list" class="suggestions-list"></ul>
                  </div>

                  <!-- YAML Editor (collapsible) -->
                  <details class="yaml-editor-section">
                    <summary>View/Edit YAML Frontmatter</summary>
                    <textarea id="yaml-editor" class="yaml-editor" rows="15"></textarea>
                  </details>

                  <!-- Actions -->
                  <div class="preview-actions">
                    <button id="regenerate-btn" class="btn btn--secondary">Regenerate</button>
                    <button id="copy-btn" class="btn btn--secondary">Copy to Clipboard</button>
                    <button id="download-btn" class="btn btn--secondary">Download .md</button>
                    <button id="add-to-branch-btn" class="btn btn--primary">Add to Branch</button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </main>
      </div>
    </div>

    <!-- New Branch Modal -->
    <div id="new-branch-modal" class="modal" style="display: none;">
      <div class="modal__backdrop"></div>
      <div class="modal__content">
        <div class="modal__header">
          <h2>Create New Branch</h2>
          <button class="modal__close" data-close-modal>&times;</button>
        </div>
        <form id="new-branch-form" class="modal__body">
          <div class="form-group">
            <label for="branch-name-input">Branch Name</label>
            <input type="text" id="branch-name-input" placeholder="session-15-prep" required pattern="[a-z0-9-]+" />
            <span class="form-hint">Lowercase letters, numbers, and hyphens only</span>
          </div>
          <div class="form-group">
            <label for="branch-display-name">Display Name</label>
            <input type="text" id="branch-display-name" placeholder="Session 15 Prep" />
          </div>
          <div class="form-group">
            <label for="branch-desc-input">Description</label>
            <textarea id="branch-desc-input" placeholder="NPCs and items for upcoming session" rows="2"></textarea>
          </div>
        </form>
        <div class="modal__footer">
          <button class="btn btn--secondary" data-close-modal>Cancel</button>
          <button id="create-branch-btn" class="btn btn--primary">Create Branch</button>
        </div>
      </div>
    </div>

    <!-- Edit Entity Modal -->
    <div id="edit-entity-modal" class="modal" style="display: none;">
      <div class="modal__backdrop"></div>
      <div class="modal__content modal__content--wide">
        <div class="modal__header">
          <h2 id="edit-entity-title">Edit Entity</h2>
          <button class="modal__close" data-close-modal>&times;</button>
        </div>
        <div class="modal__body">
          <div class="edit-entity-layout">
            <div class="edit-entity-preview">
              <h3>Preview</h3>
              <div id="edit-entity-preview-content" class="entity-card-preview"></div>
            </div>
            <div class="edit-entity-editor">
              <h3>Content (Frontmatter + Markdown)</h3>
              <textarea id="edit-entity-content" class="yaml-editor" rows="20"></textarea>
            </div>
          </div>
          <!-- Validation Errors -->
          <div id="validation-errors" class="validation-errors" style="display: none;">
            <div class="validation-errors__header">
              <span class="validation-icon">âš </span>
              <span>Validation Errors</span>
            </div>
            <ul id="validation-error-list" class="validation-error-list"></ul>
          </div>
        </div>
        <div class="modal__footer">
          <button class="btn btn--secondary" data-close-modal>Cancel</button>
          <button id="validate-entity-btn" class="btn btn--secondary">Validate</button>
          <button id="save-entity-btn" class="btn btn--primary">Save Changes</button>
        </div>
      </div>
    </div>

    <!-- Delete Confirm Modal -->
    <div id="delete-confirm-modal" class="modal" style="display: none;">
      <div class="modal__backdrop"></div>
      <div class="modal__content modal__content--sm">
        <div class="modal__header">
          <h2>Confirm Delete</h2>
          <button class="modal__close" data-close-modal>&times;</button>
        </div>
        <div class="modal__body">
          <p id="delete-confirm-message">Are you sure you want to delete this?</p>
        </div>
        <div class="modal__footer">
          <button class="btn btn--secondary" data-close-modal>Cancel</button>
          <button id="confirm-delete-btn" class="btn btn--danger">Delete</button>
        </div>
      </div>
    </div>

    <!-- Publish Modal -->
    <div id="publish-modal" class="modal" style="display: none;">
      <div class="modal__backdrop"></div>
      <div class="modal__content">
        <div class="modal__header">
          <h2 id="publish-modal-title">Publish to GitHub</h2>
          <button class="modal__close" data-close-modal>&times;</button>
        </div>
        <div class="modal__body">
          <div id="publish-confirm" class="publish-confirm">
            <p>This will create a GitHub branch and pull request with all entities from this staging branch.</p>
            <div class="publish-summary">
              <div class="summary-item">
                <span class="summary-label">Branch:</span>
                <span id="publish-branch-name" class="summary-value"></span>
              </div>
              <div class="summary-item">
                <span class="summary-label">Entities:</span>
                <span id="publish-entity-count" class="summary-value"></span>
              </div>
              <div class="summary-item">
                <span class="summary-label">GitHub branch:</span>
                <span id="publish-github-branch" class="summary-value"></span>
              </div>
            </div>
          </div>
          <div id="publish-progress" class="publish-progress" style="display: none;">
            <div class="loading-spinner"></div>
            <p>Publishing to GitHub...</p>
          </div>
          <div id="publish-success" class="publish-success" style="display: none;">
            <div class="success-icon">âœ“</div>
            <h3>Published Successfully!</h3>
            <p>Your entities have been pushed to GitHub and a pull request has been created.</p>
            <a id="publish-pr-url" href="#" target="_blank" class="btn btn--primary">View Pull Request</a>
          </div>
          <div id="publish-error" class="publish-error" style="display: none;"></div>
        </div>
        <div id="publish-modal-footer" class="modal__footer">
          <button class="btn btn--secondary" data-close-modal>Cancel</button>
          <button id="confirm-publish-btn" class="btn btn--primary">Publish</button>
        </div>
      </div>
    </div>
  </div>

  <!-- Store API URL in a data attribute -->
  <div id="config" data-api-url={apiUrl} style="display: none;"></div>

  <!-- Main Script -->
  <script is:inline>
    (function() {
      var currentBranch = null;
      var currentBranchData = null;
      var allBranches = [];
      var currentEntities = [];
      var editingEntity = null;
      var deleteTarget = null; // { type: 'branch' | 'entity', ... }
      var currentResult = null; // Generator result
      var currentTab = 'entities'; // 'entities' or 'generator'

      function getToken() {
        var params = new URLSearchParams(window.location.search);
        return params.get('token');
      }

      function getApiUrl() {
        var configEl = document.getElementById('config');
        return configEl ? configEl.dataset.apiUrl : '';
      }

      function showContent() {
        document.getElementById('access-denied').style.display = 'none';
        document.getElementById('staging-content').style.display = 'block';
      }

      function showAccessDenied() {
        document.getElementById('access-denied').style.display = 'flex';
        document.getElementById('staging-content').style.display = 'none';
      }

      // Modal helpers
      function openModal(id) {
        document.getElementById(id).style.display = 'flex';
      }

      function closeAllModals() {
        document.querySelectorAll('.modal').forEach(function(m) {
          m.style.display = 'none';
        });
        editingEntity = null;
        deleteTarget = null;
      }

      // ===========================================
      // Branch Operations
      // ===========================================

      async function loadBranches() {
        var token = getToken();
        var apiUrl = getApiUrl();
        var listEl = document.getElementById('branch-list');

        listEl.textContent = '';
        var loadingDiv = document.createElement('div');
        loadingDiv.className = 'branch-loading';
        loadingDiv.textContent = 'Loading...';
        listEl.appendChild(loadingDiv);

        try {
          var response = await fetch(apiUrl + '/staging/branches', {
            headers: { 'X-DM-Token': token }
          });

          if (!response.ok) throw new Error('Failed to load branches');

          var data = await response.json();
          allBranches = data.branches || [];
          renderBranchList();

        } catch (error) {
          console.error('Error loading branches:', error);
          listEl.textContent = '';
          var errorDiv = document.createElement('div');
          errorDiv.className = 'branch-error';
          errorDiv.textContent = 'Failed to load branches';
          listEl.appendChild(errorDiv);
        }
      }

      function renderBranchList() {
        var listEl = document.getElementById('branch-list');
        listEl.textContent = '';

        if (allBranches.length === 0) {
          var emptyDiv = document.createElement('div');
          emptyDiv.className = 'branch-empty';
          emptyDiv.textContent = 'No branches yet. Create one to get started!';
          listEl.appendChild(emptyDiv);
          return;
        }

        allBranches.forEach(function(branch) {
          var item = document.createElement('button');
          item.className = 'branch-item' + (currentBranch === branch.name ? ' branch-item--active' : '');
          item.dataset.branch = branch.name;

          var nameSpan = document.createElement('span');
          nameSpan.className = 'branch-item__name';
          nameSpan.textContent = branch.displayName || branch.name;

          var countSpan = document.createElement('span');
          countSpan.className = 'branch-item__count';
          countSpan.textContent = String(branch.entityCount || 0);

          item.appendChild(nameSpan);
          item.appendChild(countSpan);

          item.addEventListener('click', function() {
            selectBranch(branch.name);
          });
          listEl.appendChild(item);
        });
      }

      async function selectBranch(branchName) {
        var token = getToken();
        var apiUrl = getApiUrl();

        currentBranch = branchName;
        renderBranchList(); // Update active state

        document.getElementById('no-branch-selected').style.display = 'none';
        document.getElementById('branch-detail').style.display = 'block';

        // Show loading state
        var gridEl = document.getElementById('entity-grid');
        gridEl.textContent = '';
        var loadingDiv = document.createElement('div');
        loadingDiv.className = 'loading-grid';
        loadingDiv.textContent = 'Loading entities...';
        gridEl.appendChild(loadingDiv);
        document.getElementById('no-entities').style.display = 'none';

        try {
          var response = await fetch(apiUrl + '/staging/branches/' + encodeURIComponent(branchName), {
            headers: { 'X-DM-Token': token }
          });

          if (!response.ok) throw new Error('Failed to load branch');

          var data = await response.json();
          currentEntities = data.entities || [];

          // Update header
          document.getElementById('branch-title').textContent = data.displayName || data.name;
          document.getElementById('branch-description').textContent = data.description || '';
          document.getElementById('branch-entity-count').textContent = currentEntities.length + ' entities';
          document.getElementById('branch-status').textContent = data.status || 'draft';
          document.getElementById('branch-status').className = 'meta-item status-badge status-badge--' + (data.status || 'draft');

          // Show/hide PR link if published
          var prLink = document.getElementById('branch-pr-link');
          var publishBtn = document.getElementById('publish-branch-btn');
          if (data.githubPrUrl) {
            prLink.href = data.githubPrUrl;
            prLink.style.display = 'inline-flex';
            publishBtn.textContent = 'Republish';
          } else {
            prLink.style.display = 'none';
            publishBtn.textContent = 'Publish to GitHub';
          }

          // Store branch data for publish
          currentBranchData = data;

          renderEntityGrid();

        } catch (error) {
          console.error('Error loading branch:', error);
          gridEl.textContent = '';
          var errorDiv = document.createElement('div');
          errorDiv.className = 'error-message';
          errorDiv.textContent = 'Failed to load branch';
          gridEl.appendChild(errorDiv);
        }
      }

      async function createBranch() {
        var token = getToken();
        var apiUrl = getApiUrl();

        var name = document.getElementById('branch-name-input').value.trim().toLowerCase().replace(/[^a-z0-9-]/g, '-');
        var displayName = document.getElementById('branch-display-name').value.trim() || name;
        var description = document.getElementById('branch-desc-input').value.trim();

        if (!name) {
          alert('Branch name is required');
          return;
        }

        var btn = document.getElementById('create-branch-btn');
        btn.disabled = true;
        btn.textContent = 'Creating...';

        try {
          var response = await fetch(apiUrl + '/staging/branches', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
              'X-DM-Token': token
            },
            body: JSON.stringify({ name: name, displayName: displayName, description: description })
          });

          if (!response.ok) {
            var errorData = await response.json().catch(function() { return {}; });
            throw new Error(errorData.error || 'Failed to create branch');
          }

          closeAllModals();
          document.getElementById('new-branch-form').reset();
          await loadBranches();
          selectBranch(name);

        } catch (error) {
          alert('Error: ' + error.message);
        } finally {
          btn.disabled = false;
          btn.textContent = 'Create Branch';
        }
      }

      async function deleteBranch() {
        if (!deleteTarget || deleteTarget.type !== 'branch') return;

        var token = getToken();
        var apiUrl = getApiUrl();
        var branchName = deleteTarget.name;

        var btn = document.getElementById('confirm-delete-btn');
        btn.disabled = true;
        btn.textContent = 'Deleting...';

        try {
          var response = await fetch(apiUrl + '/staging/branches/' + encodeURIComponent(branchName), {
            method: 'DELETE',
            headers: { 'X-DM-Token': token }
          });

          if (!response.ok) throw new Error('Failed to delete branch');

          closeAllModals();
          currentBranch = null;
          document.getElementById('branch-detail').style.display = 'none';
          document.getElementById('no-branch-selected').style.display = 'block';
          await loadBranches();

        } catch (error) {
          alert('Error: ' + error.message);
        } finally {
          btn.disabled = false;
          btn.textContent = 'Delete';
        }
      }

      // ===========================================
      // Entity Operations
      // ===========================================

      function renderEntityGrid() {
        var gridEl = document.getElementById('entity-grid');
        var emptyEl = document.getElementById('no-entities');

        gridEl.textContent = '';

        if (currentEntities.length === 0) {
          emptyEl.style.display = 'block';
          return;
        }

        emptyEl.style.display = 'none';

        currentEntities.forEach(function(entity) {
          var card = document.createElement('article');
          card.className = 'entity-card';
          card.dataset.type = entity.entityType;
          card.dataset.slug = entity.slug;

          var fm = entity.frontmatter || {};

          // Build card header
          var header = document.createElement('div');
          header.className = 'entity-card__header';

          var name = document.createElement('h3');
          name.className = 'entity-card__name';
          name.textContent = fm.name || entity.slug;

          var tags = document.createElement('div');
          tags.className = 'entity-card__tags';

          var typeTag = document.createElement('span');
          typeTag.className = 'entity-tag entity-tag--type';
          typeTag.textContent = entity.entityType;
          tags.appendChild(typeTag);

          if (fm.subtype) {
            var subtypeTag = document.createElement('span');
            subtypeTag.className = 'entity-tag entity-tag--subtype';
            subtypeTag.textContent = fm.subtype;
            tags.appendChild(subtypeTag);
          }

          header.appendChild(name);
          header.appendChild(tags);

          // Build description
          var desc = document.createElement('p');
          desc.className = 'entity-card__desc';
          desc.textContent = fm.description || '';

          // Build actions
          var actions = document.createElement('div');
          actions.className = 'entity-card__actions';

          var editBtn = document.createElement('button');
          editBtn.className = 'btn btn--secondary btn--sm';
          editBtn.textContent = 'Edit';
          editBtn.addEventListener('click', function(e) {
            e.stopPropagation();
            openEditEntityModal(entity);
          });

          var deleteBtn = document.createElement('button');
          deleteBtn.className = 'btn btn--danger btn--sm';
          deleteBtn.textContent = 'Delete';
          deleteBtn.addEventListener('click', function(e) {
            e.stopPropagation();
            confirmDeleteEntity(entity);
          });

          actions.appendChild(editBtn);
          actions.appendChild(deleteBtn);

          card.appendChild(header);
          card.appendChild(desc);
          card.appendChild(actions);

          gridEl.appendChild(card);
        });
      }

      function openEditEntityModal(entity) {
        editingEntity = entity;
        document.getElementById('edit-entity-title').textContent = 'Edit: ' + (entity.frontmatter?.name || entity.slug);
        document.getElementById('edit-entity-content').value = entity.fullContent || '';
        renderEditPreview();
        openModal('edit-entity-modal');
      }

      function renderEditPreview() {
        var content = document.getElementById('edit-entity-content').value;
        var previewEl = document.getElementById('edit-entity-preview-content');
        previewEl.textContent = '';

        // Parse frontmatter for preview
        var match = content.match(/^---\n([\s\S]*?)\n---\n([\s\S]*)$/);
        if (!match) {
          var errorP = document.createElement('p');
          errorP.className = 'preview-error';
          errorP.textContent = 'Invalid format - missing frontmatter';
          previewEl.appendChild(errorP);
          return;
        }

        try {
          var yamlStr = match[1];
          var markdown = match[2];

          // Simple YAML parsing for preview (extract key fields)
          var name = (yamlStr.match(/name:\s*"?([^"\n]+)"?/) || [])[1] || 'Unnamed';
          var type = (yamlStr.match(/type:\s*"?([^"\n]+)"?/) || [])[1] || 'unknown';
          var subtype = (yamlStr.match(/subtype:\s*"?([^"\n]+)"?/) || [])[1] || '';
          var description = (yamlStr.match(/description:\s*"?([^"\n]+)"?/) || [])[1] || '';

          var h3 = document.createElement('h3');
          h3.textContent = name;
          previewEl.appendChild(h3);

          var tagsDiv = document.createElement('div');
          tagsDiv.className = 'preview-tags';

          var typeSpan = document.createElement('span');
          typeSpan.className = 'entity-tag entity-tag--type';
          typeSpan.textContent = type;
          tagsDiv.appendChild(typeSpan);

          if (subtype) {
            var subtypeSpan = document.createElement('span');
            subtypeSpan.className = 'entity-tag entity-tag--subtype';
            subtypeSpan.textContent = subtype;
            tagsDiv.appendChild(subtypeSpan);
          }
          previewEl.appendChild(tagsDiv);

          var descP = document.createElement('p');
          descP.textContent = description;
          previewEl.appendChild(descP);

          var mdPreview = document.createElement('div');
          mdPreview.className = 'preview-markdown';
          mdPreview.textContent = markdown.substring(0, 500) + (markdown.length > 500 ? '...' : '');
          previewEl.appendChild(mdPreview);

        } catch (e) {
          var errorP = document.createElement('p');
