---
/**
 * Entity Staging Page
 *
 * Complete entity management hub: generate, organize, edit, and publish.
 * Features:
 * - Create tab: AI-powered entity generation with single draft preview
 * - Organize tab: Branch management + entity list view
 * - Organize tab: Entity cards with inline accordion editing
 * - Publish to GitHub: Create feature branches and PRs
 *
 * Token-gated access (same pattern as dm-notes)
 *
 * Security note: All user content is rendered via textContent for XSS safety.
 * Never use innerHTML with user-provided data.
 */
import BaseLayout from '@layouts/BaseLayout.astro';
import '@components/dm-notes/dm-notes-shared.css';

// Get API URL from environment variable
const apiUrl = import.meta.env.PUBLIC_DM_NOTES_API_URL || '';
---

<BaseLayout
  title="Entity Staging - Rudiger's Evocation of Events"
  description="Manage staged entities for your campaign"
>
  <div class="staging-page">
    <!-- Access Denied (shown when no token) -->
    <div id="access-denied" class="access-denied">
      <div class="access-denied__content">
        <h1>Access Denied</h1>
        <p>This page requires DM authentication.</p>
        <p class="access-denied__hint">Add <code>?token=YOUR_TOKEN</code> to the URL</p>
      </div>
    </div>

    <!-- Main Content (hidden until authenticated) -->
    <div id="staging-content" class="staging-content" style="display: none;">
      <!-- Dashboard Header -->
      <header class="dashboard-header">
        <div class="dashboard-header__info">
          <h1>Entity Management</h1>
          <p class="dashboard-subtitle">Create, organize, and publish campaign entities</p>
        </div>
        <div class="dashboard-stats" id="dashboard-stats">
          <div class="stat-card">
            <span class="stat-value" id="stat-total-entities">-</span>
            <span class="stat-label">Total Entities</span>
          </div>
          <div class="stat-card">
            <span class="stat-value" id="stat-branches">-</span>
            <span class="stat-label">Branches</span>
          </div>
          <div class="stat-card">
            <span class="stat-value" id="stat-draft">-</span>
            <span class="stat-label">Draft</span>
          </div>
        </div>
      </header>

      <!-- Main Tab Navigation -->
      <nav class="dashboard-tabs" role="tablist" aria-label="Entity management sections">
        <button class="dashboard-tab dashboard-tab--active" data-tab="create" role="tab" aria-selected="true" aria-controls="create-panel">
          Create
        </button>
        <button class="dashboard-tab" data-tab="organize" role="tab" aria-selected="false" aria-controls="organize-panel">
          Organize
        </button>
      </nav>

      <!-- Create Panel - Generator + Draft Preview Only -->
      <div id="create-panel" class="dashboard-panel" role="tabpanel" aria-labelledby="tab-create">
        <!-- Compact Generator Section -->
        <div class="generator-compact">
          <div class="generator-compact__header">
            <h2>Quick Generate</h2>
            <button id="toggle-generator-btn" class="btn btn--ghost btn--sm">Expand</button>
          </div>
          <div class="generator-compact__input">
            <label for="entity-input" class="visually-hidden">Entity description</label>
            <textarea
              id="entity-input"
              class="entity-input"
              placeholder="orc 2gold one scimitar named gorok, real piece of shit&#10;&#10;OR try: tavern called the Rusty Anchor â€¢ +1 longsword of flame â€¢ cult of shadow worshippers"
              rows="2"
            ></textarea>
            <div class="generator-compact__controls">
              <div class="hint-selector">
                <label for="entity-type-hint">Type:</label>
                <select id="entity-type-hint" class="type-hint-select">
                  <option value="">Auto</option>
                  <option value="character">Character</option>
                  <option value="enemy">Enemy</option>
                  <option value="item">Item</option>
                  <option value="location">Location</option>
                  <option value="faction">Faction</option>
                </select>
              </div>
              <button id="generate-btn" class="btn btn--primary">Generate</button>
            </div>
          </div>

          <!-- Loading State -->
          <div id="generator-loading" class="generator-loading" role="status" aria-live="polite" style="display: none;">
            <span class="loading-spinner" aria-hidden="true"></span>
            <span>Generating entity...</span>
          </div>

          <!-- Error State -->
          <div id="generator-error" class="generator-error" role="alert" aria-live="assertive" style="display: none;"></div>

          <!-- Preview Section -->
          <div id="generator-preview" class="generator-preview" style="display: none;">
            <div class="preview-header">
              <h3>Generated Entity</h3>
              <span id="confidence-badge" class="confidence-badge"></span>
            </div>

            <!-- Entity Card Preview -->
            <div id="entity-card-preview" class="entity-card-preview"></div>

            <!-- Suggestions -->
            <div id="suggestions-panel" class="suggestions-panel" style="display: none;">
              <h4>Suggestions</h4>
              <ul id="suggestions-list" class="suggestions-list"></ul>
            </div>

            <!-- YAML Editor (collapsible) -->
            <details class="yaml-editor-section">
              <summary>View/Edit YAML Frontmatter</summary>
              <textarea id="yaml-editor" class="yaml-editor" rows="15"></textarea>
            </details>

            <!-- Actions with Branch Selector -->
            <div class="preview-actions">
              <button id="regenerate-btn" class="btn btn--secondary">Regenerate</button>
              <button id="copy-btn" class="btn btn--secondary">Copy</button>
              <button id="download-btn" class="btn btn--secondary">Download</button>
              <div class="add-to-branch-group">
                <select id="target-branch-select" class="branch-select">
                  <option value="">Select branch...</option>
                </select>
                <button id="add-to-branch-btn" class="btn btn--primary">Add to Branch</button>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Organize Panel - Branch Management + Entity View -->
      <div id="organize-panel" class="dashboard-panel" role="tabpanel" aria-labelledby="tab-organize" style="display: none;">
        <div class="organize-header">
          <h2>Branches</h2>
          <button id="new-branch-btn" class="btn btn--primary">+ New Branch</button>
        </div>

        <div id="branch-cards" class="branch-cards">
          <div class="loading-grid">Loading branches...</div>
        </div>

        <div id="no-branches" class="empty-state" style="display: none;">
          <div class="empty-state__icon">ðŸ“‚</div>
          <h3>No Branches Yet</h3>
          <p>Create a branch to start organizing your entities for publishing.</p>
        </div>

        <!-- Entity List Section -->
        <div class="entities-section">
          <div class="entities-filter-bar">
            <h2>All Entities</h2>
            <div class="filter-controls">
              <select id="filter-branch" class="filter-select">
                <option value="">All Branches</option>
              </select>
              <select id="filter-type" class="filter-select">
                <option value="">All Types</option>
                <option value="character">Characters</option>
                <option value="enemy">Enemies</option>
                <option value="item">Items</option>
                <option value="location">Locations</option>
                <option value="faction">Factions</option>
              </select>
              <input type="search" id="filter-search" class="filter-search" placeholder="Search entities..." />
            </div>
          </div>

          <!-- Entity Grid -->
          <div id="entity-grid" class="entity-grid">
            <div class="loading-grid">Loading entities...</div>
          </div>

          <div id="no-entities" class="empty-state" style="display: none;">
            <div class="empty-state__icon">âœ¨</div>
            <h3>No Entities Yet</h3>
            <p>Create entities in the Create tab and add them to a branch.</p>
          </div>
        </div>
      </div>

    </div>

    <!-- New Branch Modal -->
    <div id="new-branch-modal" class="modal" style="display: none;">
      <div class="modal__backdrop"></div>
      <div class="modal__content">
        <div class="modal__header">
          <h2>Create New Branch</h2>
          <button class="modal__close" data-close-modal>&times;</button>
        </div>
        <form id="new-branch-form" class="modal__body">
          <div class="form-group">
            <label for="branch-name-input">Branch Name</label>
            <input type="text" id="branch-name-input" placeholder="session-15-prep" required pattern="[a-z0-9-]+" />
            <span class="form-hint">Lowercase letters, numbers, and hyphens only</span>
          </div>
          <div class="form-group">
            <label for="branch-display-name">Display Name</label>
            <input type="text" id="branch-display-name" placeholder="Session 15 Prep" />
          </div>
          <div class="form-group">
            <label for="branch-desc-input">Description</label>
            <textarea id="branch-desc-input" placeholder="NPCs and items for upcoming session" rows="2"></textarea>
          </div>
        </form>
        <div class="modal__footer">
          <button class="btn btn--secondary" data-close-modal>Cancel</button>
          <button id="create-branch-btn" class="btn btn--primary">Create Branch</button>
        </div>
      </div>
    </div>

    <!-- Edit Entity Modal -->
    <div id="edit-entity-modal" class="modal" style="display: none;">
      <div class="modal__backdrop"></div>
      <div class="modal__content modal__content--wide">
        <div class="modal__header">
          <h2 id="edit-entity-title">Edit Entity</h2>
          <button class="modal__close" data-close-modal>&times;</button>
        </div>
        <div class="modal__body">
          <div class="edit-entity-layout">
            <div class="edit-entity-preview">
              <h3>Preview</h3>
              <div id="edit-entity-preview-content" class="entity-card-preview"></div>
            </div>
            <div class="edit-entity-editor">
              <h3>Content (Frontmatter + Markdown)</h3>
              <textarea id="edit-entity-content" class="yaml-editor" rows="20"></textarea>
            </div>
          </div>
          <!-- Validation Errors -->
          <div id="validation-errors" class="validation-errors" style="display: none;">
            <div class="validation-errors__header">
              <span class="validation-icon">âš </span>
              <span>Validation Errors</span>
            </div>
            <ul id="validation-error-list" class="validation-error-list"></ul>
          </div>
        </div>
        <div class="modal__footer">
          <button class="btn btn--secondary" data-close-modal>Cancel</button>
          <button id="validate-entity-btn" class="btn btn--secondary">Validate</button>
          <button id="save-entity-btn" class="btn btn--primary">Save Changes</button>
        </div>
      </div>
    </div>

    <!-- Delete Confirm Modal -->
    <div id="delete-confirm-modal" class="modal" style="display: none;">
      <div class="modal__backdrop"></div>
      <div class="modal__content modal__content--sm">
        <div class="modal__header">
          <h2>Confirm Delete</h2>
          <button class="modal__close" data-close-modal>&times;</button>
        </div>
        <div class="modal__body">
          <p id="delete-confirm-message">Are you sure you want to delete this?</p>
        </div>
        <div class="modal__footer">
          <button class="btn btn--secondary" data-close-modal>Cancel</button>
          <button id="confirm-delete-btn" class="btn btn--danger">Delete</button>
        </div>
      </div>
    </div>

    <!-- Publish Modal -->
    <div id="publish-modal" class="modal" style="display: none;">
      <div class="modal__backdrop"></div>
      <div class="modal__content">
        <div class="modal__header">
          <h2 id="publish-modal-title">Publish to GitHub</h2>
          <button class="modal__close" data-close-modal>&times;</button>
        </div>
        <div class="modal__body">
          <div id="publish-confirm" class="publish-confirm">
            <p>This will create a GitHub branch and pull request with all entities from this staging branch.</p>
            <div class="publish-summary">
              <div class="summary-item">
                <span class="summary-label">Branch:</span>
                <span id="publish-branch-name" class="summary-value"></span>
              </div>
              <div class="summary-item">
                <span class="summary-label">Entities:</span>
                <span id="publish-entity-count" class="summary-value"></span>
              </div>
              <div class="summary-item">
                <span class="summary-label">GitHub branch:</span>
                <span id="publish-github-branch" class="summary-value"></span>
              </div>
            </div>
          </div>
          <div id="publish-progress" class="publish-progress" style="display: none;">
            <div class="loading-spinner"></div>
            <p>Publishing to GitHub...</p>
          </div>
          <div id="publish-success" class="publish-success" style="display: none;">
            <div class="success-icon">âœ“</div>
            <h3>Published Successfully!</h3>
            <p>Your entities have been pushed to GitHub and a pull request has been created.</p>
            <a id="publish-pr-url" href="#" target="_blank" class="btn btn--primary">View Pull Request</a>
          </div>
          <div id="publish-error" class="publish-error" style="display: none;"></div>
        </div>
        <div id="publish-modal-footer" class="modal__footer">
          <button class="btn btn--secondary" data-close-modal>Cancel</button>
          <button id="confirm-publish-btn" class="btn btn--primary">Publish</button>
        </div>
      </div>
    </div>
  </div>

  <!-- Store API URL in a data attribute -->
  <div id="config" data-api-url={apiUrl} style="display: none;"></div>

  <!-- Main Script -->
  <script is:inline>
    (function() {
      // State
      var allBranches = [];
      var allEntities = []; // Aggregated from all branches
      var currentTab = 'create';
      var editingEntity = null;
      var deleteTarget = null; // { type: 'branch' | 'entity', ... }
      var currentResult = null; // Generator result
      var selectedBranchForPublish = null;

      // Filter state
      var filterBranch = '';
      var filterType = '';
      var filterSearch = '';

      function getToken() {
        // Check localStorage first (set by DM dashboard)
        var storedToken = localStorage.getItem('dm-token');
        if (storedToken) return storedToken;
        // Fall back to URL query param for backwards compatibility
        var params = new URLSearchParams(window.location.search);
        return params.get('token');
      }

      function getApiUrl() {
        var configEl = document.getElementById('config');
        return configEl ? configEl.dataset.apiUrl : '';
      }

      function showContent() {
        document.getElementById('access-denied').style.display = 'none';
        document.getElementById('staging-content').style.display = 'block';
      }

      function showAccessDenied() {
        document.getElementById('access-denied').style.display = 'flex';
        document.getElementById('staging-content').style.display = 'none';
      }

      // Modal helpers
      function openModal(id) {
        document.getElementById(id).style.display = 'flex';
      }

      function closeAllModals() {
        document.querySelectorAll('.modal').forEach(function(m) {
          m.style.display = 'none';
        });
        editingEntity = null;
        deleteTarget = null;
      }

      // ===========================================
      // Dashboard Stats
      // ===========================================

      function updateDashboardStats() {
        var totalEntities = allEntities.length;
        var totalBranches = allBranches.length;
        var draftBranches = allBranches.filter(function(b) { return b.status !== 'published'; }).length;

        document.getElementById('stat-total-entities').textContent = totalEntities;
        document.getElementById('stat-branches').textContent = totalBranches;
        document.getElementById('stat-draft').textContent = draftBranches;
      }

      // ===========================================
      // Tab Switching
      // ===========================================

      function switchTab(tab) {
        currentTab = tab;
        var tabs = document.querySelectorAll('.dashboard-tab');
        tabs.forEach(function(t) {
          var isActive = t.dataset.tab === tab;
          t.classList.toggle('dashboard-tab--active', isActive);
          t.setAttribute('aria-selected', isActive ? 'true' : 'false');
        });

        document.getElementById('create-panel').style.display = tab === 'create' ? 'block' : 'none';
        document.getElementById('organize-panel').style.display = tab === 'organize' ? 'block' : 'none';
      }

      // ===========================================
      // Branch Operations
      // ===========================================

      async function loadBranches() {
        var token = getToken();
        var apiUrl = getApiUrl();

        try {
          var response = await fetch(apiUrl + '/staging/branches', {
            headers: { 'X-DM-Token': token }
          });

          if (!response.ok) throw new Error('Failed to load branches');

          var data = await response.json();
          allBranches = data.branches || [];

          // Update UI
          updateBranchSelectors();
          renderBranchCards();
          updateDashboardStats();

        } catch (error) {
          console.error('Error loading branches:', error);
          var cardsEl = document.getElementById('branch-cards');
          cardsEl.textContent = '';
          var errorDiv = document.createElement('div');
          errorDiv.className = 'error-message';
          errorDiv.textContent = 'Failed to load branches';
          cardsEl.appendChild(errorDiv);
        }
      }

      function updateBranchSelectors() {
        // Update filter dropdown
        var filterSelect = document.getElementById('filter-branch');
        filterSelect.textContent = '';
        var allOption = document.createElement('option');
        allOption.value = '';
        allOption.textContent = 'All Branches';
        filterSelect.appendChild(allOption);
        allBranches.forEach(function(branch) {
          var option = document.createElement('option');
          option.value = branch.name;
          option.textContent = branch.displayName || branch.name;
          filterSelect.appendChild(option);
        });

        // Update target branch dropdown for generator
        var targetSelect = document.getElementById('target-branch-select');
        targetSelect.textContent = '';
        var selectOption = document.createElement('option');
        selectOption.value = '';
        selectOption.textContent = 'Select branch...';
        targetSelect.appendChild(selectOption);
        allBranches.forEach(function(branch) {
          var option = document.createElement('option');
          option.value = branch.name;
          option.textContent = branch.displayName || branch.name;
          targetSelect.appendChild(option);
        });
      }

      function renderBranchCards() {
        var cardsEl = document.getElementById('branch-cards');
        var noEl = document.getElementById('no-branches');

        cardsEl.textContent = '';

        if (allBranches.length === 0) {
          noEl.style.display = 'flex';
          return;
        }

        noEl.style.display = 'none';

        allBranches.forEach(function(branch) {
          var card = document.createElement('div');
          card.className = 'branch-card';
          card.dataset.branch = branch.name;

          // Header with title and meta
          var header = document.createElement('div');
          header.className = 'branch-card__header';

          var title = document.createElement('h3');
          title.className = 'branch-card__title';
          title.textContent = branch.displayName || branch.name;

          var meta = document.createElement('div');
          meta.className = 'branch-card__meta';

          var statusBadge = document.createElement('span');
          statusBadge.className = 'status-badge status-badge--' + (branch.status || 'draft');
          statusBadge.textContent = branch.status || 'draft';

          var countBadge = document.createElement('span');
          countBadge.className = 'meta-item';
          countBadge.textContent = (branch.entityCount || 0) + ' entities';

          meta.appendChild(statusBadge);
          meta.appendChild(countBadge);
          header.appendChild(title);
          header.appendChild(meta);

          // Description
          var desc = document.createElement('p');
          desc.className = 'branch-card__desc';
          desc.textContent = branch.description || 'No description';

          // Entity chips preview
          var entitiesDiv = document.createElement('div');
          entitiesDiv.className = 'branch-card__entities';
          var branchEntities = allEntities.filter(function(e) { return e.branchName === branch.name; });
          var showCount = Math.min(branchEntities.length, 4);
          for (var i = 0; i < showCount; i++) {
            var chip = document.createElement('span');
            chip.className = 'entity-chip';
            chip.textContent = branchEntities[i].frontmatter?.name || branchEntities[i].slug;
            entitiesDiv.appendChild(chip);
          }
          if (branchEntities.length > 4) {
            var moreChip = document.createElement('span');
            moreChip.className = 'entity-chip entity-chip--more';
            moreChip.textContent = '+' + (branchEntities.length - 4) + ' more';
            entitiesDiv.appendChild(moreChip);
          }

          // Actions
          var actions = document.createElement('div');
          actions.className = 'branch-card__actions';

          var viewBtn = document.createElement('button');
          viewBtn.className = 'btn btn--secondary btn--sm';
          viewBtn.textContent = 'View Entities';
          viewBtn.addEventListener('click', function() {
            filterBranch = branch.name;
            document.getElementById('filter-branch').value = branch.name;
            applyFilters();
            switchTab('edit');
          });

          var publishBtn = document.createElement('button');
          publishBtn.className = 'btn btn--primary btn--sm';
          publishBtn.textContent = branch.githubPrUrl ? 'Republish' : 'Publish to GitHub';
          publishBtn.addEventListener('click', function() {
            openPublishModal(branch);
          });

          var prLink = null;
          if (branch.githubPrUrl) {
            prLink = document.createElement('a');
            prLink.className = 'btn btn--secondary btn--sm';
            prLink.href = branch.githubPrUrl;
            prLink.target = '_blank';
            prLink.textContent = 'View PR';
          }

          var deleteBtn = document.createElement('button');
          deleteBtn.className = 'btn btn--danger btn--sm';
          deleteBtn.textContent = 'Delete';
          deleteBtn.addEventListener('click', function() {
            deleteTarget = { type: 'branch', name: branch.name, displayName: branch.displayName || branch.name };
            document.getElementById('delete-confirm-message').textContent =
              'Are you sure you want to delete branch "' + deleteTarget.displayName + '" and all its entities? This cannot be undone.';
            openModal('delete-confirm-modal');
          });

          actions.appendChild(viewBtn);
          if (prLink) actions.appendChild(prLink);
          actions.appendChild(publishBtn);
          actions.appendChild(deleteBtn);

          card.appendChild(header);
          card.appendChild(desc);
          if (branchEntities.length > 0) card.appendChild(entitiesDiv);
          card.appendChild(actions);

          cardsEl.appendChild(card);
        });
      }

      // ===========================================
      // Load All Entities
      // ===========================================

      async function loadAllEntities() {
        var token = getToken();
        var apiUrl = getApiUrl();
        var gridEl = document.getElementById('entity-grid');

        gridEl.textContent = '';
        var loadingDiv = document.createElement('div');
        loadingDiv.className = 'loading-grid';
        loadingDiv.textContent = 'Loading entities...';
        gridEl.appendChild(loadingDiv);

        try {
          // First ensure we have branches
          if (allBranches.length === 0) {
            var branchResponse = await fetch(apiUrl + '/staging/branches', {
              headers: { 'X-DM-Token': token }
            });
            if (branchResponse.ok) {
              var branchData = await branchResponse.json();
              allBranches = branchData.branches || [];
            }
          }

          // Fetch entities from all branches in parallel
          var entityPromises = allBranches.map(function(branch) {
            return fetch(apiUrl + '/staging/branches/' + encodeURIComponent(branch.name), {
              headers: { 'X-DM-Token': token }
            }).then(function(r) { return r.json(); })
              .then(function(data) {
                // Add branch name to each entity
                return (data.entities || []).map(function(entity) {
                  entity.branchName = branch.name;
                  entity.branchDisplayName = branch.displayName || branch.name;
                  return entity;
                });
              })
              .catch(function() { return []; });
          });

          var results = await Promise.all(entityPromises);
          allEntities = results.flat();

          // Update UI
          updateBranchSelectors();
          renderBranchCards();
          renderAllEntities();
          updateDashboardStats();

        } catch (error) {
          console.error('Error loading entities:', error);
          gridEl.textContent = '';
          var errorDiv = document.createElement('div');
          errorDiv.className = 'error-message';
          errorDiv.textContent = 'Failed to load entities';
          gridEl.appendChild(errorDiv);
        }
      }

      function applyFilters() {
        filterBranch = document.getElementById('filter-branch').value;
        filterType = document.getElementById('filter-type').value;
        filterSearch = document.getElementById('filter-search').value.toLowerCase();
        renderAllEntities();
      }

      // ===========================================
      // Field Definitions by Entity Type
      // ===========================================
      var fieldsByType = {
        character: [
          { key: 'name', label: 'Name', type: 'text' },
          { key: 'role', label: 'Role', type: 'select', options: ['PC', 'NPC', 'Companion'] },
          { key: 'race', label: 'Race', type: 'text' },
          { key: 'characterClass', label: 'Class', type: 'text' },
          { key: 'alignment', label: 'Alignment', type: 'text' },
          { key: 'status', label: 'Status', type: 'select', options: ['active', 'inactive', 'deceased'] },
          { key: 'description', label: 'Description', type: 'textarea' },
          { key: 'personality', label: 'Personality', type: 'textarea' },
          { key: 'appearance', label: 'Appearance', type: 'textarea' },
          { key: 'background', label: 'Background', type: 'textarea' },
          { key: 'goals', label: 'Goals', type: 'textarea' },
          { key: 'fears', label: 'Fears', type: 'textarea' },
          { key: 'quirks', label: 'Quirks', type: 'textarea' },
          { key: 'tags', label: 'Tags', type: 'tags' }
        ],
        enemy: [
          { key: 'name', label: 'Name', type: 'text' },
          { key: 'enemyType', label: 'Enemy Type', type: 'text' },
