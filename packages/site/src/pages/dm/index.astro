---
/**
 * DM Dashboard Landing Page
 * Central hub for Dungeon Master tools and resources.
 * Requires DM authentication to access.
 */

import BaseLayout from '@layouts/BaseLayout.astro';
---

<BaseLayout
  title="DM Dashboard - Rudiger's Evocation of Events"
  description="Dungeon Master tools and resources for campaign management."
>
  <div class="dm-dashboard">
    <!-- Auth Gate - shown until authenticated -->
    <div id="auth-gate" class="auth-gate">
      <div class="auth-content">
        <div class="auth-icon">
          <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
            <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
            <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
          </svg>
        </div>
        <h1 class="auth-title">DM Access Required</h1>
        <p class="auth-description">Enter your DM token to access campaign management tools.</p>
        <form id="auth-form" class="auth-form">
          <label for="dm-token" class="visually-hidden">DM Token</label>
          <input
            type="password"
            id="dm-token"
            class="auth-input"
            placeholder="Enter DM token..."
            autocomplete="off"
            required
          />
          <button type="submit" class="auth-btn">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
              <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
            </svg>
            Unlock
          </button>
        </form>
        <p id="auth-error" class="auth-error" style="display: none;">Invalid token. Please try again.</p>
      </div>
    </div>

    <!-- Dashboard Content - shown after authentication -->
    <div id="dashboard-content" class="dashboard-content" style="display: none;">
      <header class="dashboard-header">
        <h1 class="dashboard-title">DM Dashboard</h1>
        <p class="dashboard-subtitle">Campaign management tools and resources</p>
      </header>

      <div class="tools-grid">
        <!-- Session Notes -->
        <a href="/dm/notes" class="tool-card">
          <div class="tool-icon tool-icon--notes">
            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
              <polyline points="14 2 14 8 20 8"></polyline>
              <line x1="16" y1="13" x2="8" y2="13"></line>
              <line x1="16" y1="17" x2="8" y2="17"></line>
              <polyline points="10 9 9 9 8 9"></polyline>
            </svg>
          </div>
          <div class="tool-content">
            <h2 class="tool-title">Session Notes</h2>
            <p class="tool-description">Write and manage private DM notes for session planning and tracking.</p>
          </div>
          <div class="tool-arrow">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <polyline points="9 18 15 12 9 6"></polyline>
            </svg>
          </div>
        </a>

        <!-- Entity Staging -->
        <a href="/dm/entities" class="tool-card">
          <div class="tool-icon tool-icon--entities">
            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
              <circle cx="9" cy="7" r="4"></circle>
              <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
              <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
            </svg>
          </div>
          <div class="tool-content">
            <h2 class="tool-title">Entity Staging</h2>
            <p class="tool-description">Generate, edit, and stage NPCs, enemies, items, locations, and factions.</p>
          </div>
          <div class="tool-arrow">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <polyline points="9 18 15 12 9 6"></polyline>
            </svg>
          </div>
        </a>

        <!-- Blog Publisher (Coming Soon) -->
        <div class="tool-card tool-card--disabled">
          <div class="tool-icon tool-icon--publish">
            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"></path>
              <path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"></path>
              <line x1="12" y1="6" x2="12" y2="12"></line>
              <line x1="9" y1="9" x2="15" y2="9"></line>
            </svg>
          </div>
          <div class="tool-content">
            <h2 class="tool-title">Blog Publisher</h2>
            <p class="tool-description">Convert session notes into polished blog posts for the chronicle.</p>
            <span class="coming-soon-badge">Coming Soon</span>
          </div>
        </div>
      </div>

      <footer class="dashboard-footer">
        <button id="logout-btn" class="logout-btn">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path>
            <polyline points="16 17 21 12 16 7"></polyline>
            <line x1="21" y1="12" x2="9" y2="12"></line>
          </svg>
          Sign Out
        </button>
      </footer>
    </div>
  </div>
</BaseLayout>

<script is:inline>
  (function() {
    var TOKEN_KEY = 'dm-token';
    var authGate = document.getElementById('auth-gate');
    var dashboardContent = document.getElementById('dashboard-content');
    var authForm = document.getElementById('auth-form');
    var authError = document.getElementById('auth-error');
    var tokenInput = document.getElementById('dm-token');
    var logoutBtn = document.getElementById('logout-btn');

    function checkAuth() {
      var token = localStorage.getItem(TOKEN_KEY);
      if (token) {
        showDashboard();
      }
    }

    function showDashboard() {
      authGate.style.display = 'none';
      dashboardContent.style.display = 'block';
    }

    function showAuthGate() {
      authGate.style.display = 'flex';
      dashboardContent.style.display = 'none';
    }

    authForm.addEventListener('submit', function(e) {
      e.preventDefault();
      var token = tokenInput.value.trim();

      if (token) {
        // Store token and show dashboard
        // Token validation happens when accessing actual API endpoints
        localStorage.setItem(TOKEN_KEY, token);
        authError.style.display = 'none';
        showDashboard();
      }
    });

    logoutBtn.addEventListener('click', function() {
      localStorage.removeItem(TOKEN_KEY);
      showAuthGate();
      tokenInput.value = '';
    });

    // Check auth on load
    checkAuth();
  })();
</script>

<style>
  .dm-dashboard {
    min-height: 80vh;
  }

  /* Auth Gate */
  .auth-gate {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 70vh;
    padding: var(--space-xl);
  }

  .auth-content {
    text-align: center;
    max-width: 400px;
  }

  .auth-icon {
    color: var(--color-gold);
    margin-bottom: var(--space-lg);
  }

  .auth-title {
    font-family: var(--font-display);
    font-size: var(--text-2xl);
    color: var(--color-text);
    margin: 0 0 var(--space-sm);
  }

  .auth-description {
    color: var(--color-text-secondary);
    margin: 0 0 var(--space-xl);
  }

  .auth-form {
    display: flex;
    gap: var(--space-sm);
  }

  .auth-input {
    flex: 1;
    padding: var(--space-md);
    border: 2px solid var(--color-border);
    border-radius: var(--radius-md);
    background: var(--color-bg-secondary);
    color: var(--color-text);
    font-size: var(--text-base);
  }

  .auth-input:focus {
    outline: none;
    border-color: var(--color-gold);
  }

  .auth-btn {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    padding: var(--space-md) var(--space-lg);
    background: var(--color-gold);
    color: var(--color-bg);
    border: none;
    border-radius: var(--radius-md);
    font-weight: 600;
    cursor: pointer;
    transition: all var(--transition-fast);
  }

  .auth-btn:hover {
    background: var(--color-gold-hover, #b8922a);
    transform: translateY(-1px);
  }

  .auth-error {
    color: var(--color-error);
    margin-top: var(--space-md);
    font-size: var(--text-sm);
  }

  .visually-hidden {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }

  /* Dashboard Content */
  .dashboard-content {
    padding: var(--space-xl) var(--space-lg);
    max-width: 900px;
    margin: 0 auto;
  }

  .dashboard-header {
    text-align: center;
    margin-bottom: var(--space-2xl);
  }

  .dashboard-title {
    font-family: var(--font-display);
    font-size: var(--text-3xl);
    color: var(--color-gold);
    margin: 0 0 var(--space-sm);
  }

  .dashboard-subtitle {
    color: var(--color-text-secondary);
    font-size: var(--text-lg);
    margin: 0;
  }

  /* Tools Grid */
  .tools-grid {
    display: flex;
    flex-direction: column;
    gap: var(--space-lg);
  }

  .tool-card {
    display: flex;
    align-items: center;
    gap: var(--space-lg);
    padding: var(--space-xl);
    background: var(--color-bg-secondary);
    border: 2px solid var(--color-border);
    border-radius: var(--radius-lg);
    text-decoration: none;
    color: var(--color-text);
    transition: all var(--transition-fast);
  }

  .tool-card:hover {
    border-color: var(--color-gold);
    transform: translateX(4px);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  }

  .tool-card--disabled {
    opacity: 0.6;
    cursor: not-allowed;
    pointer-events: none;
  }

  .tool-icon {
    flex-shrink: 0;
    width: 64px;
    height: 64px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: var(--radius-md);
    background: var(--color-bg-tertiary);
  }

  .tool-icon--notes { color: var(--color-accent); }
  .tool-icon--entities { color: var(--color-gold); }
  .tool-icon--publish { color: var(--color-text-muted); }

  .tool-content {
    flex: 1;
  }

  .tool-title {
    font-family: var(--font-display);
    font-size: var(--text-xl);
    color: var(--color-gold);
    margin: 0 0 var(--space-xs);
  }

  .tool-description {
    color: var(--color-text-secondary);
    margin: 0;
    font-size: var(--text-sm);
    line-height: 1.5;
  }

  .coming-soon-badge {
    display: inline-block;
    margin-top: var(--space-sm);
    padding: 2px var(--space-sm);
    background: var(--color-bg-tertiary);
    border-radius: var(--radius-sm);
    font-size: var(--text-xs);
    color: var(--color-text-muted);
    text-transform: uppercase;
    font-weight: 600;
  }

  .tool-arrow {
    flex-shrink: 0;
    color: var(--color-text-muted);
    transition: transform var(--transition-fast);
  }

  .tool-card:hover .tool-arrow {
    transform: translateX(4px);
    color: var(--color-gold);
  }

  /* Footer */
  .dashboard-footer {
    margin-top: var(--space-2xl);
    padding-top: var(--space-lg);
    border-top: 1px solid var(--color-border);
    text-align: center;
  }

  .logout-btn {
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
    padding: var(--space-sm) var(--space-md);
    background: transparent;
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    color: var(--color-text-muted);
    font-size: var(--text-sm);
    cursor: pointer;
    transition: all var(--transition-fast);
  }

  .logout-btn:hover {
    border-color: var(--color-error);
    color: var(--color-error);
  }

  @media (max-width: 640px) {
    .tool-card {
      flex-direction: column;
      text-align: center;
    }

    .tool-arrow {
      display: none;
    }

    .auth-form {
      flex-direction: column;
    }
  }
</style>
