---
import { getCollection } from 'astro:content';
import BaseLayout from '@layouts/BaseLayout.astro';
import SessionContent from '@components/SessionContent.astro';

/**
 * Entity info structure for auto-linking in session content.
 */
interface EntityInfo {
  name: string;
  slug: string;
  type: 'character' | 'enemy' | 'location' | 'faction' | 'item';
  subtype?: string;
  status?: string;
}

/**
 * Character/Enemy entity structure from content collections.
 */
interface CollectionEntity {
  id: string;
  data: {
    name: string;
    subtype?: string;
    status?: string;
    description?: string;
    firstAppearance?: string;
  };
}

/**
 * Blog post structure from content collection.
 */
interface BlogPost {
  id: string;
  body?: string;
  data: {
    title: string;
    description: string;
    pubDate: Date;
    updatedDate?: Date;
    heroImage?: string;
    tags?: string[];
    author?: string;
    draft?: boolean;
  };
}

/**
 * Props passed from getStaticPaths to the page component.
 */
interface Props {
  post: BlogPost;
  sessionCharacters: CollectionEntity[];
  sessionEnemies: CollectionEntity[];
  entityLookup: Record<string, EntityInfo>;
}

export async function getStaticPaths() {
  const posts = await getCollection('blog', ({ data }: { data: { draft?: boolean } }) => {
    // In production, exclude drafts
    return import.meta.env.PROD ? !data.draft : true;
  });

  // Get all entities for auto-linking and first appearance tracking
  const characters = await getCollection('characters');
  const enemies = await getCollection('enemies');
  const locations = await getCollection('locations');
  const factions = await getCollection('factions');
  const items = await getCollection('items');

  // Type definitions for collections (derived from actual data)
  type BlogEntry = typeof posts[0];
  type CharacterEntry = typeof characters[0];
  type EnemyEntry = typeof enemies[0];

  // Build entity lookup map for auto-linking
  const entityLookup: Record<string, EntityInfo> = {};

  // Add characters
  for (const char of characters) {
    const key = char.data.name.toLowerCase();
    entityLookup[key] = {
      name: char.data.name,
      slug: char.id,
      type: 'character',
      subtype: char.data.subtype,
      status: char.data.status,
    };
    // Also add any name variants from authority control
    if (char.data.authority?.variants) {
      for (const variant of char.data.authority.variants) {
        entityLookup[variant.toLowerCase()] = entityLookup[key];
      }
    }
  }

  // Add enemies
  for (const enemy of enemies) {
    const key = enemy.data.name.toLowerCase();
    entityLookup[key] = {
      name: enemy.data.name,
      slug: enemy.id,
      type: 'enemy',
      subtype: enemy.data.subtype,
      status: enemy.data.status,
    };
    if (enemy.data.authority?.variants) {
      for (const variant of enemy.data.authority.variants) {
        entityLookup[variant.toLowerCase()] = entityLookup[key];
      }
    }
  }

  // Add locations
  for (const loc of locations) {
    const key = loc.data.name.toLowerCase();
    entityLookup[key] = {
      name: loc.data.name,
      slug: loc.id,
      type: 'location',
      subtype: loc.data.subtype,
      status: loc.data.status,
    };
    if (loc.data.authority?.variants) {
      for (const variant of loc.data.authority.variants) {
        entityLookup[variant.toLowerCase()] = entityLookup[key];
      }
    }
  }

  // Add factions
  for (const faction of factions) {
    const key = faction.data.name.toLowerCase();
    entityLookup[key] = {
      name: faction.data.name,
      slug: faction.id,
      type: 'faction',
      subtype: faction.data.subtype,
      status: faction.data.status,
    };
    if (faction.data.authority?.variants) {
      for (const variant of faction.data.authority.variants) {
        entityLookup[variant.toLowerCase()] = entityLookup[key];
      }
    }
  }

  // Add items
  for (const item of items) {
    const key = item.data.name.toLowerCase();
    entityLookup[key] = {
      name: item.data.name,
      slug: item.id,
      type: 'item',
      subtype: item.data.subtype,
      status: item.data.status,
    };
    if (item.data.authority?.variants) {
      for (const variant of item.data.authority.variants) {
        entityLookup[variant.toLowerCase()] = entityLookup[key];
      }
    }
  }

  return posts.map((post: BlogEntry) => {
    // Find entities that first appeared in this session
    const sessionCharacters = characters.filter((c: CharacterEntry) => c.data.firstAppearance === post.id);
    const sessionEnemies = enemies.filter((e: EnemyEntry) => e.data.firstAppearance === post.id);

    return {
      params: { slug: post.id },
      props: { post, sessionCharacters, sessionEnemies, entityLookup },
    };
  });
}

const { post, sessionCharacters, sessionEnemies, entityLookup } = Astro.props as Props;

const {
  title,
  description,
  pubDate,
  updatedDate,
  heroImage,
  tags,
  author,
} = post.data;

// Calculate reading time
function getReadingTime(content: string): number {
  const words = content.split(/\s+/).length;
  return Math.ceil(words / 200);
}

const readingTime = getReadingTime(post.body || '');
const canonicalURL = new URL(`/blog/${post.id}/`, Astro.site);
const wordCount = (post.body || '').split(/\s+/).length;

const formattedPubDate = pubDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});

const formattedUpdatedDate = updatedDate?.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<BaseLayout
  title={`${title} - Rudiger's Evocation of Events`}
  description={description}
  image={heroImage}
  article={true}
  pubDate={pubDate}
  updatedDate={updatedDate}
>
  <!-- Schema.org JSON-LD for rich snippets and library catalogs -->
  <script slot="head" type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "BlogPosting",
    "headline": title,
    "description": description,
    "author": {
      "@type": "Person",
      "name": author || "Rudiger's Evocation of Events"
    },
    "datePublished": pubDate.toISOString(),
    "dateModified": (updatedDate || pubDate).toISOString(),
    "wordCount": wordCount,
    "mainEntityOfPage": {
      "@type": "WebPage",
      "@id": canonicalURL.href
    },
    "publisher": {
      "@type": "Organization",
      "name": "Rudiger's Evocation of Events",
      "logo": {
        "@type": "ImageObject",
        "url": new URL("/icons/icon-512.png", Astro.site).href
      }
    },
    "keywords": tags?.join(", "),
    "image": heroImage ? new URL(heroImage, Astro.site).href : undefined
  })} />

  <!-- Dublin Core metadata for library systems -->
  <Fragment slot="head">
    <meta name="DC.title" content={title} />
    <meta name="DC.creator" content={author || "Rudiger's Evocation of Events"} />
    <meta name="DC.date" content={pubDate.toISOString().split('T')[0]} />
    <meta name="DC.description" content={description} />
    <meta name="DC.type" content="Text" />
    <meta name="DC.format" content="text/html" />
    <meta name="DC.language" content="en" />
    {tags?.map((tag: string) => <meta name="DC.subject" content={tag} />)}
    <meta name="DCTERMS.modified" content={(updatedDate || pubDate).toISOString().split('T')[0]} />
  </Fragment>
  <article class="post">
    <div class="container container--narrow">
      <header class="post__header">
        <div class="post__meta">
          <time datetime={pubDate.toISOString()} class="post__date">
            {formattedPubDate}
          </time>
          <span class="post__reading-time">{readingTime} min read</span>
        </div>

        <h1 class="post__title">{title}</h1>

        <p class="post__description">{description}</p>

        {author && (
          <p class="post__author">
            By <strong>{author}</strong>
          </p>
        )}

        {tags && tags.length > 0 && (
          <ul class="post__tags">
            {tags.map((tag: string) => (
              <li>
                <a href={`/blog/tag/${tag}`} class="post__tag">
                  {tag}
                </a>
              </li>
            ))}
          </ul>
        )}
      </header>

      {heroImage && (
        <figure class="post__hero">
          <img
            src={heroImage}
            alt={`Illustration for ${title}`}
            class="post__hero-image"
            loading="eager"
            decoding="async"
          />
        </figure>
      )}

      <SessionContent content={post.body || ''} entityLookup={entityLookup} />

      {(sessionCharacters.length > 0 || sessionEnemies.length > 0) && (
        <aside class="session-entities">
          <h2 class="session-entities__title">First Appearances</h2>
          <p class="session-entities__subtitle">Entities introduced in this session</p>

          {sessionCharacters.length > 0 && (
            <div class="entity-group">
              <h3 class="entity-group__title">Characters</h3>
              <ul class="entity-list">
                {sessionCharacters.map((char: CollectionEntity) => (
                  <li class="entity-item">
                    <a href={`/campaign/characters/${char.id}`} class="entity-link">
                      <span class="entity-name">{char.data.name}</span>
                      <span class={`entity-badge entity-badge--${char.data.subtype}`}>{char.data.subtype}</span>
                      {char.data.status !== 'active' && (
                        <span class={`entity-status entity-status--${char.data.status}`}>{char.data.status}</span>
                      )}
                    </a>
                    {char.data.description && (
                      <p class="entity-desc">{char.data.description}</p>
                    )}
                  </li>
                ))}
              </ul>
            </div>
          )}

          {sessionEnemies.length > 0 && (
            <div class="entity-group">
              <h3 class="entity-group__title">Enemies</h3>
              <ul class="entity-list">
                {sessionEnemies.map((enemy: CollectionEntity) => (
                  <li class="entity-item">
                    <a href={`/campaign/enemies/${enemy.id}`} class="entity-link">
                      <span class="entity-name">{enemy.data.name}</span>
                      <span class={`entity-badge entity-badge--${enemy.data.subtype}`}>{enemy.data.subtype}</span>
                      {enemy.data.status !== 'active' && (
                        <span class={`entity-status entity-status--${enemy.data.status}`}>{enemy.data.status}</span>
                      )}
                    </a>
                    {enemy.data.description && (
                      <p class="entity-desc">{enemy.data.description}</p>
                    )}
                  </li>
                ))}
              </ul>
            </div>
          )}
        </aside>
      )}

      <footer class="post__footer">
        {updatedDate && (
          <p class="post__updated">
            Last updated: <time datetime={updatedDate.toISOString()}>{formattedUpdatedDate}</time>
          </p>
        )}

        <!-- Citation helper for librarians and academics -->
        <details class="post__citation">
          <summary>Cite this post</summary>
          <div class="post__citation-content">
            <p class="post__citation-label">APA Format:</p>
            <code class="post__citation-text">
              {author || "Rudiger's Evocation of Events"}. ({pubDate.getFullYear()}, {pubDate.toLocaleDateString('en-US', { month: 'long', day: 'numeric' })}). {title}. <em>Rudiger's Evocation of Events</em>. {canonicalURL.href}
            </code>
            <p class="post__citation-label">Permalink:</p>
            <code class="post__citation-text">{canonicalURL.href}</code>
          </div>
        </details>

        <nav class="post__nav" aria-label="Post navigation">
          <a href="/blog" class="post__back">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="20"
              height="20"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              aria-hidden="true"
            >
              <polyline points="15 18 9 12 15 6"></polyline>
            </svg>
            Back to Chronicles
          </a>
        </nav>
      </footer>
    </div>
  </article>
</BaseLayout>

<style>
  .post__header {
    text-align: center;
    margin-bottom: var(--space-2xl);
  }

  .post__meta {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: var(--space-md);
    margin-bottom: var(--space-md);
    font-size: var(--text-sm);
    color: var(--color-text-muted);
  }

  .post__reading-time::before {
    content: 'Â·';
    margin-right: var(--space-md);
  }

  .post__title {
    font-size: var(--text-4xl);
    line-height: 1.1;
    margin: 0 0 var(--space-md);
  }

  .post__description {
    font-size: var(--text-lg);
    color: var(--color-text-secondary);
    margin: 0 0 var(--space-md);
    line-height: 1.6;
  }

  .post__author {
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    margin: 0 0 var(--space-md);
  }

  .post__tags {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: var(--space-sm);
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .post__tag {
    display: inline-block;
    padding: var(--space-xs) var(--space-sm);
    background-color: var(--color-bg-tertiary);
    border-radius: var(--radius-sm);
    font-size: var(--text-sm);
    text-decoration: none;
    color: var(--color-text-secondary);
    transition: all var(--transition-fast);
  }

  .post__tag:hover {
    background-color: var(--color-accent);
    color: white;
  }

  .post__hero {
    margin: 0 calc(-1 * var(--space-md)) var(--space-2xl);
    border-radius: var(--radius-lg);
    overflow: hidden;
  }

  .post__hero-image {
    width: 100%;
    height: auto;
    aspect-ratio: 16 / 9;
    object-fit: cover;
  }

  /* Session content spacing */
  :global(.session-content) {
    margin-bottom: var(--space-2xl);
  }

  /* Ensure proper spacing in prose content */
  :global(.session-content h2) {
    margin-top: var(--space-2xl);
  }

  :global(.session-content h3) {
    margin-top: var(--space-xl);
  }

  :global(.session-content pre) {
    margin: var(--space-lg) calc(-1 * var(--space-md));
    padding: var(--space-md);
    border-radius: 0;
  }

  @media (min-width: 640px) {
    :global(.session-content pre) {
      margin-left: 0;
      margin-right: 0;
      border-radius: var(--radius-md);
    }
  }

  /* Entity links in prose - subtle styling for reading flow */
  :global(.session-content a[href^="/campaign/"]) {
    color: var(--color-text);
    text-decoration: none;
    font-weight: 600;
    border-bottom: 1px dotted var(--color-text-muted);
    transition: all var(--transition-fast);
  }

  :global(.session-content a[href^="/campaign/"]:hover) {
    color: var(--color-accent);
    border-bottom-color: var(--color-accent);
    border-bottom-style: solid;
  }

  /* Bold entity links (the **[Name](link)** pattern) - even more subtle */
  :global(.session-content strong a[href^="/campaign/"]) {
    font-weight: inherit;
  }

  /* Session entities section */
  .session-entities {
    background: var(--color-bg-secondary);
    border: 2px solid var(--color-border);
    border-radius: var(--radius-lg);
    padding: var(--space-xl);
    margin-bottom: var(--space-2xl);
  }

  .session-entities__title {
    font-family: var(--font-display);
    font-size: var(--text-xl);
    color: var(--color-gold);
    margin: 0 0 var(--space-xs);
  }

  .session-entities__subtitle {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    margin: 0 0 var(--space-lg);
  }

  .entity-group {
    margin-bottom: var(--space-lg);
  }

  .entity-group:last-child {
    margin-bottom: 0;
  }

  .entity-group__title {
    font-size: var(--text-sm);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-text-muted);
    margin: 0 0 var(--space-sm);
    padding-bottom: var(--space-xs);
    border-bottom: 1px solid var(--color-border);
  }

  .entity-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
  }

  .entity-item {
    background: var(--color-bg);
    border-radius: var(--radius-md);
    padding: var(--space-sm) var(--space-md);
  }

  .entity-link {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    text-decoration: none;
    flex-wrap: wrap;
  }

  .entity-name {
    font-weight: 600;
    color: var(--color-text);
    transition: color var(--transition-fast);
  }

