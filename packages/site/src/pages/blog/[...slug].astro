---
import { getCollection, render } from 'astro:content';
import BaseLayout from '@layouts/BaseLayout.astro';

export async function getStaticPaths() {
  const posts = await getCollection('blog', ({ data }) => {
    // In production, exclude drafts
    return import.meta.env.PROD ? !data.draft : true;
  });

  return posts.map((post) => ({
    params: { slug: post.id },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await render(post);

const {
  title,
  description,
  pubDate,
  updatedDate,
  heroImage,
  tags,
  author,
} = post.data;

// Calculate reading time
function getReadingTime(content: string): number {
  const words = content.split(/\s+/).length;
  return Math.ceil(words / 200);
}

const readingTime = getReadingTime(post.body || '');

const formattedPubDate = pubDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});

const formattedUpdatedDate = updatedDate?.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<BaseLayout
  title={`${title} - DnD Blog`}
  description={description}
  image={heroImage}
  article={true}
  pubDate={pubDate}
  updatedDate={updatedDate}
>
  <article class="post">
    <div class="container container--narrow">
      <header class="post__header">
        <div class="post__meta">
          <time datetime={pubDate.toISOString()} class="post__date">
            {formattedPubDate}
          </time>
          <span class="post__reading-time">{readingTime} min read</span>
        </div>

        <h1 class="post__title">{title}</h1>

        <p class="post__description">{description}</p>

        {author && (
          <p class="post__author">
            By <strong>{author}</strong>
          </p>
        )}

        {tags && tags.length > 0 && (
          <ul class="post__tags">
            {tags.map((tag) => (
              <li>
                <a href={`/blog/tag/${tag}`} class="post__tag">
                  {tag}
                </a>
              </li>
            ))}
          </ul>
        )}
      </header>

      {heroImage && (
        <figure class="post__hero">
          <img
            src={heroImage}
            alt=""
            class="post__hero-image"
            loading="eager"
            decoding="async"
          />
        </figure>
      )}

      <div class="post__content prose">
        <Content />
      </div>

      <footer class="post__footer">
        {updatedDate && (
          <p class="post__updated">
            Last updated: <time datetime={updatedDate.toISOString()}>{formattedUpdatedDate}</time>
          </p>
        )}

        <nav class="post__nav">
          <a href="/blog" class="post__back">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="20"
              height="20"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              aria-hidden="true"
            >
              <polyline points="15 18 9 12 15 6"></polyline>
            </svg>
            Back to all posts
          </a>
        </nav>
      </footer>
    </div>
  </article>
</BaseLayout>

<style>
  .post__header {
    text-align: center;
    margin-bottom: var(--space-2xl);
  }

  .post__meta {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: var(--space-md);
    margin-bottom: var(--space-md);
    font-size: var(--text-sm);
    color: var(--color-text-muted);
  }

  .post__reading-time::before {
    content: 'Â·';
    margin-right: var(--space-md);
  }

  .post__title {
    font-size: var(--text-4xl);
    line-height: 1.1;
    margin: 0 0 var(--space-md);
  }

  .post__description {
    font-size: var(--text-lg);
    color: var(--color-text-secondary);
    margin: 0 0 var(--space-md);
    line-height: 1.6;
  }

  .post__author {
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    margin: 0 0 var(--space-md);
  }

  .post__tags {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: var(--space-sm);
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .post__tag {
    display: inline-block;
    padding: var(--space-xs) var(--space-sm);
    background-color: var(--color-bg-tertiary);
    border-radius: var(--radius-sm);
    font-size: var(--text-sm);
    text-decoration: none;
    color: var(--color-text-secondary);
    transition: all var(--transition-fast);
  }

  .post__tag:hover {
    background-color: var(--color-accent);
    color: white;
  }

  .post__hero {
    margin: 0 calc(-1 * var(--space-md)) var(--space-2xl);
    border-radius: var(--radius-lg);
    overflow: hidden;
  }

  .post__hero-image {
    width: 100%;
    height: auto;
    aspect-ratio: 16 / 9;
    object-fit: cover;
  }

  .post__content {
    margin-bottom: var(--space-2xl);
  }

  /* Ensure proper spacing in prose content */
  .post__content :global(h2) {
    margin-top: var(--space-2xl);
  }

  .post__content :global(h3) {
    margin-top: var(--space-xl);
  }

  .post__content :global(pre) {
    margin: var(--space-lg) calc(-1 * var(--space-md));
    padding: var(--space-md);
    border-radius: 0;
  }

  @media (min-width: 640px) {
    .post__content :global(pre) {
      margin-left: 0;
      margin-right: 0;
      border-radius: var(--radius-md);
    }
  }

  .post__footer {
    padding-top: var(--space-xl);
    border-top: 1px solid var(--color-border);
  }

  .post__updated {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    margin-bottom: var(--space-lg);
  }

  .post__nav {
    display: flex;
    justify-content: center;
  }

  .post__back {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    padding: var(--space-sm) var(--space-md);
    background-color: var(--color-bg-secondary);
    border-radius: var(--radius-md);
    text-decoration: none;
    color: var(--color-text-secondary);
    font-weight: 500;
    transition: all var(--transition-fast);
  }

  .post__back:hover {
    background-color: var(--color-bg-tertiary);
    color: var(--color-text);
  }
</style>
