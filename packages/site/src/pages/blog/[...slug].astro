  .entity-badge--boss { background: #dc2626; color: white; }
  .entity-badge--minion { background: #6b7280; color: white; }
  .entity-badge--creature { background: #059669; color: white; }

  .entity-status {
    font-size: var(--text-xs);
    padding: 2px 6px;
    border-radius: var(--radius-sm);
    font-weight: 500;
  }

  .entity-status--dead { background: #7f1d1d; color: #fecaca; }
  .entity-status--inactive { background: #374151; color: #d1d5db; }
  .entity-status--transformed { background: #5b21b6; color: #ddd6fe; }
  .entity-status--unknown { background: #854d0e; color: #fef3c7; }

  .entity-desc {
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    margin: var(--space-xs) 0 0;
    line-height: 1.5;
  }

  .post__footer {
    padding-top: var(--space-xl);
    border-top: 1px solid var(--color-border);
  }

  .post__updated {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    margin-bottom: var(--space-lg);
  }

  .post__nav {
    display: flex;
    justify-content: center;
  }

  .post__back {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    padding: var(--space-sm) var(--space-md);
    background-color: var(--color-bg-secondary);
    border-radius: var(--radius-md);
    text-decoration: none;
    color: var(--color-text-secondary);
    font-weight: 500;
    transition: all var(--transition-fast);
  }

  .post__back:hover {
    background-color: var(--color-bg-tertiary);
    color: var(--color-text);
  }

  /* Citation helper styles */
  .post__citation {
    margin-bottom: var(--space-lg);
    padding: var(--space-md);
    background-color: var(--color-bg-secondary);
    border-radius: var(--radius-md);
    border: 1px solid var(--color-border);
  }

  .post__citation summary {
    cursor: pointer;
    font-weight: 600;
    color: var(--color-text-secondary);
    font-size: var(--text-sm);
  }

  .post__citation summary:hover {
    color: var(--color-accent);
  }

  .post__citation-content {
    margin-top: var(--space-md);
  }

  .post__citation-label {
    font-size: var(--text-xs);
    color: var(--color-text-muted);
    margin: var(--space-sm) 0 var(--space-xs);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .post__citation-label:first-child {
    margin-top: 0;
  }

  .post__citation-text {
    display: block;
    font-size: var(--text-sm);
    padding: var(--space-sm);
    background-color: var(--color-bg);
    border-radius: var(--radius-sm);
    word-break: break-all;
    white-space: pre-wrap;
  }

  /* Print styles for archival */
  @media print {
    .post__back,
    .post__citation summary {
      display: none;
    }

    .post__citation {
      border: 1px solid #000;
      break-inside: avoid;
    }

    .post__citation-content {
      display: block !important;
    }

    .post__hero-image {
      max-height: 300px;
      object-fit: contain;
    }
  }
</style>
