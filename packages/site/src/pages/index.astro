---
import BaseLayout from '@layouts/BaseLayout.astro';
---

<BaseLayout title="Rudiger's Evocation of Events - Chronicles of the Mawframe">
  <div class="landing">
    <header class="landing__header">
      <h1 class="landing__title">Chronicles of the Mawframe</h1>
      <p class="landing__subtitle">Recovered writings from the Astralglades Expedition</p>
    </header>

    <nav class="landing__nav">
      <a href="/blog/welcome-to-the-adventure" class="nav-card">
        <h2 class="nav-card__title">The Beginning</h2>
        <p class="nav-card__description">Where the story starts â€” and where you should too</p>
      </a>

      <a href="/sessions" class="nav-card">
        <h2 class="nav-card__title">Session Logs</h2>
        <p class="nav-card__description">Ten accounts of what we found in the dark</p>
      </a>

      <a href="/reference" class="nav-card">
        <h2 class="nav-card__title">Campaign Index</h2>
        <p class="nav-card__description">Names, places, and things that haunt us</p>
      </a>
    </nav>

    <footer class="landing__footer">
      <p class="footer-tagline">Knowledge is the only weapon that doesn't break.</p>
    </footer>
  </div>
</BaseLayout>

<style>
  .landing {
    min-height: 75vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: var(--space-2xl);
  }

  .landing__header {
    text-align: center;
    margin-bottom: var(--space-2xl);
  }

  .landing__title {
    font-family: var(--font-display);
    font-size: clamp(2rem, 6vw, 3rem);
    color: var(--color-gold);
    margin: 0 0 var(--space-sm);
    line-height: 1.2;
  }

  .landing__subtitle {
    font-family: var(--font-serif);
    font-size: var(--text-base);
    color: var(--color-text-muted);
    font-style: italic;
    margin: 0;
  }

  .landing__nav {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
    width: 100%;
    max-width: 400px;
    margin-bottom: var(--space-2xl);
  }

  @media (min-width: 800px) {
    .landing__nav {
      flex-direction: row;
      max-width: 960px;
      gap: var(--space-lg);
    }

    .nav-card {
      flex: 1;
    }
  }

  .nav-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    padding: var(--space-xl) var(--space-lg);
    background: var(--color-bg-secondary);
    border: 2px solid var(--color-border);
    border-radius: var(--radius-lg);
    text-decoration: none;
    color: var(--color-text);
    transition: border-color 0.2s, transform 0.2s, box-shadow 0.2s;
  }

  .nav-card:hover {
    border-color: var(--color-gold);
    transform: translateY(-3px);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
  }

  .nav-card__title {
    font-family: var(--font-display);
    font-size: var(--text-xl);
    color: var(--color-text);
    margin: 0 0 var(--space-sm);
    transition: color 0.2s;
  }

  .nav-card:hover .nav-card__title {
    color: var(--color-gold);
  }

  .nav-card__description {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    margin: 0;
    line-height: 1.5;
  }

  .landing__footer {
    text-align: center;
    padding-top: var(--space-lg);
    border-top: 1px solid var(--color-border);
    max-width: 400px;
  }

  .footer-tagline {
    font-family: var(--font-serif);
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    font-style: italic;
    margin: 0;
  }

  @media (max-width: 640px) {
    .landing {
      padding: var(--space-xl);
    }
  }
</style>
