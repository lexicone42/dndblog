---
/**
 * Player Dashboard Landing Page
 * Central hub for player resources - party overview and future features.
 * Requires player authentication to access full features.
 */

import { getCollection } from 'astro:content';
import BaseLayout from '@layouts/BaseLayout.astro';

// Get active party members (PCs with active status)
const allCharacters = await getCollection('characters');
const activeParty = allCharacters
  .filter((c: typeof allCharacters[0]) => c.data.subtype === 'pc' && c.data.status === 'active')
  .sort((a: typeof allCharacters[0], b: typeof allCharacters[0]) => a.data.name.localeCompare(b.data.name));
---

<BaseLayout
  title="Player Hub - Rudiger's Evocation of Events"
  description="Player resources and party information."
>
  <div class="player-dashboard">
    <!-- Auth Gate - shown until authenticated -->
    <div id="auth-gate" class="auth-gate">
      <div class="auth-content">
        <div class="auth-icon">
          <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
            <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
            <circle cx="12" cy="7" r="4"></circle>
          </svg>
        </div>
        <h1 class="auth-title">Player Access</h1>
        <p class="auth-description">Enter your player token to access party resources and tools.</p>
        <form id="auth-form" class="auth-form">
          <label for="player-token" class="visually-hidden">Player Token</label>
          <input
            type="password"
            id="player-token"
            class="auth-input"
            placeholder="Enter player token..."
            autocomplete="off"
            required
          />
          <button type="submit" class="auth-btn">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M15 3h4a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2h-4"></path>
              <polyline points="10 17 15 12 10 7"></polyline>
              <line x1="15" y1="12" x2="3" y2="12"></line>
            </svg>
            Enter
          </button>
        </form>
        <p id="auth-error" class="auth-error" style="display: none;">Invalid token. Please try again.</p>
      </div>
    </div>

    <!-- Dashboard Content - shown after authentication -->
    <div id="dashboard-content" class="dashboard-content" style="display: none;">
      <header class="dashboard-header">
        <h1 class="dashboard-title">Player Hub</h1>
        <p class="dashboard-subtitle">Party resources and character tools</p>
      </header>

      <!-- Active Party Section -->
      <section class="party-section">
        <h2 class="section-title">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
            <circle cx="9" cy="7" r="4"></circle>
            <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
            <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
          </svg>
          The Party
        </h2>

        {activeParty.length > 0 ? (
          <div class="party-grid">
            {activeParty.map((character: typeof activeParty[0]) => (
              <a href={`/campaign/characters/${character.id}`} class="character-card">
                <div class="character-header">
                  <h3 class="character-name">{character.data.name}</h3>
                  {character.data.level && (
                    <span class="character-level">Lvl {character.data.level}</span>
                  )}
                </div>

                <div class="character-info">
                  {character.data.race && (
                    <span class="character-tag">{character.data.race}</span>
                  )}
                  {character.data.class && (
                    <span class="character-tag character-tag--class">
                      {character.data.class}
                      {character.data.subclass && ` (${character.data.subclass})`}
                    </span>
                  )}
                </div>

                {character.data.player && (
                  <div class="character-player">
                    <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                      <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                      <circle cx="12" cy="7" r="4"></circle>
                    </svg>
                    <span>{character.data.player}</span>
                  </div>
                )}

                {character.data.description && (
                  <p class="character-description">
                    {character.data.description.slice(0, 100)}...
                  </p>
                )}
              </a>
            ))}
          </div>
        ) : (
          <div class="empty-state">
            <p>No active party members found.</p>
          </div>
        )}
      </section>

      <!-- Coming Soon Tools -->
      <section class="tools-section">
        <h2 class="section-title">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="12" cy="12" r="3"></circle>
            <path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2 2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1-2-2 2 2 0 0 1 2-2h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06a1.65 1.65 0 0 0 1.82.33H9a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 2-2 2 2 0 0 1 2 2v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82V9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09a1.65 1.65 0 0 0-1.51 1z"></path>
          </svg>
          Player Tools
        </h2>

        <div class="tools-grid">
          <!-- Character Sheets (Coming Soon) -->
          <div class="tool-card tool-card--disabled">
            <div class="tool-icon">
              <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                <polyline points="14 2 14 8 20 8"></polyline>
                <line x1="16" y1="13" x2="8" y2="13"></line>
                <line x1="16" y1="17" x2="8" y2="17"></line>
                <polyline points="10 9 9 9 8 9"></polyline>
              </svg>
            </div>
            <div class="tool-content">
              <h3 class="tool-title">Character Sheets</h3>
              <p class="tool-description">Interactive character sheets with real-time updates.</p>
              <span class="coming-soon-badge">Coming Soon</span>
            </div>
          </div>

          <!-- Session Notes (Coming Soon) -->
          <div class="tool-card tool-card--disabled">
            <div class="tool-icon">
              <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
              </svg>
            </div>
            <div class="tool-content">
              <h3 class="tool-title">Player Notes</h3>
              <p class="tool-description">Personal notes and session recaps.</p>
              <span class="coming-soon-badge">Coming Soon</span>
            </div>
          </div>
        </div>
      </section>

      <footer class="dashboard-footer">
        <button id="logout-btn" class="logout-btn">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path>
            <polyline points="16 17 21 12 16 7"></polyline>
            <line x1="21" y1="12" x2="9" y2="12"></line>
          </svg>
          Sign Out
        </button>
      </footer>
    </div>
  </div>
</BaseLayout>

<script is:inline>
  (function() {
    var TOKEN_KEY = 'player-token';
    var authGate = document.getElementById('auth-gate');
    var dashboardContent = document.getElementById('dashboard-content');
    var authForm = document.getElementById('auth-form');
    var authError = document.getElementById('auth-error');
    var tokenInput = document.getElementById('player-token');
    var logoutBtn = document.getElementById('logout-btn');

    function checkAuth() {
      var token = localStorage.getItem(TOKEN_KEY);
      if (token) {
        showDashboard();
      }
    }

    function showDashboard() {
      authGate.style.display = 'none';
      dashboardContent.style.display = 'block';
    }

    function showAuthGate() {
      authGate.style.display = 'flex';
      dashboardContent.style.display = 'none';
    }

    authForm.addEventListener('submit', function(e) {
      e.preventDefault();
      var token = tokenInput.value.trim();

      if (token) {
        // Store token and show dashboard
        // Token validation happens when accessing actual API endpoints
        localStorage.setItem(TOKEN_KEY, token);
        authError.style.display = 'none';
        showDashboard();
      }
    });

    logoutBtn.addEventListener('click', function() {
      localStorage.removeItem(TOKEN_KEY);
      showAuthGate();
      tokenInput.value = '';
    });

    // Check auth on load
    checkAuth();
  })();
</script>

<style>
  .player-dashboard {
    min-height: 80vh;
  }

  /* Auth Gate */
  .auth-gate {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 70vh;
    padding: var(--space-xl);
  }

  .auth-content {
    text-align: center;
    max-width: 400px;
  }

  .auth-icon {
    color: var(--color-accent);
    margin-bottom: var(--space-lg);
  }

  .auth-title {
    font-family: var(--font-display);
    font-size: var(--text-2xl);
    color: var(--color-text);
    margin: 0 0 var(--space-sm);
  }

  .auth-description {
    color: var(--color-text-secondary);
    margin: 0 0 var(--space-xl);
  }

  .auth-form {
    display: flex;
    gap: var(--space-sm);
  }

  .auth-input {
    flex: 1;
    padding: var(--space-md);
    border: 2px solid var(--color-border);
    border-radius: var(--radius-md);
    background: var(--color-bg-secondary);
    color: var(--color-text);
    font-size: var(--text-base);
  }

  .auth-input:focus {
    outline: none;
    border-color: var(--color-accent);
  }

  .auth-btn {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    padding: var(--space-md) var(--space-lg);
    background: var(--color-accent);
    color: white;
    border: none;
    border-radius: var(--radius-md);
    font-weight: 600;
    cursor: pointer;
    transition: all var(--transition-fast);
  }

  .auth-btn:hover {
    background: var(--color-accent-hover);
    transform: translateY(-1px);
  }

  .auth-error {
    color: var(--color-error);
    margin-top: var(--space-md);
    font-size: var(--text-sm);
  }

  .visually-hidden {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }

  /* Dashboard Content */
  .dashboard-content {
    padding: var(--space-xl) var(--space-lg);
    max-width: 1000px;
    margin: 0 auto;
  }

  .dashboard-header {
    text-align: center;
    margin-bottom: var(--space-2xl);
  }

  .dashboard-title {
    font-family: var(--font-display);
    font-size: var(--text-3xl);
    color: var(--color-accent);
    margin: 0 0 var(--space-sm);
  }

  .dashboard-subtitle {
    color: var(--color-text-secondary);
    font-size: var(--text-lg);
    margin: 0;
  }

  /* Sections */
  .party-section,
  .tools-section {
    margin-bottom: var(--space-2xl);
  }

  .section-title {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    font-family: var(--font-display);
    font-size: var(--text-xl);
    color: var(--color-gold);
    margin: 0 0 var(--space-lg);
    padding-bottom: var(--space-sm);
    border-bottom: 2px solid var(--color-gold);
  }

  .section-title svg {
    flex-shrink: 0;
  }

  /* Party Grid */
  .party-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: var(--space-lg);
  }

  .character-card {
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
    padding: var(--space-lg);
    background: var(--color-bg-secondary);
    border: 2px solid var(--color-gold);
    border-radius: var(--radius-lg);
    text-decoration: none;
    color: var(--color-text);
    transition: all var(--transition-fast);
  }

  .character-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(var(--color-gold-rgb, 201, 162, 39), 0.2);
  }

  .character-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .character-name {
    font-family: var(--font-display);
    font-size: var(--text-lg);
    color: var(--color-gold);
    margin: 0;
  }

  .character-level {
    background: var(--color-gold);
    color: var(--color-bg);
    padding: 2px 10px;
    border-radius: var(--radius-sm);
    font-size: var(--text-sm);
    font-weight: 700;
  }

  .character-info {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-xs);
  }

  .character-tag {
    background: var(--color-bg-tertiary);
    padding: 2px 8px;
    border-radius: var(--radius-sm);
    font-size: var(--text-xs);
    color: var(--color-text-muted);
  }

  .character-tag--class {
    color: var(--color-accent);
  }

  .character-player {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    font-size: var(--text-sm);
    color: var(--color-text-muted);
  }

  .character-description {
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    margin: 0;
    line-height: 1.5;
  }

  .empty-state {
    text-align: center;
    padding: var(--space-xl);
    color: var(--color-text-muted);
  }

  /* Tools Grid */
  .tools-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: var(--space-lg);
  }

  .tool-card {
    display: flex;
    gap: var(--space-md);
    padding: var(--space-lg);
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
  }

  .tool-card--disabled {
    opacity: 0.6;
  }

  .tool-icon {
    flex-shrink: 0;
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: var(--radius-md);
    background: var(--color-bg-tertiary);
    color: var(--color-text-muted);
  }

  .tool-content {
    flex: 1;
  }

  .tool-title {
    font-family: var(--font-display);
    font-size: var(--text-base);
    color: var(--color-text);
    margin: 0 0 var(--space-xs);
  }

  .tool-description {
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    margin: 0;
  }

  .coming-soon-badge {
    display: inline-block;
    margin-top: var(--space-sm);
    padding: 2px var(--space-sm);
    background: var(--color-bg-tertiary);
    border-radius: var(--radius-sm);
    font-size: var(--text-xs);
    color: var(--color-text-muted);
    text-transform: uppercase;
    font-weight: 600;
  }

  /* Footer */
  .dashboard-footer {
    margin-top: var(--space-2xl);
    padding-top: var(--space-lg);
    border-top: 1px solid var(--color-border);
    text-align: center;
  }

  .logout-btn {
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
    padding: var(--space-sm) var(--space-md);
    background: transparent;
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    color: var(--color-text-muted);
    font-size: var(--text-sm);
    cursor: pointer;
    transition: all var(--transition-fast);
  }

  .logout-btn:hover {
    border-color: var(--color-error);
    color: var(--color-error);
  }

  @media (max-width: 640px) {
    .party-grid,
    .tools-grid {
      grid-template-columns: 1fr;
    }

    .auth-form {
      flex-direction: column;
    }
  }
</style>
