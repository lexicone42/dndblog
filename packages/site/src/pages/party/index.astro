    display: inline-block;
    margin-top: var(--space-sm);
    padding: 2px var(--space-sm);
    background: var(--color-bg-tertiary);
    border-radius: var(--radius-sm);
    font-size: var(--text-xs);
    color: var(--color-text-muted);
