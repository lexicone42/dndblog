---
/**
 * Player Hub Landing Page
 * Public page showing party overview and links to player tools.
 * Individual session trackers handle their own authentication.
 */

import { getCollection } from 'astro:content';
import BaseLayout from '@layouts/BaseLayout.astro';

// Get active party members (PCs with active status)
const allCharacters = await getCollection('characters');
const activeParty = allCharacters
  .filter((c: typeof allCharacters[0]) => c.data.subtype === 'pc' && c.data.status === 'active')
  .sort((a: typeof allCharacters[0], b: typeof allCharacters[0]) => a.data.name.localeCompare(b.data.name));
---

<BaseLayout
  title="Player Hub - Rudiger's Evocation of Events"
  description="Player resources and party information."
>
  <div class="player-dashboard">
    <header class="dashboard-header">
      <h1 class="dashboard-title">Player Hub</h1>
      <p class="dashboard-subtitle">Party resources and character tools</p>
    </header>

    <!-- Active Party Section -->
    <section class="party-section">
      <h2 class="section-title">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
          <circle cx="9" cy="7" r="4"></circle>
          <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
          <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
        </svg>
        The Party
      </h2>

      {activeParty.length > 0 ? (
        <div class="party-grid">
          {activeParty.map((character: typeof activeParty[0]) => (
            <div class="character-card">
              <a href={`/campaign/characters/${character.id}`} class="character-card-link">
                <div class="character-header">
                  <h3 class="character-name">{character.data.name}</h3>
                  {character.data.level && (
                    <span class="character-level">Lvl {character.data.level}</span>
                  )}
                </div>

                <div class="character-info">
                  {character.data.race && (
                    <span class="character-tag">{character.data.race}</span>
                  )}
                  {character.data.class && (
                    <span class="character-tag character-tag--class">
                      {character.data.class}
                      {character.data.subclass && ` (${character.data.subclass})`}
                    </span>
                  )}
                </div>

                {character.data.player && (
                  <div class="character-player">
                    <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                      <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                      <circle cx="12" cy="7" r="4"></circle>
                    </svg>
                    <span>{character.data.player}</span>
                  </div>
                )}

                {character.data.description && (
                  <p class="character-description">
                    {character.data.description.slice(0, 100)}...
                  </p>
                )}
              </a>

            </div>
          ))}
        </div>
      ) : (
        <div class="empty-state">
          <p>No active party members found.</p>
        </div>
      )}
    </section>

    <!-- Player Tools -->
    <section class="tools-section">
      <h2 class="section-title">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <circle cx="12" cy="12" r="3"></circle>
          <path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2 2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1-2-2 2 2 0 0 1 2-2h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06a1.65 1.65 0 0 0 1.82.33H9a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 2-2 2 2 0 0 1 2 2v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82V9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09a1.65 1.65 0 0 0-1.51 1z"></path>
        </svg>
        Player Tools
      </h2>

      <div class="tools-grid">
        <!-- Party Synergies -->
        <a href="/party/synergies" class="tool-card">
          <div class="tool-icon tool-icon--active">
            <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M12 2L2 7l10 5 10-5-10-5z"></path>
              <path d="M2 17l10 5 10-5"></path>
              <path d="M2 12l10 5 10-5"></path>
            </svg>
          </div>
          <div class="tool-content">
            <h3 class="tool-title">Party Synergies</h3>
            <p class="tool-description">Combat combos, weapon masteries, and tactical tips for working together.</p>
          </div>
        </a>

        <!-- Rules Guide -->
        <a href="/party/rules-guide" class="tool-card">
          <div class="tool-icon tool-icon--active">
            <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"></path>
              <path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"></path>
            </svg>
          </div>
          <div class="tool-content">
            <h3 class="tool-title">2e â†’ 5e 2024 Guide</h3>
            <p class="tool-description">Quick reference for AD&D 2e veterans learning 5e 2024 rules.</p>
          </div>
        </a>

        <!-- Eberron World Guide -->
        <a href="/party/eberron" class="tool-card">
          <div class="tool-icon tool-icon--active">
            <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="12" cy="12" r="10"></circle>
              <line x1="2" y1="12" x2="22" y2="12"></line>
              <path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path>
            </svg>
          </div>
          <div class="tool-content">
            <h3 class="tool-title">Eberron Guide</h3>
            <p class="tool-description">World setting, locations, and what we've discovered in our campaign.</p>
          </div>
        </a>

        <!-- Character Sheets (Coming Soon) -->
        <div class="tool-card tool-card--disabled">
          <div class="tool-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
              <polyline points="14 2 14 8 20 8"></polyline>
              <line x1="16" y1="13" x2="8" y2="13"></line>
              <line x1="16" y1="17" x2="8" y2="17"></line>
              <polyline points="10 9 9 9 8 9"></polyline>
            </svg>
          </div>
          <div class="tool-content">
            <h3 class="tool-title">Character Sheets</h3>
            <p class="tool-description">Interactive character sheets with real-time updates.</p>
            <span class="coming-soon-badge">Coming Soon</span>
          </div>
        </div>

        <!-- Session Notes (Coming Soon) -->
        <div class="tool-card tool-card--disabled">
          <div class="tool-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
              <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
            </svg>
          </div>
          <div class="tool-content">
            <h3 class="tool-title">Player Notes</h3>
            <p class="tool-description">Personal notes and session recaps.</p>
            <span class="coming-soon-badge">Coming Soon</span>
          </div>
        </div>
      </div>
    </section>
  </div>
</BaseLayout>

<style>
  .player-dashboard {
    padding: var(--space-xl) var(--space-lg);
    max-width: 1000px;
    margin: 0 auto;
  }

  .dashboard-header {
    text-align: center;
    margin-bottom: var(--space-2xl);
  }

  .dashboard-title {
    font-family: var(--font-display);
    font-size: var(--text-3xl);
    color: var(--color-accent);
    margin: 0 0 var(--space-sm);
  }

  .dashboard-subtitle {
    color: var(--color-text-secondary);
    font-size: var(--text-lg);
    margin: 0;
  }

  /* Sections */
  .party-section,
  .tools-section {
    margin-bottom: var(--space-2xl);
  }

  .section-title {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    font-family: var(--font-display);
    font-size: var(--text-xl);
    color: var(--color-gold);
    margin: 0 0 var(--space-lg);
    padding-bottom: var(--space-sm);
    border-bottom: 2px solid var(--color-gold);
  }

  .section-title svg {
    flex-shrink: 0;
  }

  /* Party Grid */
  .party-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: var(--space-lg);
  }

  .character-card {
    position: relative;
    display: flex;
    flex-direction: column;
    background: var(--color-bg-secondary);
    border: 2px solid var(--color-gold);
    border-radius: var(--radius-lg);
    overflow: visible;
    transition: all var(--transition-fast);
  }

  .character-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(var(--color-gold-rgb, 201, 162, 39), 0.2);
  }

  .character-card-link {
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
    padding: var(--space-lg);
    padding-bottom: var(--space-md);
    text-decoration: none;
    color: var(--color-text);
    flex: 1;
  }

  .character-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .character-name {
    font-family: var(--font-display);
    font-size: var(--text-lg);
    color: var(--color-gold);
    margin: 0;
  }

  .character-level {
    background: var(--color-gold);
    color: var(--color-bg);
    padding: 2px 10px;
    border-radius: var(--radius-sm);
    font-size: var(--text-sm);
    font-weight: 700;
  }

  .character-info {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-xs);
  }

  .character-tag {
    background: var(--color-bg-tertiary);
    padding: 2px 8px;
    border-radius: var(--radius-sm);
    font-size: var(--text-xs);
    color: var(--color-text-muted);
  }

  .character-tag--class {
    color: var(--color-accent);
  }

  .character-player {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    font-size: var(--text-sm);
    color: var(--color-text-muted);
  }

  .character-description {
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    margin: 0;
    line-height: 1.5;
  }

  .empty-state {
    text-align: center;
    padding: var(--space-xl);
    color: var(--color-text-muted);
  }

  /* Tools Grid */
  .tools-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: var(--space-lg);
  }

  .tool-card {
    display: flex;
    gap: var(--space-md);
    padding: var(--space-lg);
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
  }

  .tool-card--disabled {
    opacity: 0.6;
  }

  a.tool-card {
    text-decoration: none;
    color: inherit;
    transition: all var(--transition-fast);
  }

  a.tool-card:hover {
    border-color: var(--color-gold);
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
  }

  a.tool-card:hover .tool-title {
    color: var(--color-gold);
  }

  .tool-icon--active {
    background: var(--color-gold);
    color: var(--color-bg);
  }

  .tool-icon {
    flex-shrink: 0;
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: var(--radius-md);
    background: var(--color-bg-tertiary);
    color: var(--color-text-muted);
  }

  .tool-content {
    flex: 1;
  }

  .tool-title {
    font-family: var(--font-display);
    font-size: var(--text-base);
    color: var(--color-text);
    margin: 0 0 var(--space-xs);
  }

  .tool-description {
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    margin: 0;
  }

  .coming-soon-badge {
    display: inline-block;
    margin-top: var(--space-sm);
    padding: 2px var(--space-sm);
    background: var(--color-bg-tertiary);
    border-radius: var(--radius-sm);
    font-size: var(--text-xs);
    color: var(--color-text-muted);
    text-transform: uppercase;
    font-weight: 600;
  }

  @media (max-width: 640px) {
    .party-grid,
    .tools-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
