---
/**
 * Player Dashboard Landing Page
 * Central hub for player resources - party overview and future features.
 * Requires player authentication to access full features.
 */

import { getCollection } from 'astro:content';
import BaseLayout from '@layouts/BaseLayout.astro';

// Get active party members (PCs with active status)
const allCharacters = await getCollection('characters');
const activeParty = allCharacters
  .filter((c: typeof allCharacters[0]) => c.data.subtype === 'pc' && c.data.status === 'active')
  .sort((a: typeof allCharacters[0], b: typeof allCharacters[0]) => a.data.name.localeCompare(b.data.name));

// API URL for token validation
const apiUrl = import.meta.env.PUBLIC_DM_NOTES_API_URL || '';
---

<BaseLayout
  title="Player Hub - Rudiger's Evocation of Events"
  description="Player resources and party information."
>
  <div class="player-dashboard">
    <!-- Auth Gate - shown until authenticated -->
    <div id="auth-gate" class="auth-gate">
      <div class="auth-content">
        <div class="auth-icon">
          <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
            <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
            <circle cx="12" cy="7" r="4"></circle>
          </svg>
        </div>
        <h1 class="auth-title">Player Access</h1>
        <p class="auth-description">Enter your player token to access party resources and tools.</p>
        <form id="auth-form" class="auth-form">
          <label for="player-token" class="visually-hidden">Player Token</label>
          <input
            type="password"
            id="player-token"
            class="auth-input"
            placeholder="Enter player token..."
            autocomplete="off"
            required
          />
          <button type="submit" class="auth-btn">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M15 3h4a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2h-4"></path>
              <polyline points="10 17 15 12 10 7"></polyline>
              <line x1="15" y1="12" x2="3" y2="12"></line>
            </svg>
            Enter
          </button>
        </form>
        <p id="auth-error" class="auth-error" style="display: none;">Invalid token. Please try again.</p>
      </div>
    </div>

    <!-- Dashboard Content - shown after authentication -->
    <div id="dashboard-content" class="dashboard-content" style="display: none;">
      <header class="dashboard-header">
        <h1 class="dashboard-title">Player Hub</h1>
        <p class="dashboard-subtitle">Party resources and character tools</p>
      </header>

      <!-- Active Party Section -->
      <section class="party-section">
        <h2 class="section-title">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
            <circle cx="9" cy="7" r="4"></circle>
            <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
            <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
          </svg>
          The Party
        </h2>

        {activeParty.length > 0 ? (
          <div class="party-grid">
            {activeParty.map((character: typeof activeParty[0]) => (
              <div class="character-card">
                <a href={`/campaign/characters/${character.id}`} class="character-card-link">
                  <div class="character-header">
                    <h3 class="character-name">{character.data.name}</h3>
                    {character.data.level && (
                      <span class="character-level">Lvl {character.data.level}</span>
                    )}
                  </div>

                  <div class="character-info">
                    {character.data.race && (
                      <span class="character-tag">{character.data.race}</span>
                    )}
                    {character.data.class && (
                      <span class="character-tag character-tag--class">
                        {character.data.class}
                        {character.data.subclass && ` (${character.data.subclass})`}
                      </span>
                    )}
                  </div>

                  {character.data.player && (
                    <div class="character-player">
                      <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                        <circle cx="12" cy="7" r="4"></circle>
                      </svg>
                      <span>{character.data.player}</span>
                    </div>
                  )}

                  {character.data.description && (
                    <p class="character-description">
                      {character.data.description.slice(0, 100)}...
                    </p>
                  )}
                </a>

                <a href={`/party/session/${character.id}`} class="session-tracker-btn">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
                  </svg>
                  Session Tracker
                </a>
              </div>
            ))}
          </div>
        ) : (
          <div class="empty-state">
            <p>No active party members found.</p>
          </div>
        )}
      </section>

      <!-- Player Tools -->
      <section class="tools-section">
        <h2 class="section-title">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="12" cy="12" r="3"></circle>
            <path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2 2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1-2-2 2 2 0 0 1 2-2h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06a1.65 1.65 0 0 0 1.82.33H9a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 2-2 2 2 0 0 1 2 2v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82V9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09a1.65 1.65 0 0 0-1.51 1z"></path>
          </svg>
          Player Tools
        </h2>

        <div class="tools-grid">
          <!-- Party Synergies -->
          <a href="/party/synergies" class="tool-card">
            <div class="tool-icon tool-icon--active">
              <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M12 2L2 7l10 5 10-5-10-5z"></path>
                <path d="M2 17l10 5 10-5"></path>
                <path d="M2 12l10 5 10-5"></path>
              </svg>
            </div>
            <div class="tool-content">
              <h3 class="tool-title">Party Synergies</h3>
              <p class="tool-description">Combat combos, weapon masteries, and tactical tips for working together.</p>
            </div>
          </a>

          <!-- Character Sheets (Coming Soon) -->
          <div class="tool-card tool-card--disabled">
            <div class="tool-icon">
              <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                <polyline points="14 2 14 8 20 8"></polyline>
                <line x1="16" y1="13" x2="8" y2="13"></line>
                <line x1="16" y1="17" x2="8" y2="17"></line>
                <polyline points="10 9 9 9 8 9"></polyline>
              </svg>
            </div>
            <div class="tool-content">
              <h3 class="tool-title">Character Sheets</h3>
              <p class="tool-description">Interactive character sheets with real-time updates.</p>
              <span class="coming-soon-badge">Coming Soon</span>
            </div>
          </div>

          <!-- Session Notes (Coming Soon) -->
          <div class="tool-card tool-card--disabled">
            <div class="tool-icon">
              <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
              </svg>
            </div>
            <div class="tool-content">
              <h3 class="tool-title">Player Notes</h3>
              <p class="tool-description">Personal notes and session recaps.</p>
              <span class="coming-soon-badge">Coming Soon</span>
            </div>
          </div>
        </div>
      </section>

      <footer class="dashboard-footer">
        <button id="logout-btn" class="logout-btn">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path>
            <polyline points="16 17 21 12 16 7"></polyline>
            <line x1="21" y1="12" x2="9" y2="12"></line>
          </svg>
          Sign Out
        </button>
      </footer>
    </div>
  </div>
</BaseLayout>

<script is:inline define:vars={{ apiUrl }}>
  (function() {
    var TOKEN_KEY = 'player-token';
    var API_URL = apiUrl;
    var authGate = document.getElementById('auth-gate');
    var dashboardContent = document.getElementById('dashboard-content');
    var authForm = document.getElementById('auth-form');
    var authError = document.getElementById('auth-error');
    var tokenInput = document.getElementById('player-token');
    var logoutBtn = document.getElementById('logout-btn');
    var submitBtn = authForm.querySelector('button[type="submit"]');
    var btnTextSpan = submitBtn.querySelector('span') || submitBtn;

    // Validate token against server (per-character tokens)
    async function validateToken(token) {
      if (!API_URL) {
        console.warn('API URL not configured, skipping server validation');
        return { valid: true, characterSlug: null }; // Graceful degradation for local dev
      }

      try {
        var response = await fetch(API_URL + '/validate-character-token', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
            'X-Player-Token': token,
          },
        });

        if (!response.ok) {
          return { valid: false, characterSlug: null };
        }

        var data = await response.json();
        return { valid: data.valid === true, characterSlug: data.characterSlug || null };
      } catch (error) {
        console.error('Token validation error:', error);
        return { valid: false, characterSlug: null };
      }
    }

    async function checkAuth() {
      var token = localStorage.getItem(TOKEN_KEY);
      if (token) {
        // Validate stored token server-side
        var result = await validateToken(token);
        if (result.valid) {
          showDashboard(result.characterSlug);
        } else {
          // Invalid stored token, clear it
          localStorage.removeItem(TOKEN_KEY);
          localStorage.removeItem('player-character-slug');
          showAuthGate();
        }
      }
    }

    function showDashboard(characterSlug) {
      // Store character slug for session tracker access
      if (characterSlug) {
        localStorage.setItem('player-character-slug', characterSlug);
        // Redirect directly to the character's dashboard
        window.location.href = '/party/session/' + characterSlug;
        return;
      }

      // Fallback: show party list if no character slug (shouldn't happen with per-character tokens)
      authGate.style.display = 'none';
      dashboardContent.style.display = 'block';
    }

    function highlightCharacterCard(slug) {
      // Find and highlight the character card for the logged-in user
      var cards = document.querySelectorAll('.character-card');
      cards.forEach(function(card) {
        var link = card.querySelector('.character-card-link');
        if (link && link.href.includes('/' + slug)) {
          card.classList.add('character-card--current');
        }
      });
    }

    function showAuthGate() {
      authGate.style.display = 'flex';
      dashboardContent.style.display = 'none';
    }

    function setLoading(loading) {
      submitBtn.disabled = loading;
      // Find the text node or span to update
      var textNode = submitBtn.lastChild;
      if (textNode && textNode.nodeType === Node.TEXT_NODE) {
        textNode.textContent = loading ? 'Validating...' : ' Enter';
      }
    }

    authForm.addEventListener('submit', async function(e) {
      e.preventDefault();
      var token = tokenInput.value.trim();

      if (token) {
        setLoading(true);
        authError.style.display = 'none';

        var result = await validateToken(token);

        setLoading(false);

        if (result.valid) {
          localStorage.setItem(TOKEN_KEY, token);
          showDashboard(result.characterSlug);
        } else {
          authError.textContent = 'Invalid token. Please try again.';
          authError.style.display = 'block';
        }
      }
    });

    logoutBtn.addEventListener('click', function() {
      localStorage.removeItem(TOKEN_KEY);
      localStorage.removeItem('player-character-slug');
      // Remove highlight from character cards
      document.querySelectorAll('.character-card--current').forEach(function(card) {
        card.classList.remove('character-card--current');
      });
      showAuthGate();
      tokenInput.value = '';
    });

    // Check auth on load
    checkAuth();
  })();
</script>

<style>
  .player-dashboard {
    min-height: 80vh;
  }

  /* Auth Gate */
  .auth-gate {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 70vh;
    padding: var(--space-xl);
  }

  .auth-content {
    text-align: center;
    max-width: 400px;
  }

  .auth-icon {
    color: var(--color-accent);
    margin-bottom: var(--space-lg);
  }

  .auth-title {
    font-family: var(--font-display);
    font-size: var(--text-2xl);
    color: var(--color-text);
    margin: 0 0 var(--space-sm);
  }

  .auth-description {
    color: var(--color-text-secondary);
    margin: 0 0 var(--space-xl);
  }

  .auth-form {
    display: flex;
    gap: var(--space-sm);
  }

  .auth-input {
    flex: 1;
    padding: var(--space-md);
    border: 2px solid var(--color-border);
    border-radius: var(--radius-md);
    background: var(--color-bg-secondary);
    color: var(--color-text);
    font-size: var(--text-base);
  }

  .auth-input:focus {
    outline: none;
    border-color: var(--color-accent);
  }

  .auth-btn {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    padding: var(--space-md) var(--space-lg);
    background: var(--color-accent);
    color: white;
    border: none;
    border-radius: var(--radius-md);
    font-weight: 600;
    cursor: pointer;
    transition: all var(--transition-fast);
  }

  .auth-btn:hover {
    background: var(--color-accent-hover);
    transform: translateY(-1px);
  }

  .auth-error {
    color: var(--color-error);
    margin-top: var(--space-md);
    font-size: var(--text-sm);
  }

  .visually-hidden {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }

  /* Dashboard Content */
  .dashboard-content {
    padding: var(--space-xl) var(--space-lg);
    max-width: 1000px;
    margin: 0 auto;
  }

  .dashboard-header {
    text-align: center;
    margin-bottom: var(--space-2xl);
  }

  .dashboard-title {
    font-family: var(--font-display);
    font-size: var(--text-3xl);
    color: var(--color-accent);
    margin: 0 0 var(--space-sm);
  }

