---
/**
 * Glossary Index Page
 * Browse all rules glossary terms with filtering by category.
 */

import { getCollection } from 'astro:content';
import BaseLayout from '@layouts/BaseLayout.astro';

// Get all glossary terms
const allTerms = await getCollection('glossary');

// Sort alphabetically by name
const sortedTerms = allTerms.sort((a: typeof allTerms[0], b: typeof allTerms[0]) =>
  a.data.name.localeCompare(b.data.name)
);

// Category type
type Category = 'action' | 'condition' | 'area-of-effect' | 'hazard' | 'attitude' | 'skill';

// Extract unique categories (filter out undefined)
type GlossaryEntry = typeof sortedTerms[0];
const categorySet = new Set(
  sortedTerms
    .map((t: GlossaryEntry) => t.data.category)
    .filter((c: GlossaryEntry['data']['category']): c is Category => c !== undefined)
);
const categories: Category[] = [...categorySet].sort() as Category[];

// Category colors
const categoryColors: Record<string, string> = {
  condition: '#dc2626',
  action: '#16a34a',
  'area-of-effect': '#d97706',
  hazard: '#6b21a8',
  attitude: '#2563eb',
  skill: '#0891b2', // Cyan for skills
};

function formatCategory(cat: string): string {
  return cat.replace('-', ' ');
}
---

<BaseLayout
  title="Rules Glossary - D&D Reference"
  description="Browse the D&D 5e 2024 rules glossary. Quick reference for conditions, actions, and game mechanics."
>
  <div class="container">
    <header class="page-header">
      <h1 class="page-title">Rules Glossary</h1>
      <p class="page-description">
        {sortedTerms.length} terms from the D&D 5e 2024 SRD
      </p>
    </header>

    <!-- Filters -->
    <div class="filters">
      <div class="filter-group">
        <label class="filter-label">Category</label>
        <div class="filter-options" data-filter="category">
          <button class="filter-btn active" data-value="all">All</button>
          {categories.map(cat => (
            <button
              class="filter-btn"
              data-value={cat}
              style={`--cat-color: ${categoryColors[cat] || 'var(--color-accent)'}`}
            >
              {formatCategory(cat)}
            </button>
          ))}
        </div>
      </div>

      <div class="filter-group filter-group--search">
        <label class="filter-label" for="term-search">Search</label>
        <input
          type="text"
          id="term-search"
          class="search-input"
          placeholder="Search terms..."
        />
      </div>
    </div>

    <!-- Results count -->
    <div class="results-count">
      Showing <span id="visible-count">{sortedTerms.length}</span> of {sortedTerms.length} terms
    </div>

    <!-- Terms List -->
    <div class="terms-list" id="terms-list">
      {sortedTerms.map((term: GlossaryEntry) => (
        <a
          href={`/glossary/${term.data.slug}`}
          class="term-card"
          data-category={term.data.category || ''}
          data-name={term.data.name.toLowerCase()}
        >
          <div class="term-card__header">
            <h2 class="term-name">{term.data.name}</h2>
            {term.data.category && (
              <span
                class="term-category"
                style={`--cat-color: ${categoryColors[term.data.category] || 'var(--color-accent)'}`}
              >
                {formatCategory(term.data.category)}
              </span>
            )}
          </div>
          <p class="term-description">{term.data.description}</p>
        </a>
      ))}
    </div>
  </div>
</BaseLayout>

<script>
  // Client-side filtering
  let categoryFilter = 'all';
  let searchTerm = '';

  const cards = document.querySelectorAll('.term-card') as NodeListOf<HTMLElement>;
  const visibleCount = document.getElementById('visible-count');

  function updateFilters() {
    let count = 0;

    cards.forEach(card => {
      const category = card.dataset.category || '';
      const name = card.dataset.name || '';

      const matchesCategory = categoryFilter === 'all' || category === categoryFilter;
      const matchesSearch = !searchTerm || name.includes(searchTerm.toLowerCase());

      if (matchesCategory && matchesSearch) {
        card.style.display = '';
        count++;
      } else {
        card.style.display = 'none';
      }
    });

    if (visibleCount) {
      visibleCount.textContent = String(count);
    }
  }

  // Filter button handlers
  document.querySelectorAll('.filter-options').forEach(group => {
    group.querySelectorAll('.filter-btn').forEach(btn => {
      btn.addEventListener('click', () => {
        group.querySelectorAll('.filter-btn').forEach(b => b.classList.remove('active'));
        btn.classList.add('active');
        categoryFilter = (btn as HTMLElement).dataset.value || 'all';
        updateFilters();
      });
    });
  });

  // Search handler
  const searchInput = document.getElementById('term-search') as HTMLInputElement;
  searchInput?.addEventListener('input', (e) => {
    searchTerm = (e.target as HTMLInputElement).value;
    updateFilters();
  });
</script>

<style>
  .page-header {
    text-align: center;
    padding: var(--space-xl) 0 var(--space-lg);
  }

  .page-title {
    font-size: var(--text-3xl);
    margin: 0 0 var(--space-sm);
  }

  .page-description {
    color: var(--color-text-secondary);
    font-size: var(--text-lg);
    margin: 0;
  }

  /* Filters */
  .filters {
    background: var(--color-bg-secondary);
    border-radius: var(--radius-lg);
    padding: var(--space-lg);
    margin-bottom: var(--space-lg);
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-md);
  }

  .filter-group {
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
  }

  .filter-label {
    font-size: var(--text-sm);
    font-weight: 600;
    color: var(--color-text-muted);
    text-transform: uppercase;
  }

  .filter-options {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-xs);
  }

  .filter-btn {
    padding: var(--space-xs) var(--space-sm);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-sm);
    background: var(--color-bg);
    color: var(--color-text-secondary);
    font-size: var(--text-sm);
    cursor: pointer;
    transition: all var(--transition-fast);
    text-transform: capitalize;
  }

  .filter-btn:hover {
    border-color: var(--cat-color, var(--color-accent));
    color: var(--cat-color, var(--color-accent));
  }

  .filter-btn.active {
    background: var(--cat-color, var(--color-accent));
    border-color: var(--cat-color, var(--color-accent));
    color: white;
  }

  .filter-group--search {
    flex: 1;
    min-width: 200px;
  }

  .search-input {
    padding: var(--space-sm) var(--space-md);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-sm);
    background: var(--color-bg);
    color: var(--color-text);
    font-size: var(--text-sm);
    width: 100%;
  }

  .search-input:focus {
    outline: none;
    border-color: var(--color-accent);
  }

  .results-count {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    margin-bottom: var(--space-md);
  }

  /* Terms List */
  .terms-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
  }

  .term-card {
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    padding: var(--space-md) var(--space-lg);
    text-decoration: none;
    color: var(--color-text);
    transition: all var(--transition-fast);
  }

  .term-card:hover {
    border-color: var(--color-accent);
    background: var(--color-bg-tertiary);
  }

  .term-card__header {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    margin-bottom: var(--space-xs);
  }

  .term-name {
    font-family: var(--font-display);
    font-size: var(--text-md);
    margin: 0;
    color: var(--color-text);
  }

  .term-category {
    font-size: var(--text-xs);
    padding: 2px 8px;
    border-radius: var(--radius-sm);
    text-transform: capitalize;
    font-weight: 500;
    background: var(--cat-color, var(--color-accent));
    color: white;
  }

  .term-description {
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    margin: 0;
    line-height: 1.5;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
