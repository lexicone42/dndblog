---
import BaseLayout from '@layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

// Load all entity collections
const characters = await getCollection('characters');
const enemies = await getCollection('enemies');
const locations = await getCollection('locations');
const factions = await getCollection('factions');
const items = await getCollection('items');

// Type aliases for entity collections
type CharacterEntry = typeof characters[0];
type EnemyEntry = typeof enemies[0];
type LocationEntry = typeof locations[0];
type FactionEntry = typeof factions[0];
type ItemEntry = typeof items[0];

// Sort each collection alphabetically by name
const sortByName = <T extends { data: { name: string } }>(a: T, b: T) => a.data.name.localeCompare(b.data.name);
characters.sort(sortByName);
enemies.sort(sortByName);
locations.sort(sortByName);
factions.sort(sortByName);
items.sort(sortByName);

// Group characters by subtype
const partyMembers = characters.filter((c: CharacterEntry) => c.data.subtype === 'pc');
const npcs = characters.filter((c: CharacterEntry) => c.data.subtype === 'npc');

// Status badge colors
const statusColors: Record<string, string> = {
  active: 'status--active',
  inactive: 'status--inactive',
  dead: 'status--dead',
  destroyed: 'status--dead',
  unknown: 'status--unknown',
  dormant: 'status--inactive',
};

function getStatusClass(status: string): string {
  return statusColors[status] || 'status--unknown';
}
---

<BaseLayout
  title="Campaign Reference - Rudiger's Evocation of Events"
  description="Quick reference guide for characters, locations, factions, and items in our campaign"
>
  <div class="reference-page">
    <header class="reference-header">
      <h1>Campaign Reference</h1>
      <p class="reference-subtitle">Quick lookup for campaign lore, characters, and world details</p>
      <p class="reference-stats">
        {characters.length} characters 路 {enemies.length} enemies 路 {locations.length} locations 路 {factions.length} factions 路 {items.length} items
      </p>
    </header>

    <nav class="reference-nav">
      <ul class="reference-nav__list">
        <li><a href="#party" class="reference-nav__link">The Party</a></li>
        <li><a href="#npcs" class="reference-nav__link">NPCs</a></li>
        <li><a href="#enemies" class="reference-nav__link">Enemies</a></li>
        <li><a href="#locations" class="reference-nav__link">Locations</a></li>
        <li><a href="#factions" class="reference-nav__link">Factions</a></li>
        <li><a href="#items" class="reference-nav__link">Items</a></li>
      </ul>
    </nav>

    <div class="reference-content">
      <!-- The Party -->
      <section id="party" class="reference-section">
        <h2 class="section-title">The Party</h2>
        <div class="entity-grid">
          {partyMembers.map((entity: CharacterEntry) => (
            <a href={`/campaign/characters/${entity.id}`} class="entity-card">
              <div class="entity-card__header">
                <h3 class="entity-card__name">{entity.data.name}</h3>
                <span class={`entity-card__status ${getStatusClass(entity.data.status)}`}>
                  {entity.data.status}
                </span>
              </div>
              {entity.data.class && (
                <p class="entity-card__class">{entity.data.class}</p>
              )}
              {entity.data.description && (
                <p class="entity-card__desc">{entity.data.description}</p>
              )}
            </a>
          ))}
        </div>
      </section>

      <!-- NPCs -->
      <section id="npcs" class="reference-section">
        <h2 class="section-title">NPCs</h2>
        <div class="entity-grid">
          {npcs.map((entity: CharacterEntry) => (
            <a href={`/campaign/characters/${entity.id}`} class="entity-card">
              <div class="entity-card__header">
                <h3 class="entity-card__name">{entity.data.name}</h3>
                <span class={`entity-card__status ${getStatusClass(entity.data.status)}`}>
                  {entity.data.status}
                </span>
              </div>
              {entity.data.description && (
                <p class="entity-card__desc">{entity.data.description}</p>
              )}
            </a>
          ))}
        </div>
      </section>

      <!-- Enemies -->
      <section id="enemies" class="reference-section">
        <h2 class="section-title">Enemies</h2>
        <div class="entity-grid">
          {enemies.map((entity: EnemyEntry) => (
            <a href={`/campaign/enemies/${entity.id}`} class="entity-card entity-card--enemy">
              <div class="entity-card__header">
                <h3 class="entity-card__name">{entity.data.name}</h3>
                <span class={`entity-card__status ${getStatusClass(entity.data.status)}`}>
                  {entity.data.status}
                </span>
              </div>
              {entity.data.subtype && (
                <p class="entity-card__type">{entity.data.subtype}</p>
              )}
              {entity.data.description && (
                <p class="entity-card__desc">{entity.data.description}</p>
              )}
            </a>
          ))}
        </div>
      </section>

      <!-- Locations -->
      <section id="locations" class="reference-section">
        <h2 class="section-title">Locations</h2>
        <div class="entity-grid">
          {locations.map((entity: LocationEntry) => (
            <a href={`/campaign/locations/${entity.id}`} class="entity-card entity-card--location">
              <div class="entity-card__header">
                <h3 class="entity-card__name">{entity.data.name}</h3>
                <span class={`entity-card__status ${getStatusClass(entity.data.status)}`}>
                  {entity.data.status}
                </span>
              </div>
              {entity.data.subtype && (
                <p class="entity-card__type">{entity.data.subtype}</p>
              )}
              {entity.data.description && (
                <p class="entity-card__desc">{entity.data.description}</p>
              )}
            </a>
          ))}
        </div>
      </section>

      <!-- Factions -->
      <section id="factions" class="reference-section">
        <h2 class="section-title">Factions</h2>
        <div class="entity-grid">
          {factions.map((entity: FactionEntry) => (
            <a href={`/campaign/factions/${entity.id}`} class="entity-card entity-card--faction">
              <div class="entity-card__header">
                <h3 class="entity-card__name">{entity.data.name}</h3>
                <span class={`entity-card__status ${getStatusClass(entity.data.status)}`}>
                  {entity.data.status}
                </span>
              </div>
              {entity.data.subtype && (
                <p class="entity-card__type">{entity.data.subtype}</p>
              )}
              {entity.data.description && (
                <p class="entity-card__desc">{entity.data.description}</p>
              )}
            </a>
          ))}
        </div>
      </section>

      <!-- Items -->
      <section id="items" class="reference-section">
        <h2 class="section-title">Items & Artifacts</h2>
        <div class="entity-grid">
          {items.map((entity: ItemEntry) => (
            <a href={`/campaign/items/${entity.id}`} class="entity-card entity-card--item">
              <div class="entity-card__header">
                <h3 class="entity-card__name">{entity.data.name}</h3>
                {entity.data.rarity && (
                  <span class={`entity-card__rarity rarity--${entity.data.rarity}`}>
                    {entity.data.rarity}
                  </span>
                )}
              </div>
              {entity.data.subtype && (
                <p class="entity-card__type">{entity.data.subtype}</p>
              )}
              {entity.data.description && (
                <p class="entity-card__desc">{entity.data.description}</p>
              )}
            </a>
          ))}
        </div>
      </section>
    </div>
  </div>
</BaseLayout>

<script>
  // Smooth scroll for anchor links
  document.querySelectorAll('.reference-nav__link').forEach(link => {
    link.addEventListener('click', (e) => {
      e.preventDefault();
      const targetId = (e.target as HTMLAnchorElement).getAttribute('href')?.slice(1);
      if (targetId) {
        const target = document.getElementById(targetId);
        if (target) {
          target.scrollIntoView({ behavior: 'smooth', block: 'start' });
          history.pushState(null, '', `#${targetId}`);
        }
      }
    });
  });

  // Highlight active section on scroll
  const sections = document.querySelectorAll('.reference-section');
  const navLinks = document.querySelectorAll('.reference-nav__link');

  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        const id = entry.target.getAttribute('id');
        navLinks.forEach(link => {
          link.classList.toggle('active', link.getAttribute('href') === `#${id}`);
        });
      }
    });
  }, { rootMargin: '-20% 0px -80% 0px' });

  sections.forEach(section => observer.observe(section));
</script>

<style>
  .reference-page {
    max-width: 1200px;
    margin: 0 auto;
    padding: var(--space-lg);
  }

  .reference-header {
    text-align: center;
    margin-bottom: var(--space-2xl);
    padding-bottom: var(--space-xl);
    border-bottom: 2px solid var(--color-border);
  }

  .reference-header h1 {
    font-family: var(--font-display);
    font-size: var(--text-4xl);
    color: var(--color-gold);
    margin-bottom: var(--space-sm);
  }

  .reference-subtitle {
    color: var(--color-text-muted);
    font-size: var(--text-lg);
    font-style: italic;
    margin-bottom: var(--space-sm);
  }

  .reference-stats {
    color: var(--color-text-secondary);
    font-size: var(--text-sm);
  }

  .reference-nav {
    position: sticky;
    top: 80px;
    background: var(--color-bg);
    padding: var(--space-md) 0;
    margin-bottom: var(--space-xl);
    border-bottom: 1px solid var(--color-border);
    z-index: 10;
  }

  .reference-nav__list {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-sm);
    list-style: none;
    padding: 0;
    margin: 0;
    justify-content: center;
  }

  .reference-nav__link {
    display: block;
    padding: var(--space-xs) var(--space-md);
    border: 2px solid var(--color-border);
    border-radius: var(--radius-md);
    color: var(--color-text);
    text-decoration: none;
    font-weight: 500;
    transition: all var(--transition-fast);
  }

  .reference-nav__link:hover,
  .reference-nav__link.active {
    border-color: var(--color-gold);
    color: var(--color-gold);
    background: var(--color-bg-secondary);
  }

  .reference-content {
    display: flex;
    flex-direction: column;
    gap: var(--space-3xl);
  }

  .reference-section {
    scroll-margin-top: 150px;
  }

  .section-title {
    font-family: var(--font-display);
    font-size: var(--text-2xl);
    color: var(--color-gold);
    margin-bottom: var(--space-lg);
    padding-bottom: var(--space-sm);
    border-bottom: 2px solid var(--color-gold);
  }

  .entity-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: var(--space-md);
  }

  .entity-card {
    display: block;
    padding: var(--space-md);
    background: var(--color-bg-secondary);
    border: 2px solid var(--color-border);
    border-radius: var(--radius-md);
    text-decoration: none;
    transition: all var(--transition-fast);
  }

  .entity-card:hover {
    border-color: var(--color-gold);
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
  }

  .entity-card--enemy {
    border-left: 4px solid var(--color-error);
  }

  .entity-card--location {
    border-left: 4px solid var(--color-accent);
  }

  .entity-card--faction {
    border-left: 4px solid var(--color-warning);
  }

  .entity-card--item {
    border-left: 4px solid var(--color-success);
  }

  .entity-card__header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: var(--space-sm);
    margin-bottom: var(--space-xs);
  }

  .entity-card__name {
    font-size: var(--text-lg);
    font-weight: 600;
    color: var(--color-text);
    margin: 0;
  }

  .entity-card__status {
    font-size: var(--text-xs);
    padding: 2px 6px;
    border-radius: var(--radius-sm);
    text-transform: uppercase;
    font-weight: 600;
    white-space: nowrap;
  }

  .status--active {
    background: var(--color-success);
    color: white;
  }

  .status--inactive {
    background: var(--color-text-muted);
    color: white;
  }

  .status--dead {
    background: var(--color-error);
    color: white;
  }

  .status--unknown {
    background: var(--color-warning);
    color: var(--color-bg);
  }

  .entity-card__class,
  .entity-card__type {
    font-size: var(--text-sm);
    color: var(--color-accent);
    margin: 0 0 var(--space-xs);
    text-transform: capitalize;
  }

  .entity-card__desc {
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    margin: 0;
    line-height: 1.5;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .entity-card__rarity {
    font-size: var(--text-xs);
    padding: 2px 6px;
    border-radius: var(--radius-sm);
    text-transform: capitalize;
    font-weight: 600;
  }

  .rarity--common {
    background: var(--color-text-muted);
    color: white;
  }

  .rarity--uncommon {
    background: #1eff00;
    color: black;
  }

  .rarity--rare {
    background: #0070dd;
    color: white;
  }

  .rarity--very-rare {
    background: #a335ee;
    color: white;
  }

  .rarity--legendary {
    background: #ff8000;
    color: white;
  }

  .rarity--artifact {
    background: linear-gradient(135deg, #e6cc80, #cfa13e);
    color: black;
  }

  @media (max-width: 768px) {
    .reference-nav {
      position: relative;
      top: 0;
    }

    .reference-nav__list {
      flex-direction: column;
      align-items: stretch;
    }

    .entity-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
