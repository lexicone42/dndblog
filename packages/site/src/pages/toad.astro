  asciiArt={toadArt}
  caption=""
  whisperText="He hopped into Whisperwood and was never seen again."
  artColor="#2d5a27"
  artColorDark="#4a9e44"
  artAnimation="animate-emerge"
  backgroundGradient="radial-gradient(ellipse at center, transparent 0%, rgba(0, 40, 0, 0.1) 100%)"
>
  <!-- Custom caption with frog emoji -->
  <div slot="caption" class="toad-caption-container">
    <span class="toad-emoji">üê∏</span>
