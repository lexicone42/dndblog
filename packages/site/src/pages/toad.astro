<style>
  .toad-page {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 70vh;
    padding: var(--space-xl);
    background: radial-gradient(ellipse at center, transparent 0%, rgba(0, 40, 0, 0.1) 100%);
  }

  .toad-title {
    font-style: italic;
    color: var(--color-text-muted);
    margin-bottom: var(--space-sm);
    font-size: var(--text-sm);
    letter-spacing: 0.2em;
    text-transform: uppercase;
    animation: flicker 4s ease-in-out infinite;
  }

  .toad-art {
    color: #2d5a27;
    font-size: clamp(0.25rem, 0.8vw, 0.5rem);
    line-height: 1.1;
    letter-spacing: 0.05em;
    font-family: monospace;
    text-align: center;
    margin: 0;
    animation: emerge 4s ease-in-out infinite;
    text-shadow: 0 0 20px rgba(34, 139, 34, 0.3);
  }

  :global(.dark) .toad-art {
    color: #4a9e44;
    text-shadow: 0 0 30px rgba(74, 158, 68, 0.5);
  }

  .toad-caption-container {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    margin-top: var(--space-xl);
  }

  .toad-emoji {
    font-size: var(--text-6xl);
    animation: hop 1.5s ease-in-out infinite;
    filter: drop-shadow(0 0 10px rgba(34, 139, 34, 0.6));
  }

  .toad-caption {
    font-size: var(--text-2xl);
    font-weight: 400;
    font-style: italic;
    color: #2d5a27;
    opacity: 0.8;
    animation: fadeInOut 3s ease-in-out infinite;
  }

  :global(.dark) .toad-caption {
    color: #6abf62;
  }

  .toad-whisper {
    margin-top: var(--space-2xl);
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    font-style: italic;
    text-align: center;
    max-width: 300px;
    opacity: 0;
    animation: whisper 8s ease-in-out infinite;
    animation-delay: 2s;
  }

  @keyframes emerge {
    0%, 100% {
      transform: translateY(0) scale(1);
      opacity: 0.9;
    }
    50% {
      transform: translateY(-8px) scale(1.02);
      opacity: 1;
    }
  }

  @keyframes hop {
    0%, 100% {
      transform: translateY(0) rotate(0deg);
    }
    15% {
      transform: translateY(-20px) rotate(-5deg);
    }
    30% {
      transform: translateY(0) rotate(0deg);
    }
  }

  @keyframes fadeInOut {
    0%, 100% { opacity: 0.4; }
    50% { opacity: 0.9; }
  }

  @keyframes whisper {
    0%, 20%, 100% { opacity: 0; }
    30%, 70% { opacity: 0.6; }
  }

  @keyframes flicker {
    0%, 100% { opacity: 0.5; }
    50% { opacity: 0.8; }
    52% { opacity: 0.4; }
    54% { opacity: 0.7; }
  }

  /* Spooky hover effect */
  .toad-page:hover .toad-emoji {
    animation: hopFaster 0.8s ease-in-out infinite;
  }

  @keyframes hopFaster {
    0%, 100% {
      transform: translateY(0) rotate(0deg);
    }
    25% {
      transform: translateY(-15px) rotate(-8deg);
    }
    50% {
      transform: translateY(0) rotate(0deg);
    }
    75% {
      transform: translateY(-10px) rotate(5deg);
    }
  }
</style>
