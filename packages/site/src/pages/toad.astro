<style is:global>
  /* Toad page title flicker */
  .meme-title {
    animation: flicker 4s ease-in-out infinite;
  }

  /* Toad art glow */
  .animate-emerge {
    text-shadow: 0 0 20px rgba(34, 139, 34, 0.3);
  }

  :global([data-theme='dark']) .animate-emerge,
  :global(.dark) .animate-emerge {
    text-shadow: 0 0 30px rgba(74, 158, 68, 0.5);
  }

  @media (prefers-color-scheme: dark) {
    :global(:root:not([data-theme='light'])) .animate-emerge {
      text-shadow: 0 0 30px rgba(74, 158, 68, 0.5);
    }
  }

  /* Caption container */
  .toad-caption-container {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    margin-top: var(--space-xl);
  }

  .toad-emoji {
    font-size: var(--text-6xl);
    animation: hop 1.5s ease-in-out infinite;
    filter: drop-shadow(0 0 10px rgba(34, 139, 34, 0.6));
  }

  .toad-caption {
    font-size: var(--text-2xl);
    font-weight: 400;
    font-style: italic;
    color: #2d5a27;
    opacity: 0.8;
    animation: fadeInOut 3s ease-in-out infinite;
    margin: 0;
  }

  :global([data-theme='dark']) .toad-caption,
  :global(.dark) .toad-caption {
    color: #6abf62;
  }

  @media (prefers-color-scheme: dark) {
    :global(:root:not([data-theme='light'])) .toad-caption {
      color: #6abf62;
    }
  }

  /* Spooky hover effect */
  .meme-page:hover .toad-emoji {
    animation: hop-faster 0.8s ease-in-out infinite;
  }
