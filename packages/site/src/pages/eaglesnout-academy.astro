<style is:global>
  /* Memorial page warm glow effect */
  .animate-memorial {
    text-shadow: 0 0 15px rgba(139, 69, 19, 0.2);
    animation: memorial-pulse 4s ease-in-out infinite;
  }

  :global([data-theme='dark']) .animate-memorial,
  :global(.dark) .animate-memorial {
    text-shadow: 0 0 25px rgba(210, 105, 30, 0.3);
  }

  @media (prefers-color-scheme: dark) {
    :global(:root:not([data-theme='light'])) .animate-memorial {
      text-shadow: 0 0 25px rgba(210, 105, 30, 0.3);
    }
  }

  @keyframes memorial-pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.9; }
  }

  /* Memorial caption styling */
  .memorial-caption-container {
    display: flex;
    align-items: center;
    gap: var(--space-lg);
    margin-top: var(--space-xl);
    padding: var(--space-lg);
    background: rgba(139, 69, 19, 0.05);
    border-radius: var(--radius-lg);
    border: 1px solid rgba(139, 69, 19, 0.2);
  }

  :global([data-theme='dark']) .memorial-caption-container,
  :global(.dark) .memorial-caption-container {
    background: rgba(210, 105, 30, 0.08);
    border-color: rgba(210, 105, 30, 0.3);
  }

  @media (prefers-color-scheme: dark) {
    :global(:root:not([data-theme='light'])) .memorial-caption-container {
      background: rgba(210, 105, 30, 0.08);
      border-color: rgba(210, 105, 30, 0.3);
    }
  }

  .memorial-icon {
    font-size: var(--text-3xl);
    opacity: 0.8;
  }

  .memorial-text {
    text-align: center;
    flex: 1;
  }

  .academy-name {
    font-family: var(--font-display);
    font-size: var(--text-2xl);
    color: #8B4513;
    margin: 0 0 var(--space-xs) 0;
    font-weight: 700;
  }

  :global([data-theme='dark']) .academy-name,
  :global(.dark) .academy-name {
    color: #D2691E;
  }

  @media (prefers-color-scheme: dark) {
    :global(:root:not([data-theme='light'])) .academy-name {
      color: #D2691E;
    }
  }

  .memorial-dedication {
    font-size: var(--text-lg);
    font-style: italic;
    color: var(--color-text-muted);
    margin: 0;
    opacity: 0.9;
  }

  /* Override meme-title for solemn effect */
  .meme-title {
    animation: none !important;
    opacity: 0.7;
  }
</style>
